<div class="card">
   <div class="card-body bg-medium-grey">
      <div class="row my-3">
         <div class="col-12">
            <div class="d-flex justify-content-center gap-2">
               <a href="javascript:void(0);" class="btn btn-xs  btn-primary fw-bold">Simple Search</a>
               <a href="<%= client_portal_path %>" class="btn  btn-xs btn-light fw-bold">Advanced Search</a>
            </div>
         </div>
      </div>
      <%= form_with url: client_portal_search_path, class: "search_box", method: :get do |f|%>
        <% if params[:grid].present? %>
        <%= f.hidden_field :grid, value: 'grid'%>
        <% end %>
        <% if params[:simple_search].present? %>
        <%= f.hidden_field :simple_search, value: true%>
        <% end %>
        
         <!-- start row of fields -->
         <div class="row">
            <div class="col-lg-6">
               <div class="row mb-3">
                  <div class="form-group">
                     <label class="text-sm text-black">Full Name</label>
                     <%= f.text_field :full_name, class: 'form-control py-1'%>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">First Name:</label>
                     <%= f.text_field :first_name, class: 'form-control py-1'%>

                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Last Name:</label>
                     <%= f.text_field :last_name, class: 'form-control py-1'%>

                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">From Attest Date:</label>
                     <%= f.date_field :from_attest_date, class: 'form-control py-1'%>

                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">To Attest Date:</label>
                     <!-- <input type="text" class="form-control py-1" placeholder=""> -->
                     <%= f.date_field :to_attest_date, class: 'form-control py-1'%>

                  </div>
               </div>
            </div>
            <div class="col-lg-6">
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Provider Type:</label>
                     <%= f.text_field :provider_type, class: "form-control py-1" %>
                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Specialty:</label>
                        <select class="form-select py-1" name="specialty">
                           <option value="">Select option</option>
                           <option value="PHYSICIAN ASSISTANT">PHYSICIAN ASSISTANT</option>
                           <!-- <option>Optionn 2</option> -->
                        </select>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Cred Status:</label>
                        <select class="form-select py-1" name="cred_status">
                           <option value="">Select option</option>
                           <option value="attested">Attested</option>
                           <option value="in-process">In Process</option>
                           <option value="pending">Pending Data Entry</option>
                           <option value="incomplete">Incomplete</option>
                           <option value="complete-application">Complete Application</option>
                           <option value="no-application">No Application</option>
                           <option value="psv">PSV</option>
                           <option value="returned">Returned</option>
                        </select>
                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Cred Cycle:</label>
                       <select class="form-select py-1" name="cred_cycle">
                        <option value="">Select option</option>
                          <option value="Cred">Cred</option>
                          <option value="Recred">Recred</option>
                       </select>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">VRC Status:</label>
                     <select class="form-select py-1">
                        <option>Option 1</option>
                        <option>Option 2</option>
                     </select>
                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">PSV Flag:</label>
                     <input type="text" name="" class="form-control py-1">
                  </div>
               </div>
            </div>
         </div>
         <!-- end of row of fields -->
         <!-- start of row of buttons -->
         <div class="row mt-4">
            <div class="col-lg-12 d-flex">
               <div class="flex-grow-1 justify-content-center align-items-center text-center">
                  <button class="btn btn-xs btn-primary fw-bold" style="margin-left: 10%;width: 150px;">Submit</button>
               </div>
               <div class="flex-shrink-0">   
                  <a href="javascript:void(0);" class="btn btn-xs btn-danger">Reset</a>
                  
               </div>
               
            </div>
         </div>
         <!-- end of row of buttons -->
      <% end %>
   </div>
</div>



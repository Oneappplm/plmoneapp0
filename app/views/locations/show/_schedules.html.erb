<div class="row mb-3">
   <div class="col-lg-12 card p-3">
      <div class="w-100 d-flex justify-content-between">
         <h3 class="text-primary">Schedules</h3>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="location_schedules">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
        <div class="w-100 collapsible" id="location_schedules">
          <% @location.schedules.each_with_index do |sched|%>
            <div class="row mb-1">
              <div class="col-lg-3">
                  <label>Day</label>
                  <p class="text-black fw-semibold"><%= sched&.day %></p>
              </div>
              <div class="col-lg-3">
                  <label>Start Time</label>
                  <p class="text-black fw-semibold"><%= sched&.start_time %></p>
              </div>
              <div class="col-lg-3">
                  <label>End Time</label>
                  <p class="text-black fw-semibold"><%= sched&.end_time %></p>
              </div>
            </div>
            <% end %>
        </div>
      </div>
    </div>
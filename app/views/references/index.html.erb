<div class="container d-flex justify-content-center">
  <div class="col-lg-8 col-md-10 col-sm-12">
    <h1 class="text-center mb-4">Professional References</h1>

    <% @references.each do |reference| %>
      <div class="card shadow-lg mb-4">
        <div class="card-body">
          <h4 class="card-title text-primary border-bottom pb-2">Reference Details</h4>

          <div class="row mb-3">
            <div class="col-lg-4">
              <label class="fw-bold text-muted">First Name:</label>
              <p class="mb-1"><%= reference.first_name %></p>
            </div>
            <div class="col-lg-2">
              <label class="fw-bold text-muted">Middle Name:</label>
              <p class="mb-1"><%= reference.middle_name.presence || 'N/A' %></p>
            </div>
            <div class="col-lg-4">
              <label class="fw-bold text-muted">Last Name:</label>
              <p class="mb-1"><%= reference.last_name %></p>
            </div>
            <div class="col-lg-2">
              <label class="fw-bold text-muted">Suffix:</label>
              <p class="mb-1"><%= reference.suffix.presence || 'N/A' %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Degree:</label>
              <p class="mb-1"><%= reference.degree %></p>
            </div>
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Primary Specialty:</label>
              <p class="mb-1"><%= reference.specialty.presence || 'N/A' %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Email Address:</label>
              <p class="mb-1"><%= reference.email_address %></p>
            </div>
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Telephone Number:</label>
              <p class="mb-1"><%= reference.telephone_number %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Contact Method:</label>
              <p class="mb-1"><%= reference.contact_method.humanize %></p>
            </div>
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Fax:</label>
              <p class="mb-1"><%= reference.fax.presence || 'N/A' %></p>
            </div>
          </div>

          <div class="row mb-3">
              <div class="col-lg-6">
                <label class="fw-bold text-muted">Address Line 1:</label>
                <p class="mb-1"><%= reference.address_line1.presence || "N/A" %></p>
              </div>
              <div class="col-lg-6">
                <label class="fw-bold text-muted">Address Line 2:</label>
                <p class="mb-1"><%= reference.address_line2.presence || "N/A" %></p>
              </div>
          </div>

          <div class="row mb-3">
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Mobile Number:</label>
              <p class="mb-1"><%= reference.mobile_number.presence || 'N/A' %></p>
            </div>
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Relationship:</label>
              <p class="mb-1"><%= reference.relationship.presence || 'N/A' %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Association Start Date:</label>
              <p class="mb-1"><%= reference.association_start_date %></p>
            </div>
            <div class="col-lg-6">
              <label class="fw-bold text-muted">Association End Date:</label>
              <p class="mb-1">
                <%= reference.association_end_date.presence || (reference.association_until_present ? 'Present' : 'N/A') %>
              </p>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-lg-4">
              <label class="fw-bold text-muted">City:</label>
              <p class="mb-1"><%= reference.city.presence || "N/A" %></p>
            </div>
            <div class="col-lg-4">
              <label class="fw-bold text-muted">State:</label>
              <p class="mb-1"><%= reference.state.presence || "N/A" %></p>
            </div>
            <div class="col-lg-4">
              <label class="fw-bold text-muted">Zip Code:</label>
              <p class="mb-1"><%= reference.zipcode.presence || "N/A" %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-lg-4">
              <label class="fw-bold text-muted">Ext:</label>
              <p class="mb-1"><%= reference.ext.presence || "N/A" %></p>
            </div>
            <div class="col-lg-4">
              <label class="fw-bold text-muted">Does Not Have Fax:</label>
              <p class="mb-1"><%= reference.does_not_have_fax? ? "Yes" : "No" %></p>
            </div>
            <div class="col-lg-4">
              <label class="fw-bold text-muted">Association Until Present:</label>
              <p class="mb-1"><%= reference.association_until_present? ? "Present" : "Not Present" %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>

  <div class="container d-flex justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12" style="border: 2px solid black; padding: 10px;">
        <h1>Professional References </h1>
        <div class="col-lg-12 my-3">
					<div class="alert alert-info alert-light-blue">
						<i class="bi bi-info-circle" style="font-size: 20px;"></i>
						<small>Please provide three professional references to whom you are not related and who are not partners in your practice. </small>
					</div>
				</div>
      <%= form_with(model: @reference, local: true) do |f| %>
        <div class="row g-3 mb-3 align-items-end">
          <div class="col-lg-4">
            <%= f.label :first_name, "First Name", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :first_name, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "First Name *" %>
          </div>
          <div class="col-lg-2">
            <%= f.label :middle_name, "Middle Name", class: "form-label fw-bold text-dark-grey" %>
            <%= f.text_field :middle_name, class: "form-control border-dark rounded-3 shadow-sm", placeholder: "Middle Name" %>
          </div>
          <div class="col-lg-4">
            <%= f.label :last_name, "Last Name", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :last_name, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "Last Name *" %>
          </div>
          <div class="col-lg-2">
            <%= f.label :suffix, "Suffix", class: "form-label fw-bold text-dark-grey" %>
            <%= f.select :suffix, ["", "II", "III", "IV", "Jr.", "Sr."], {}, class: "form-select border-dark rounded-3 shadow-sm" %>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-lg-6">
            <%= f.label :degree, "Degree", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :degree, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "Degree *" %>
          </div>
          <div class="col-lg-6">
            <%= f.label :specialty, "Primary Specialty", class: "form-label fw-bold text-dark-grey" %>
            <%= f.text_field :specialty, class: "form-control border-dark rounded-3 shadow-sm", placeholder: "Primary Specialty" %>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-lg-6">
            <%= f.label :contact_method, "Contact Method", class: "form-label fw-bold text-dark-grey" %> 
            <span class="text-danger">*</span>
            <%= f.select :contact_method, 
              [["Email", "email"], ["Fax", "fax"], ["Mail", "mail"]], 
              { prompt: "Select Contact Method" }, 
              class: "form-select border-dark rounded-3 shadow-sm", required: true 
            %>
          </div>
          <div class="col-lg-6">
            <%= f.label :email_address, "Email Address", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.email_field :email_address, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "Email Address *" %>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-lg-6">
            <%= f.label :address_line1, "Address Line 1", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :address_line1, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "Address Line 1 *" %>
          </div>
          <div class="col-lg-6">
            <%= f.label :address_line2, "Address Line 2", class: "form-label fw-bold text-dark-grey" %>
            <%= f.text_field :address_line2, class: "form-control border-dark rounded-3 shadow-sm", placeholder: "Address Line 2" %>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-lg-4">
            <%= f.label :city, "City", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :city, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "City *" %>
          </div>
          <div class="col-lg-4">
            <%= f.label :state, "State", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :state, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "State *" %>
          </div>
          <div class="col-lg-4">
            <%= f.label :zipcode, "Zip Code", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :zipcode, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "Zip Code *" %>
          </div>
        </div>

        <div class="row g-3 mb-3 align-items-end">
          <div class="col-lg-4">
            <%= f.label :telephone_number, "Telephone Number", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.telephone_field :telephone_number, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "Telephone Number *" %>
          </div>
          <div class="col-lg-2">
            <%= f.label :ext, "Ext", class: "form-label fw-bold text-dark-grey" %>
            <%= f.text_field :ext, class: "form-control border-dark rounded-3 shadow-sm", placeholder: "Ext" %>
          </div>
          <div class="col-lg-4">
            <%= f.label :fax, "Fax", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.text_field :fax, class: "form-control border-dark rounded-3 shadow-sm", required: true, placeholder: "Fax *" %>
          </div>
          <div class="col-lg-2 d-flex align-items-center">
            <div>
              <%= f.label :does_not_have_fax, "Does Not Have Fax", class: "form-label fw-bold text-dark-grey d-block" %>
              <%= f.check_box :does_not_have_fax, class: "form-check-input ms-2" %>
            </div>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-lg-6">
            <%= f.label :mobile_number, "Mobile Number", class: "form-label fw-bold text-dark-grey" %>
            <%= f.telephone_field :mobile_number, class: "form-control border-dark rounded-3 shadow-sm", placeholder: "Mobile Number" %>
          </div>
          <div class="col-lg-6">
            <%= f.label :relationship, "Relationship", class: "form-label fw-bold text-dark-grey" %>
            <%= f.text_field :relationship, class: "form-control border-dark rounded-3 shadow-sm", placeholder: "Relationship" %>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-lg-6">
            <%= f.label :association_start_date, "Association Start Date", class: "form-label fw-bold text-dark-grey" %> <span class="text-danger">*</span>
            <%= f.date_field :association_start_date, class: "form-control border-dark rounded-3 shadow-sm", required: true %>
          </div>
          <div class="col-lg-6">
            <%= f.label :association_end_date, "Association End Date", class: "form-label fw-bold text-dark-grey" %>
            <%= f.date_field :association_end_date, class: "form-control border-dark rounded-3 shadow-sm" %>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-lg-6 d-flex align-items-center">
            <%= f.check_box :association_until_present, class: "form-check-input me-2" %>
            <%= f.label :association_until_present, "Association Until Present", class: "form-label fw-bold text-dark-grey mb-0" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-12">
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

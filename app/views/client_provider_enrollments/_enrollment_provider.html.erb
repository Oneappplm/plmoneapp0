<div class="col-lg-4" style="background-color: #eee;">
  <div class="row my-2 mb-3 mt-3">
    <div class="col-lg-12">
      <div class="card rounded shadow-lg p-2">
        <p class="text-dark-grey fw-semibold mb-1">Enrolled by: <%= client_provider_enrollment.enrollable&.enrolled_by %> </p>
        <p class="text-dark-grey fw-semibold mb-1">Enrolled: <%= client_provider_enrollment.enrollable&.created_at&.strftime('%B %d, %Y') %> </p>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-12">
      <div class="card rounded shadow-lg p-2">
        <p class="text-dark-grey fw-semibold mb-1">Assigned Agent: <%= client_provider_enrollment.enrollable.assigned_agent&.full_name %> </p>
        <p class="text-dark-grey fw-semibold mb-1">Type of outreach: <%= client_provider_enrollment.enrollable&.outreach_type&.titleize  %> </p>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-6">
      <a href="javascript:void(0);" data-model="enrollment_providers" data-status="completed" class="btn bg-white btn-lg btn-outline-success w-100 <%= client_provider_enrollment.enrollable.status != 'completed' ? 'enrollment-update-status' : ' unavailable disabled'%>">
        <span class="text-dark-grey">
          Mark as Complete
        </span>
      </a>
    </div>
    <div class="col-lg-6">
      <a href="javascript:void(0);" data-model="enrollment_providers" data-status="callback" class="btn bg-white btn-lg btn-outline-primary w-100 <%= client_provider_enrollment.enrollable.status != 'callback' ? 'enrollment-update-status' : ' unavailable disabled'%>">
        <span class="text-dark-grey">
          Schedule for Callback
        </span>
      </a>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-12">
      <div class="card rounded shadow-lg p-1 px-3 mb-3">
        <span class="fw-semibold mt-2 text-white rounded px-1" style="background: #3bc539; width: 70%;" id="status_identified">ID: <%= client_provider_enrollment.enrollable.id %> <%= "Enrollment #{client_provider_enrollment.enrollable&.status&.titleize}"%></span>
        <div class="avatar-circle mt-3" style="text-align: center">
          <img class="avatar-img" src="../dist/assets/img/400x400/img1.jpg" alt="Image Description" style="width: 100px;">
        </div>
        <h3 class="font-bold mb-3 text-center my-3"><%= client_provider_enrollment.enrollable.provider_name %></h3>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-12">
      <div class="card rounded shadow-lg p-1 px-3 mb-3">
        <h5 class="mt-2 text-center">Payer Enrollment Details</h5>
        <% client_provider_enrollment.enrollable&.details.each_with_index do |detail,idx|%>
          <div class="card rounded shadow-lg p-1 px-3 mb-3">
            <%= render partial: "global_components/collapsible_sidebar_header", locals: { title: detail.enrollment_payer&.titleize, collapse_name: "#{detail.enrollment_payer&.underscore}_payer", text_position: 'text-start' }%>
            <div class="collapsible" style="<%= current_user&.is_card_open?("#{detail.enrollment_payer&.underscore}_payer") ? '' : 'display: none;' %>">
              <div class="text-left mt-2 text-dark">
                <p class="mb-2"><strong>Enrollment Payer:</strong> <%= detail.enrollment_payer&.titleize %></p>
                <p class="mb-2"><strong>Enrollment Type:</strong> <%= detail.enrollment_type %></p>
                <p class="mb-2"><strong>Application Status:</strong> <%= detail&.enrollment_status&.titleize %></p>
                <p class="mb-2"><strong>Provider ID:</strong> <%= detail&.provider_id %> </p>
                <p class="mb-2"><strong>Group ID:</strong> <%= detail&.group_id %> </p>
                <p class="mb-1"><strong>Notes:</strong> <%= detail&.comment %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row-mb-3">
    <div class="card rounded shadow-lg p-1 px-3 mb-3 pb-5">
      <h3 class="text-center my-3">Comments</h3>
      <div id="comments-list">
        <% client_provider_enrollment.enrollable.comments.each do |comment|%>
          <% if comment.persisted? %>
            <%= render partial: 'comments/comment', locals: {comment: comment}%>
          <% end %>
        <% end %>
      </div>
      <%= render partial: 'comments/form_ajax', comment: @comment %>
    </div>
  </div>
</div>
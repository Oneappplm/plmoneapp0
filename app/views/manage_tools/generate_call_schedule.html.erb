<%= render "manage_tools_container" do %>
  <form action="">
    <div class="form-row row mt-3">
        <div class="col-xl-1 d-flex align-items-end">
            <input class="form-check-input form-radio" type="radio" name="call-sched-radio" id="dept-radio" value="">
        </div>
        <div class="col-xl-11">
            <div class="row">
                <div class="col-xl-6">
                    <label for="department" class="">Department:</label>
                    <select name="department" id="department" class="form-select">
                        <option value="">Select option</option>
                    </select>
                </div>
                <div class="col-xl-6">
                    <label for="division" class="">Division:</label>
                    <select name="division" id="division" class="form-select">
                        <option value="">Select option</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-1 d-flex align-items-end">
            <input class="form-check-input form-radio" type="radio" name="call-sched-radio" id="group-radio" value="">
        </div>
        <div class="col-xl-11">
            <div class="row">
                <div class="col-xl-6">
                    <label for="group" class="">Group:</label>
                    <select name="group" id="group" class="form-select">
                        <option value="">Select option</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-1 d-flex align-items-end">
        </div>
        <div class="col-xl-11">
            <div class="row">
                <div class="col-xl-6">
                    <label for="sched-year" class="">Scheduler Year:</label>
                    <select name="sched-year" id="sched-year" class="form-select">
                        <option value="">Select option</option>
                    </select>
                </div>
                <div class="col-xl-6">
                    <label for="sched-month" class="">Scheduler Month:</label>
                    <select class="js-example-basic-multiple form-select" name="sched-month[]" id="sched-month" multiple="multiple">
                        <option value='January'>January</option>
                        <option value='February'>February</option>
                        <option value='March'>March</option>
                        <option value='April'>April</option>
                        <option value='May'>May</option>
                        <option value='June'>June</option>
                        <option value='July'>July</option>
                        <option value='August'>August</option>
                        <option value='September'>September</option>
                        <option value='October'>October</option>
                        <option value='November'>November</option>
                        <option value='December'>December</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-2 mt-3">
        <%= button_to "Generate Schedule", nil, class: "btn button-sm"%>
    </div>
  </form>
<% end %>
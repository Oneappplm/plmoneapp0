<%= render "manage_tools_container" do %>
    <form action="">
        <div class="form-row row mt-3">
        <div class="col-xl-12">
          <label for="go-to" class="fs-6">Type</label>
          <select name="go-to" id="dropdown" class="form-select form-control form-control-lg py-3">
           <option value="department">Department</option>
           <option value="group">Group</option>
          </select>
        </div>
      </div>
      <div id="departmentContent" style="display: none;">
          <div class="form-row row page-applicable mt-3">
            <div class="col-xl-12">
              <div class="card other-name-card">
                <div class="card-body">
                  <div class="form-row row">
                    <div class="input-group d-flex gap-2 align-items-center">
                      <div class="col-xl-12">
                        <h6 class="fs-3">Department</h6>
                        <div class="form-row row mt-2">
                          <div class="col-xl-6">
                            <label for="group" class="fs-6">Department</label>
                            <select name="group" id="group" class="form-select form-control form-control-lg py-3">
                              <option value="">Select option</option>
                            </select>
                          </div>
                          <div class="col-xl-6">
                            <label for="group" class="fs-6">Division</label>
                            <select name="group" id="group" class="form-select form-control form-control-lg py-3">
                              <option value="">Select option</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="col-xl-12">
                        <div class="form-row row mt-2">
                          <div class="col-xl-6">
                            <label for="group" class="fs-6">Year</label>
                            <select name="group" id="group" class="form-select form-control form-control-lg py-3">
                              <option value="">Select option</option>
                            </select>
                          </div>
                          <div class="col-xl-6">
                            <label for="sched-month" class="fs-6">Month</label>
                            <select class="js-example-basic-multiple form-select" name="sched-month[]" id="sched-month" multiple="multiple">
                              <option value='January'>January</option>
                              <option value='February'>February</option>
                              <option value='March'>March</option>
                              <option value='April'>April</option>
                              <option value='May'>May</option>
                              <option value='June'>June</option>
                              <option value='July'>July</option>
                              <option value='August'>August</option>
                              <option value='September'>September</option>
                              <option value='October'>October</option>
                              <option value='November'>November</option>
                              <option value='December'>December</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="col-xl-12 mt-3">
                        <div class="row">
                          <div class="col-xl-6">
                            <label for="sched-year" class="fs-6">Order</label>
                            <select name="sched-year" id="sched-year" class="form-select form-control form-control-lg py-3">
                              <option value="">Select option</option>
                            </select>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                      <%= button_to "Generate Schedule", nil, class: "btn button-sm"%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    <div id="groupContent" style="display: none;">
      <div class="form-row row mt-3">
        <div class="col-xl-12">
          <div class="card other-name-card">
            <div class="card-body">
              <div class="form-row row">
                <div class="col-xl-12">
                  <div class="row">
                    <div class="col-xl-12">
                      <h6 class="fs-3">Group</h6>
                        <label for="group" class="fs-6">Group</label>
                        <select name="group" id="group" class="form-select form-control form-control-lg py-3">
                            <option value="">Select option</option>
                        </select>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-row row mt-3">
                <div class="col-xl-12">
                  <div class="row">
                    <div class="col-xl-6">
                      <label for="sched-year" class="fs-6">Year</label>
                      <select name="sched-year" id="sched-year" class="form-select form-control form-control-lg py-3">
                        <option value="">Select option</option>
                      </select>
                    </div>
                    <div class="col-xl-6">
                      <label for="sched" class="fs-6">Month</label>
                      <select class="js-example-basic-multiple form-select" name="sched[]" id="sched" multiple="multiple">
                        <option value='January'>January</option>
                        <option value='February'>February</option>
                        <option value='March'>March</option>
                        <option value='April'>April</option>
                        <option value='May'>May</option>
                        <option value='June'>June</option>
                        <option value='July'>July</option>
                        <option value='August'>August</option>
                        <option value='September'>September</option>
                        <option value='October'>October</option>
                        <option value='November'>November</option>
                        <option value='December'>December</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-xl-12 mt-3">
                  <div class="row">
                    <div class="col-xl-6">
                      <label for="sched-year" class="fs-6">Order</label>
                      <select name="sched-year" id="sched-year" class="form-select form-control form-control-lg py-3">
                        <option value="">Select option</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-center gap-2 mt-3">
                <%= button_to "Generate Schedule", nil, class: "btn button-sm"%>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
    </form>
  <% end %>
  <style>
    .select2-container .select2-selection--multiple {
      box-sizing: border-box;
      cursor: pointer;
      display: block;
      border: 1px solid #aaa;
      min-height: 60px;
      user-select: none;
      -webkit-user-select: none;
    }
    .select2-container .select2-selection--multiple {
      box-sizing: border-box;
      cursor: pointer;
      display: block;
      border: 1px solid #aaa;
      min-height: 50px;
      width: 390px;
      user-select: none;
      -webkit-user-select: none;
  }
  </style>
  <script>
  $(document).ready(function() {
    // Function to update content based on the selected option
    function updateContent(selectedOption) {
      if (selectedOption === 'department') {
        $('#departmentContent').show();
        $('#groupContent').hide();
      } else if (selectedOption === 'group') {
        $('#departmentContent').hide();
        $('#groupContent').show();
      } else {
        // If neither department nor group is selected, show one of them (e.g., "Department" in this case)
        $('#departmentContent').show();
        $('#groupContent').hide();
      }
    }
  
    // Initial update based on the selected value (e.g., "department" for "Department" by default)
    updateContent($('#dropdown').val());
  
    // Change event handler
    $('#dropdown').change(function() {
      var selectedOption = $(this).val();
      updateContent(selectedOption);
    });
  });
  $(document).ready(function() {
      console.log("Document ready, initializing Select2.");
      $('#sched-month').select2();
  });
  $(document).ready(function() {
      $('#sched').select2();
  });
  </script>
<%= render "manage_tools_container" do %>
  <form action="">
	  <div class="form-row row mt-3">
        <div class="input-group d-flex gap-3 align-items-center">
            <div class="col-xl-12">
                <h6 class="form-heading">Type</h6>
                <select name="group" id="group" class="form-select ">
                    <option value="">Group</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-row row mt-3">
		  <div class="col-xl-12">
          <div class="card other-name-card">
             <div class="card-body">
    <div class="form-row row">
        <div class="col-xl-12">
            <div class="row">
                <div class="col-xl-12">
                  <h6 class="form-heading">Group</h6>
                    <label for="group" class="">Group</label>
                    <select name="group" id="group" class="form-select">
                        <option value="">Select option</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-1 d-flex align-items-end">
        </div>
        <div class="col-xl-12">
            <div class="row">
                <div class="col-xl-6">
                    <label for="sched-year" class="">Year</label>
                    <select name="sched-year" id="sched-year" class="form-select">
                        <option value="">Select option</option>
                    </select>
                </div>
                <div class="col-xl-6">
                    <label for="sched-month" class="">Month</label>
                    <select class="js-example-basic-multiple form-select" name="sched-month[]" id="sched-month" multiple="multiple">
                        <option value='January'>January</option>
                        <option value='February'>February</option>
                        <option value='March'>March</option>
                        <option value='April'>April</option>
                        <option value='May'>May</option>
                        <option value='June'>June</option>
                        <option value='July'>July</option>
                        <option value='August'>August</option>
                        <option value='September'>September</option>
                        <option value='October'>October</option>
                        <option value='November'>November</option>
                        <option value='December'>December</option>
                    </select>
                </div>
                <div class="col-xl-6">
                    <label for="sched-year" class="">order</label>
                    <select name="sched-year" id="sched-year" class="form-select">
                        <option value="">Select option</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center gap-2 mt-3">
        <%= button_to "Generate Schedule", nil, class: "btn button-sm"%>
    </div>
  </form>
<% end %>
<%= render "manage_tools_container" do %>
  <form action="">
    <div class="form-row row page-applicable mt-3">
        <div class="col-xl-12">
            <div class="card other-name-card">
                <div class="card-body">
                    <div class="form-row row">
                        <div class="col-xl-6">
                            <label for="search-prac-name" class="">Practice/Facility Name:</label>
                            <input type="text"
                                class="form-control form-control-lg" id="search-prac-name" name="prac-name" placeholder="Type here...">
                        </div>
                        <div class="col-xl-6 d-flex align-items-end">
                            <%= button_to "Search", nil, class: "btn button-sm"%>
                        </div>
                    </div>
                    <div class="form-row row">
                        <div class="col-xl-6">
                            <label for="enter-zip-code" class="">Enter Zip Code:</label>
                            <input type="text"
                                class="form-control form-control-lg" id="enter-zip-code" name="enter-zip-code" placeholder="Type here...">
                        </div>
                        <div class="col-xl-6">
                            <label for="sel-address" class="">Select Address:</label>
                            <select name="sel-address" id="sel-address"
                                class="form-select ">
                                <option value="">Select option</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row row mt-2">
        <div class="col-xl-6">
            <label for="prac-name" class="">Practice Name:</label>
            <input type="text" name="prac-name"
                class="form-control form-control-lg" id="prac-name" placeholder="Type here...">
        </div>
        <div class="col-xl-6">
            <label for="address" class="">Address:</label>
            <input type="text" name="address"
                class="form-control form-control-lg" id="address" placeholder="Type here...">
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-6">
            <label for="mail-stop" class="">Suite/Mail Stop:</label>
            <input type="text" name="mail-stop"
                class="form-control form-control-lg" id="mail-stop" placeholder="Type here...">
        </div>
        <div class="col-xl-6">
            <label for="additional-address" class="">Additional Address:</label>
            <input type="text" name="additional-address"
                class="form-control form-control-lg" id="additional-address" placeholder="Type here...">
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-6">
            <label for="city" class="">City:</label>
            <input type="text" name="city"
                class="form-control form-control-lg" id="city" placeholder="Type here...">
        </div>
        <div class="col-xl-6">
            <label for="county" class="">County:</label>
            <input type="text" name="county"
                class="form-control form-control-lg" id="county" placeholder="Type here...">
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-4">
            <label for="state" class="">State/Province:</label>
            <select name="state" id="state" class="form-select">
                <option value="">Select option</option>
            </select>
        </div>
        <div class="col-xl-4">
            <label for="zip" class="">Zip/Postal Code:</label>
            <input type="text" name="zip"
                class="form-control form-control-lg" id="zip" placeholder="Type here...">
        </div>
        <div class="col-xl-4">
            <label for="country" class="">Country:</label>
            <select name="country" id="country" class="form-select">
                <option value="">Select option</option>
            </select>
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-4">
            <label for="phone-num" class="">Phone Number:</label>
            <input type="text" name="phone-num"
                class="form-control form-control-lg" id="phone-num" placeholder="xxx-xxx-xxxx">
        </div>
        <div class="col-xl-4">
            <label for="fax" class="">Fax Number:</label>
            <input type="text" name="fax"
                class="form-control form-control-lg" id="fax" placeholder="xxx-xxx-xxxx">
        </div>
        <div class="col-xl-4">
            <label for="email" class="">Email Address:</label>
            <input type="text" name="email"
                class="form-control form-control-lg" id="email" placeholder="Type here...">
        </div>
    </div>
    <div class="form-row row">
        <div class="col-xl-12">
            <label for="comments" class="">Comments:</label>
            <textarea name="comments" id="comments" cols="30" rows="5" class="form-control"></textarea>
        </div>
    </div>
    <!-- <div class="form-row row">
        <div class="col-xl-6">
            <label for="sched-month" class="">Scheduler Month:</label>
            <input type="date" name="sched-month" id="sched-month" class="form-control">
        </div>
        <div class="col-xl-6">
            <label for="contact" class="">Contact:</label>
            <select class="js-example-basic-multiple form-select" name="contact[]" id="contact" multiple="multiple">
                <option value=''>Option</option>
            </select>
        </div>
    </div> -->
    <div class="d-flex justify-content-end gap-2 mt-3">
        <%= button_to "Save", nil, class: "btn button-sm"%>
    </div>
  </form>
  <div class="form-row row mt-3">
    <div class="col-xl-12">
        <h6 class="form-heading">Practitioner List</h6>
    </div>
  </div>
  <table class="table practice-table mt-1">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Phone Number</th>
            <th>Fax Number</th>
            <th>Email</th>
        </tr>
    </thead>

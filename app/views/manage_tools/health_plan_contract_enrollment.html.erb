<%= render "manage_tools_container" do %>
  <form action="">
    <div class="form-row row page-applicable mt-3">
        <div class="col-xl-12">
            <div class="card other-name-card">
                <div class="card-body">
                    <div class="form-row row">
                        <div class="col-xl-6">
                            <label for="search-prac-name" class="font-style">Practice/Facility Name</label>
                             <select name="Practice/Facility" id="sel-address"
                                class="form-select form-select-lg py-3">
                                <option value="">Select option</option>
                            </select>
                        </div>
                        <div class="col-xl-6">
                            <label for="enter-zip-code" class="font-style">Zip Code</label>
                            <input type="text"
                                class="form-control form-control-lg py-3" id="enter-zip-code" name="enter-zip-code" placeholder="Type here...">
                        </div>
                    </div>
                    <div class="form-row row mt-3">
                        <div class="col-xl-12">
                            <label for="sel-address" class="font-style">Address</label>
                            <select name="sel-address" id="sel-address"
                                class="form-select form-select-lg py-3">
                                <option value="">Select option</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row row mt-3 justify-content-end">
                        <div class="col-xl-7">
                            <%= button_to "Search", nil, class: "btn button-sm ms-2"%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mt-2">
       <div class="card-body">
            <div class="form-row row mt-2">
                <div class="col-xl-12">
                    <label for="prac-name" class="font-style">Practice/Facility Name</label>
                    <input type="text" name="prac-name"
                        class="form-control form-control-lg py-3" id="prac-name" placeholder="Type here...">
                </div>
            </div>
            <div class="form-row row mt-3">
                <div class="col-xl-6">
                    <label for="address" class="font-style">Address</label>
                    <input type="text" name="address"
                        class="form-control form-control-lg py-3" id="address" placeholder="Type here...">
                </div>
                <div class="col-xl-6">
                    <label for="additional-address" class="font-style">Additional Address</label>
                    <input type="text" name="additional-address"
                        class="form-control form-control-lg py-3" id="additional-address" placeholder="Type here...">
                </div>
            </div>
            <div class="form-row row mt-3">
                <div class="col-xl-6">
                    <label for="mail-stop" class="font-style">Suite/Mail Stop</label>
                    <input type="text" name="mail-stop"
                        class="form-control form-control-lg py-3" id="mail-stop" placeholder="Type here...">
                </div> 
                <div class="col-xl-6">
                    <label for="city" class="font-style">City</label>
                    <input type="text" name="city"
                        class="form-control form-control-lg py-3" id="city" placeholder="Type here...">
                </div>
            </div>
            <div class="form-row row mt-3">
                <div class="col-xl-6">
                    <label for="state" class="font-style">State</label>
                    <select name="state" id="state" class="form-select form-select-lg py-3">
                        <option value="">Select option</option>
                    </select>
                </div>
                 <div class="col-xl-6">
                    <label for="county" class="font-style">County</label>
                    <input type="text" name="county"
                        class="form-control form-control-lg py-3" id="county" placeholder="Type here...">
                </div>
            </div>
            <div class="form-row row mt-3">
               <div class="col-xl-6">
                    <label for="zip" class="font-style">Zip/Postal Code</label>
                    <input type="text" name="zip"
                        class="form-control form-control-lg py-3" id="zip" placeholder="Type here...">
                </div>
                <div class="col-xl-6">
                    <label for="country" class="font-style">Country</label>
                    <select name="country" id="country" class="form-select form-select-lg py-3">
                        <option value="">Select option</option>
                    </select>
                </div> 
            </div>
            <div class="form-row row mt-3">
                <div class="col-xl-6">
                    <label for="phone-num" class="font-style">Phone Number</label>
                    <input type="text" name="phone-num"
                        class="form-control form-control-lg py-3" id="phone-num" placeholder="Type here...">
                </div>
                <div class="col-xl-6">
                    <label for="fax" class="font-style">Fax Number</label>
                    <input type="text" name="fax"
                        class="form-control form-control-lg py-3" id="fax" placeholder="Type here...">
                </div>
            </div>
            <div class="form-row row mt-3">
                <div class="col-xl-12">
                    <label for="email" class="font-style">Email Address</label>
                    <input type="text" name="email"
                        class="form-control form-control-lg py-3" id="email" placeholder="Type here...">
                </div>
            </div>
            <div class="form-row row mt-3">
                <div class="col-xl-12">
                    <label for="comments" class="font-style">Comments</label>
                    <textarea name="comments" id="comments" cols="30" rows="5" class="form-control" placeholder="Type here..."></textarea>
                </div>
            </div>
            <!-- <div class="form-row row">
                <div class="col-xl-6">
                    <label for="sched-month" class="">Scheduler Month</label>
                    <input type="date" name="sched-month" id="sched-month" class="form-control">
                </div>
                <div class="col-xl-6">
                    <label for="contact" class="">Contact</label>
                    <select class="js-example-basic-multiple form-select" name="contact[]" id="contact" multiple="multiple">
                        <option value=''>Option</option>
                    </select>
                </div>
            </div> -->
            <div class="d-flex justify-content-end gap-2 mt-3">
                <%= button_to "Save", nil, class:"btn button-sm"%>
            </div>
       </div> 
    </div>
  </form>
  <div class="card mt-2">
    <div class="card-body">
        <table class="table practice-table mt-1">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip Code</th>
                    <th>Phone Number</th>
                    <th>Fax Number</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="py-3">Lorem</td>
                    <td class="py-3">Lorem </td>
                    <td class="py-3">Lorem</td>
                    <td class="py-3">Lorem </td>
                    <td class="py-3">Lorem </td>
                    <td class="py-3">Lorem </td>
                    <td class="py-3">Lorem </td>
                    <td class="py-3">Lorem </td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-end mt-3">
            <button class="btn button-sm">Edit</button>
        </div>
    </div>
  </div>
<% end %>

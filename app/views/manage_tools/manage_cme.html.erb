<%= render "manage_tools_container" do %>
  <div class="px-3 pb-3 rounded-1" style="border: 1px solid #dee2e6;">
    <div class="d-flex gap-2 mt-3 justify-content-end">
      <%= button_to "Manage Invitees", nil, class: "btn button-sm fs-6"%>
      <%= button_to "Manage CME RSVP", nil, class: "btn button-sm fs-6"%>
      <%= button_to "Manage CME Attendance", nil, class: "btn button-sm fs-6"%>
      <%= button_to "Generate Course Materials", nil, class: "btn button-sm fs-6"%>
    </div>
    <div class="col-xl-6 d-flex align-items-end py-1">
      <%= button_to "Add New Course", nil, class: "btn button-sm"%>
    </div>
  </div>
  <div class="form-row row">
    <div class="col-xl-6">
      <label for="go-to" class="">Course Name:</label>
      <input type="text" name="" id="" class="form-control" placeholder="Type here...">
    </div>
    <div class="col-xl-6">
      <label for="condition-name" class="">Course ID Number:</label>
      <input type="text" name="" id="" class="form-control" placeholder="Type here...">
    </div>
  </div>
  <div class="form-row row">
    <div class="col-xl-4">
      <label for="go-to" class="">Category I Credits:</label>
      <input type="text" name="" id="" class="form-control" placeholder="Type here...">
    </div>
    <div class="col-xl-4">
      <label for="condition-name" class="">Category II Credits:</label>
      <input type="text" name="" id="" class="form-control" placeholder="Type here...">
    </div>
    <div class="col-xl-4">
      <label for="condition-name" class="">Ethics Credits:</label>
      <input type="text" name="" id="" class="form-control" placeholder="Type here...">
    </div>
  </div>
  <div class="form-row row page-applicable mt-3">
    <div class="col-xl-12">
      <div class="card other-name-card">
        <div class="card-body">
          <h6 class="form-heading">Course Calendar</h6>
          <div class="row">
            <div class="form-row row">
              <div class="col-xl-4">
                <label for="condition-name" class="">Date:</label>
                <input type="date" name="" id="" class="form-control" placeholder="Type here...">
              </div>
            </div>
            <div class="form-row d-flex justify-content-between">
              <div class="offset-md-5 mt-3">
                <%= button_to "Add Date and Time", nil, class: "btn button-sm fs-6"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-row row mt-3">
      <div class="col-xl-12">
        <label for="go-to" class="fs-6 fs-6">Course Notes:</label>
        <textarea name="" id="" cols="30" rows="4" class="form-control" placeholder="Type here..."></textarea>
      </div>
    </div>
    <div class="mt-3 rounded-1" style="border: 1px solid #dee2e6;">
      <div class="my-3">
        <div class="form-row row mt-2">
          <div class="col-xl-12">
            <div class="form-check form-switch ms-5">
              <input class="form-check-input fs-6" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
              <h6 class="fs-4">Course Recurring</h6>
            </div>
            <%= link_to(nil, class: "btn btn-danger") do %>
              <i class="bx bx-trash"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-row row mt-2">
    <div class="col-xl-12">
      <label for="go-to" class="">Course Notes:</label>
      <textarea name="" id="" cols="30" rows="3" class="form-control"></textarea>
    </div>
  </div>
  <div class="form-row row mt-3">
    <div class="col-xl-12">
      <h6 class="form-heading">Recurring</h6>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="recuring-radio" id="recuring-radio1" value="">
        <label class="form-check-label" for="recuring-radio1">
          This course does not recur.
        </label>
      </div>
    </div>
  </div>
  <div class="form-row row">
    <div class="col-xl-2 d-flex align-items-end">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="recuring-radio"
          id="recuring-radio2" value="">
        <label class="form-check-label" for="recuring-radio2">
          Recur on the
        </label>
      </div>
    </div>
    <div class="col-xl-10">
      <div class="row">
        <div class="col-xl-3">
          <label for="recuring-opt1" class="d-none">recuring-opt1</label>
          <select name="recuring-opt1" id="recuring-opt1" class="form-select">
            <option value="">Select option</option>
          </select>
        </div>
        <div class="col-xl-3">
          <label for="recuring-opt2" class="d-none">recuring-opt2</label>
          <select name="recuring-opt2" id="recuring-opt2" class="form-select">
            <option value="">Select option</option>
          </select>
        </div>
        <div class="col-xl-2">
          <label for="" class="">of the month every</label>
        </div>
        <div class="col-xl-3">
          <label for="recuring-opt3" class="d-none">recuring-opt3</label>
          <select name="recuring-opt3" id="recuring-opt3" class="form-select">
              <option value="">Select option</option>
          </select>
        </div>
      </div>
    </div>
    <div class="form-row row">
      <div class="col-xl-6">
        <label for="go-to" class="">Start Date:</label>
        <input type="date" name="" id="" class="form-control" placeholder="Type here...">
      </div>
      <div class="col-xl-6">
        <label for="condition-name" class="">End Date:</label>
        <input type="date" name="" id="" class="form-control" placeholder="Type here...">
      </div>
    </div>
    <div class="form-row row">
      <div class="col-xl-6">
        <div class="row">
          <label for="go-to" class="">Time Starts at:</label>
          <div class="col-xl-6">
            <label for="time-opt1" class="d-none">time-opt1</label>
            <select name="time-opt1" id="time-opt1" class="form-select">
              <option value="">Select option</option>
            </select>
          </div>
          <div class="col-xl-6">
            <label for="time-opt2" class="d-none">time-opt1</label>
            <select name="time-opt2" id="time-opt2" class="form-select">
              <option value="">Select option</option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-xl-6">
        <div class="row">
          <label for="go-to" class="">Duration:</label>
          <div class="col-xl-6">
            <label for="duration-opt1" class="d-none">duration-opt1</label>
            <select name="duration-opt1" id="duration-opt1" class="form-select">
                <option value="">Select option</option>
            </select>
          </div>
          <div class="col-xl-6">
            <label for="duration-opt2" class="d-none">duration-opt2</label>
            <select name="duration-opt2" id="duration-opt2" class="form-select">
                <option value="">Select option</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row justify-content-end ">
  <div class="col-xl-1">
    <%= button_to "Edit", nil, class: "btn btn-primary fw-bold px-5 fs-5"%>
  </div>

<%= render "manage_tools_container" do %>
  <div class="col-xl-12">
    <div class="card other-name-card">
      <div class="card-body">
          <div class="d-flex gap-2 mt-1">
            <%= link_to(call_schedule_manage_tools_path, class: "enc-btn-nav w-100 manage-tools-top-nav-button #{active_manage_tool_sub_menu('manage_tools', 'call_schedule')}") do %>
            <span>Call Schedule View</span>
            <% end %>
            <%= link_to(cme_calendar_manage_tools_path, class: "enc-btn-nav w-100 manage-tools-top-nav-button #{active_manage_tool_sub_menu('manage_tools', 'cme_calendar')}") do %>
            <span>CME Calendar View</span>
            <% end %>
            <%= link_to(meetings_calendar_manage_tools_path, class: "enc-btn-nav w-100 manage-tools-top-nav-button #{active_manage_tool_sub_menu('manage_tools', 'meetings_calendar')}") do %>
            <span>Meetings Calendar View</span>
            <% end %>
         </div>
          <div class="form-row row mt-3">
              <div class="col-xl-12">
                  <div class="row">
                      <div class="col-xl-6">
                          <label for="sched-year" class="fs-6">Year</label>
                          <select name="sched-year" id="sched-year" class="form-select form-control form-control-lg py-3">
                              <option value="">Select option</option>
                          </select>
                      </div>
                      <div class="col-xl-6">
                          <label for="sched-month" class="fs-6">Month</label>
                          <select class="form-select form-control form-control-lg py-3" id="sched-month">
                              <option value='January'>January</option>
                              <option value='February'>February</option>
                              <option value='March'>March</option>
                              <option value='April'>April</option>
                              <option value='May'>May</option>
                              <option value='June'>June</option>
                              <option value='July'>July</option>
                              <option value='August'>August</option>
                              <option value='September'>September</option>
                              <option value='October'>October</option>
                              <option value='November'>November</option>
                              <option value='December'>December</option>
                          </select>
                      </div>
                  </div>
              </div>
              <div class="col-xl-12">
                <div class="row">
                    <div class="col-xl-9">
                        <div class="mt-4">
                          <div id='calendar'></div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="d-flex gap-2 mt-4">
                            <%= button_to "Download", nil, class: "btn btn-primary"%>
                        </div>
                    </div>
                </div>
              </div>
          </div>
      </div>
    </div>
  </div>
   </form>
<% end %>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet">
<style>
  .fc-toolbar{
    background-color: #4e40ff;
    padding: 36px;
  }
    .fc-toolbar-title{
    color: white;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          headerToolbar: {
              left: '',
              center: 'title',
              right: ''
          }
      });
      calendar.render();
  });
</script>

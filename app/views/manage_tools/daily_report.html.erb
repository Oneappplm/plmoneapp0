<%= render "manage_tools_container" do %>
  <form action="">
    <div class="form-row row">
        <div class="col-xl-6">
            <label for="sched-month" class="font-style">Scheduler Date</label>
            <input type="date" name="sched-month" id="sched-month" class="form-control form-control-lg p-3">
        </div>
        <div class="col-xl-6">
            <label for="contact" class="font-style">Contact</label>
            <select class="form-select form-select-lg mb-3 p-3" aria-label=".form-select-lg example">   
              <option selected>Select Option</option>
              <option >Yes</option>
              <option>No</option>
            </select>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <%= button_to "Generate Schedule", nil, class: "btn button-sm fs-5"%>
    </div>
  </form>
<% end %>
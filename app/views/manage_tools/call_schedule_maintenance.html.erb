<script>
$(document).ready(function() {
  // Function to update content based on the selected option
  function updateContent(selectedOption) {
    if (selectedOption === 'department') {
      $('#departmentContent').show();
      $('#groupContent').hide();
    } else if (selectedOption === 'group') {
      $('#departmentContent').hide();
      $('#groupContent').show();
    } else {
      // If neither department nor group is selected, show one of them (e.g., "Department" in this case)
      $('#departmentContent').show();
      $('#groupContent').hide();
    }
  }

  // Initial update based on the selected value (e.g., "department" for "Department" by default)
  updateContent($('#dropdown').val());

  // Change event handler
  $('#dropdown').change(function() {
    var selectedOption = $(this).val();
    updateContent(selectedOption);
  });
});
</script>

<%= render "manage_tools_container" do %>
  <form action="">
    <div class="form-row row mt-3">
        <div class="input-group d-flex gap-3 align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="manage-call-sched-maintenance-radio"
                    id="">
            </div>
            <div class="col-xl-5">
                <label for="department" class="">Department:</label>
                <select name="department" id="department" class="form-select ">
                    <option value="">Select option</option>
                </select>
            </div>
            <div class="col-xl-6">
                <label for="division" class="">Division:</label>
                <select name="division" id="division" class="form-select ">
                    <option value="">Select option</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-row row">
        <div class="input-group d-flex gap-3 align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="manage-call-sched-maintenance-radio"
                    id="">
            </div>
            <div class="col-xl-5">
                <label for="group" class="">Group:</label>
                <select name="group" id="group" class="form-select ">
                    <option value="">Select option</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-row row page-applicable mt-3">
        <div class="col-xl-12">
            <div class="card other-name-card">
                <div class="card-body">
                    <h6 class="form-heading">Weekday</h6>
                    <div class="row">
                        <div class="form-row row">
                            <div class="col-xl-4">
                                <label for="weekday" class="">Weekday:</label>
                                <select name="weekday" id="weekday"
                                    class="form-select "></select>
                            </div>
                            <div class="col-xl-4">
                                <label for="ShiftFrom" class="">Shift From:</label>
                                <input type="time" name="ShiftFrom" id="ShiftFrom"
                                    class="form-control" placeholder="Type here...">
                            </div>
                            <div class="col-xl-4">
                                <label for="ShiftTo" class="">Shift To:</label>
                                <input type="time" name="ShiftTo" id="ShiftTo" class="form-control"
                                    placeholder="Type here...">
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-xl-6">
                                <label for="practitioner-type" class="">Practitioner Type:</label>
                                <select name="practitioner-type" id="practitioner-type"
                                    class="form-select ">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                            <div class="col-xl-6">
                                <label for="practitioner-need" class="">Practitioner Needed
                                    (Numeral):</label>
                                <input type="number" class="form-control form-control-lg"
                                    name="practitioner-need" id="practitioner-need" placeholder="0">
                            </div>
                        </div>
                        <hr class="mt-4">
                        <div class="form-row d-flex justify-content-between">
                            <div class="offset-md-5">
                                <%= button_to "Add Date", nil, class: "btn button-sm"%>
                            </div>
                            <%= link_to(nil, class: "btn btn-danger") do %>
                                <i class="bx bx-trash"></i>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row row page-applicable mt-3">
            <div class="col-xl-12">
                <div class="card other-name-card">
                    <div class="card-body">
                        <h6 class="form-heading">Holiday and Special Occasion Schedule</h6>
                        <div class="row">
                            <div class="form-row row">
                                <div class="col-xl-4">
                                    <label for="condition-name" class="">Pick Date:</label>
                                    <input type="date" name="PickDate"
                                        class="form-control form-control-lg" id="PickDate">
                                </div>
                                <div class="col-xl-4">
                                    <label for="condition-name" class="">From:</label>
                                    <input type="time" name="From" id="From" class="form-control"
                                        placeholder="Type here...">
                                </div>
                                <div class="col-xl-4">
                                    <label for="condition-name" class="">To:</label>
                                    <input type="time" name="To" id="To" class="form-control"
                                        placeholder="Type here...">
                                </div>
                            </div>
                            <div class="form-row row">
                                <div class="col-xl-6">
                                    <label for="PractitionerType" class="">Practitioner Type:</label>
                                    <select name="PractitionerType" id="PractitionerType"
                                        class="form-select ">
                                        <option value="">Select option</option>
                                    </select>
                                </div>
                                <div class="col-xl-6">
                                    <label for="PractitionerNeed" class="">Practitioner Needed
                                        (Numeral):</label>
                                    <input type="number" class="form-control form-control-lg"
                                        name="PractitionerNeed" id="PractitionerNeed"
                                        placeholder="0">
                                </div>
                            </div>
                            <hr class="mt-4">
                            <div class="form-row d-flex justify-content-between">
                                <div class="offset-md-5">
                                    <%= button_to "Add Date", nil, class: "btn button-sm"%>
                                </div>
                                <%= link_to(nil, class: "btn btn-danger") do %>
                                    <i class="bx bx-trash"></i>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row row">
            <div class="col-xl-12">
                <label for="" class="">Department/Section Schedule Notes:</label>
                <textarea class="form-control form-control-lg" name="DepartmentScheduleNotes"
                    id="DepartmentScheduleNotes" cols="30" rows="7"></textarea>
            </div>
        </div>
        <div class="form-row row">
            <div class="col-xl-12">
                <label for="" class="">Heritage Valley Health System Daily Schedule
                    Notes:</label>
                <textarea class="form-control form-control-lg" name="HVHSDailyScheduleNotes"
                    id="HVHSDailyScheduleNotes" cols="30" rows="7"></textarea>
            </div>
        </div>
        <div class="form-row row justify-content-end mt-3">
            <div class="col-xl-2">
                <%= button_to "Save", nil, class: "btn button-sm form-control"%>
            </div>
        </div>
  </form>
<% end %>
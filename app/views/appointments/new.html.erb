<div class="container mt-3">
  <h2>Schedule Appointment with Dr. <%= @doctor.full_name %></h2>

  <%= form_with model: [@doctor, @patient, @appointment], local: true do |form| %>
    <div class="form-group mb-3">
      <%= form.label :appointment_date, class: "form-label" %><br>
      <%= form.datetime_select :appointment_date,
            { default: Time.current },
            { class: "form-select d-inline w-auto me-1 mb-2" } %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :reason, class: "form-label" %>
      <%= form.text_field :reason, class: "form-control" %>
    </div>

    <%= form.submit "Schedule Appointment", class: "btn btn-primary mt-2" %>
  <% end %>
</div>

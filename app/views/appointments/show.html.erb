<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
          <h3 class="mb-0">Appointment Details</h3>
        </div>
        <div class="card-body bg-light">
          <dl class="row mb-0">
            <dt class="col-sm-4">Patient Name:</dt>
            <dd class="col-sm-8"><%= @appointment.patient.full_name %></dd>

            <dt class="col-sm-4">Doctor Name:</dt>
            <dd class="col-sm-8"><%= @appointment.doctor.full_name %></dd>

            <dt class="col-sm-4">Appointment Date:</dt>
            <dd class="col-sm-8"><%= @appointment.appointment_date.strftime("%B %d, %Y at %I:%M %p") %></dd>

            <dt class="col-sm-4">Reason:</dt>
            <dd class="col-sm-8"><%= @appointment.reason.presence || "N/A" %></dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8"><%= @appointment.status.presence || "Scheduled" %></dd>
            
          </dl>
        </div>
        <div class="card-footer text-end bg-white border-top-0">
          <%= link_to "<- Back to Appointments", doctor_appointments_path(@appointment.doctor),
                      class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="content container-fluid">
	<%= render "enrollment_tracking_components/enrollment_nav"%>
	<div class="row mb-3">
		<div class="col-lg-12">
			<h2>
				<a href="<%= groups_path %>" class="d-flex gap-2 text-secondary">
				<i class="bi bi-arrow-left"></i>
				<span><%= @enrollment_group.group_name %></span>
				</a>
			</h2>

		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<%= form_with url: request.url, method: :get, html: { class: 'form_search_with_icon'} do |form| %>
			<div class="">
				<input type="text" name="dco_search" value="<%= params[:dco_search] %>" class="form-control">
				<i class="bi bi-search"></i>
			</div>
			<% end %>
		</div>
		<div class="col-lg-6 d-flex justify-content-end">
			<a href="<%= new_group_dco_path(@enrollment_group) %>" class="d-flex btn btn-primary btn-md">
				<i class="bi bi-plus-lg me-1"></i>
				<span>Add DCO</span>
			</a>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-12">
			<table class="table">
				<thead>
					<tr>
							<th scope="col" class="bg-primary text-white">Location Name</th>
							<th scope="col" class="bg-primary text-white">Address</th>
							<th scope="col" class="bg-primary text-white">Phone Number</th>
							<th scope="col" class="bg-primary text-white">Fax Number</th>
							<th scope="col" class="bg-primary text-white"></th>
					</tr>
			</thead>
				<tbody>
						<% if @dcos %>
								<% @dcos.each do |dco| %>
								<tr>
									<td><%= dco.dco_name %></td>
									<td><%= dco.dco_address %></td>
									<td><%= dco.dco_provider_phone_number %></td>
									<td><%= dco.dco_provider_fax_number %></td>
									<td scope="row">
										<div class="d-flex gap-1">
											<%= link_to edit_group_dco_path(@enrollment_group, dco), class: 'text-primary' do %>
													<i class="bi bi-pencil"></i>
											<% end %>
											<%= button_to group_dco_path(@enrollment_group, dco), method: :delete, class: 'text-danger', style: 'border: none; background-color: transparent;' do %>
													<i class="bi bi-trash"></i>
											<% end %>
										</div>

			      </td>
								</tr>
								<% end %>
						<% end %>
				</tbody>
		</table>
		<% if @dcos %>
		<div class="col-lg-12">
				<div class="d-flex justify-content-between bg-medium-grey rounded align-items-center py-3">
				<div class="page_info ms-3 text-black">
								<%= page_entries_info @dcos %>
				</div>
				<% if params[:per_page ].present? %>
						<%= will_paginate @dcos, :params =>  {per_page: @per_page }, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
				<% else %>
						<%= will_paginate @dcos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
				<% end %>
				</div>
		</div>
		<% end %>
		</div>
	</div>
</div>
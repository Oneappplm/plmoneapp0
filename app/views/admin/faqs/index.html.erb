<div class="container mt-4 mb-4">
  <h2>Manage FAQs</h2>
  <%= link_to 'New FAQ', new_admin_faq_path, class: 'btn btn-primary mt-3' %>
  <div class="accordion mt-4" id="faqAccordion">
    <% @faqs.each_with_index do |faq, index| %>
      <div class="accordion-item border-dark">
        <h2 class="accordion-header" id="heading<%= index %>">
          <button class="accordion-button <%= index.zero? ? '' : 'collapsed' %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="<%= index.zero? %>" aria-controls="collapse<%= index %>">
            <%= faq.question %>
          </button>
        </h2>
        <div id="collapse<%= index %>" class="accordion-collapse collapse <%= index.zero? ? 'show' : '' %>" aria-labelledby="heading<%= index %>" data-bs-parent="#faqAccordion">
          <div class="accordion-body">
            <p><%= faq.answer %></p>
            <p><strong>Visible to users :</strong> <%= faq.visible ? 'Yes' : 'No' %></p>
            <div>
              <%= link_to 'Edit', edit_admin_faq_path(faq), class: 'btn btn-warning btn-sm' %>
              <%= button_to 'Delete', admin_faq_path(faq), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mt-2' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="content container-fluid">
	<%= render "enrollment_tracking_components/enrollment_nav"%>
</div>

<div class="content container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="mb-2">Docs Received</h1>
			<table class="table table-striped table-bordered table-responsive">
					<thead>
						<tr>
							<th scope="col" class="bg-primary text-white">Completion Item</th>
							<th scope="col" class="bg-primary text-white">Received Date</th>
							<th scope="col" class="bg-primary text-white">
								<input type="checkbox" >
								Received Flag
							</th>
							<th scope="col" class="bg-primary text-white">Received Incomplete Flag</th>
							<th scope="col" class="bg-primary text-white">Comments</th>
						</tr>
					</thead>
					<tbody>
						<% Provider::REQUIRED_DOCUMENTS.each do |doc|%>
						<tr>
							<td><%= doc.titleize %></td>
							<td><input type="date" class="form-control"></td>
							<td><input type="checkbox" ></td>
							<td><input type="checkbox" ></td>
							<td><textarea cols="30" rows="5" class="form-control"></textarea></td>
						</tr>
						<% end %>
					</tbody>
			</table>
		</div>
	</div>
</div>

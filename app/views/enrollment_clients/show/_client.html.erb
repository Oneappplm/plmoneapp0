<% client = @provider.client %>
<div class="row mb-3">
   <div class="col-lg-12 card p-3">
      <div class="w-100 d-flex justify-content-between">
         <h3 class="text-primary">Client</h3>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="provider_client">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
    <div class="w-100 collapsible" id="provider_client">
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>Client Name</label>
            <p class="text-black fw-semibold"><%= client.group_name %></p>
         </div>
         <div class="col-lg-6">
            <label>Client Code</label>
            <p class="text-black fw-semibold"><%= client.group_code %></p>
         </div>
      </div>
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>Office Address</label>
            <p class="text-black fw-semibold"><%= client.office_address %></p>
         </div>
         <div class="col-lg-6">
            <label>City</label>
            <p class="text-black fw-semibold"><%= client.city %></p>
         </div>
      </div>
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>State</label>
            <p class="text-black fw-semibold"><%= client.state %></p>
         </div>
         <div class="col-lg-6">
            <label>Zip Code</label>
            <p class="text-black fw-semibold"><%= client.zip_code %></p>
         </div>
      </div>

      <h3 class="text-primary">DCO/Practice Location</h3>
      <% client.dcos.each do |dco|%>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>Practice Location Name</label>
              <p class="text-black fw-semibold"><%= dco.state %></p>
           </div>
           <div class="col-lg-6">
              <label>Address</label>
              <p class="text-black fw-semibold"><%= dco.dco_zipcode %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>City</label>
              <p class="text-black fw-semibold"><%= dco.dco_city %></p>
           </div>
           <div class="col-lg-6">
              <label>State</label>
              <p class="text-black fw-semibold"><%= dco.state %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>County</label>
              <p class="text-black fw-semibold"><%= dco.county %></p>
           </div>
           <div class="col-lg-6">
              <label>Zip Code</label>
              <p class="text-black fw-semibold"><%= dco.dco_zipcode %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>Service Location Phone</label>
              <p class="text-black fw-semibold"><%= dco.service_location_phone_number %></p>
           </div>
           <div class="col-lg-6">
              <label>Service Location Fax</label>
              <p class="text-black fw-semibold"><%= dco.service_location_fax_number %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>Panel Status to New Patients</label>
              <p class="text-black fw-semibold"><%= dco.panel_status_to_new_patients %></p>
           </div>
           <div class="col-lg-6">
              <label>Panel Age Limits</label>
              <p class="text-black fw-semibold"><%= dco.panel_age_limit %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>Include in Directory?</label>
              <p class="text-black fw-semibold"><%= dco.include_in_directory&.upcase %></p>
           </div>
           <div class="col-lg-6">
              <label>Is this location an inpatient facility?</label>
              <p class="text-black fw-semibold"><%= dco.inpatient_facility&.upcase %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>Is this location a clinic?</label>
              <p class="text-black fw-semibold"><%= dco.is_clinic&.upcase %></p>
           </div>
           <div class="col-lg-6">
              <label>Are Telehealth services provided?</label>
              <p class="text-black fw-semibold"><%= dco.telehealth_provider&.upcase %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>Website</label>
              <p class="text-black fw-semibold"><%= dco.website %></p>
           </div>
           <div class="col-lg-6">
              <label>TAX ID</label>
              <p class="text-black fw-semibold"><%= dco.tax_id %></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>Facility Billing NPI</label>
              <p class="text-black fw-semibold"></p>
           </div>
           <div class="col-lg-6">
              <label>MN Medicaid Number</label>
              <p class="text-black fw-semibold"></p>
           </div>
        </div>
        <div class="row mb-1">
           <div class="col-lg-6">
              <label>WI Medicaid Number</label>
              <p class="text-black fw-semibold"></p>
           </div>
           <div class="col-lg-6">
              <label>Medicare ID PTAN</label>
              <p class="text-black fw-semibold"></p>
           </div>
        </div>
      <% end %>
    </div>
</div>
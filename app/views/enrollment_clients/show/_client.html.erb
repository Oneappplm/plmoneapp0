<% client = @provider.client %>
<% if client %>
<div class="row mb-3">
   <div class="col-lg-12 card p-3">
    <!-- alt_enrollment_group_path -->
      <div class="w-100 d-flex justify-content-between">
        <div class="d-flex gap-3 align-items-baseline">
         <h3 class="text-primary">Group</h3>
          <a href="<%= alt_enrollment_group_path(client)%>" target="_blank"><h5><i class="bi bi-box-arrow-up-right"></i> see more</h5></a>
        </div>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="provider_client">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
    <div class="w-100 collapsible" id="provider_client">
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>Group Name</label>
            <p class="text-black fw-semibold"><%= client&.group_name %></p>
         </div>
         <div class="col-lg-6">
            <label>Taxonomy Code</label>
            <p class="text-black fw-semibold"><%= client&.group_code %></p>
         </div>
      </div>
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>Office Address</label>
            <p class="text-black fw-semibold"><%= client&.office_address %></p>
         </div>
         <div class="col-lg-6">
            <label>City</label>
            <p class="text-black fw-semibold"><%= client&.city %></p>
         </div>
      </div>
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>State</label>
            <p class="text-black fw-semibold"><%= client&.state %></p>
         </div>
         <div class="col-lg-6">
            <label>Zip Code</label>
            <p class="text-black fw-semibold"><%= client&.zip_code %></p>
         </div>
      </div>
    </div>
</div>
</div>
<% end %>
<% client = @provider.client %>
<div class="row mb-3">
   <div class="col-lg-12 card p-3">
    <!-- alt_enrollment_group_path -->
      <div class="w-100 d-flex justify-content-between">
        <div class="d-flex gap-3 align-items-baseline">
         <h3 class="text-primary">Group</h3>
          <a href="<%= alt_enrollment_group_path(client)%>" target="_blank"><h5><i class="bi bi-box-arrow-up-right"></i> see more</h5></a>
        </div>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="provider_client">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
    <div class="w-100 collapsible" id="provider_client">
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>Group Name</label>
            <p class="text-black fw-semibold"><%= client&.group_name %></p>
         </div>
         <div class="col-lg-6">
            <label>Taxonomy Code</label>
            <p class="text-black fw-semibold"><%= client&.group_code %></p>
         </div>
      </div>
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>Office Address</label>
            <p class="text-black fw-semibold"><%= client&.office_address %></p>
         </div>
         <div class="col-lg-6">
            <label>City</label>
            <p class="text-black fw-semibold"><%= client&.city %></p>
         </div>
      </div>
      <div class="row mb-1">
         <div class="col-lg-6">
            <label>State</label>
            <p class="text-black fw-semibold"><%= client&.state %></p>
         </div>
         <div class="col-lg-6">
            <label>Zip Code</label>
            <p class="text-black fw-semibold"><%= client&.zip_code %></p>
         </div>
      </div>
      <% if client %>
          <% client.dcos.each do |dco|%>
          <% if dco&.id == @provider&.dco&.to_i%>
              <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>Primary Location Name</label>
                    <p class="text-black fw-semibold"><%= dco&.dco_name rescue nil %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>Address</label>
                    <p class="text-black fw-semibold"><%= dco&.dco_address %></p>
                 </div>
              </div>
              <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>City</label>
                    <p class="text-black fw-semibold"><%= dco&.dco_city %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>State</label>
                    <p class="text-black fw-semibold"><%= dco&.state %></p>
                 </div>
              </div>
              <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>County</label>
                    <p class="text-black fw-semibold"><%= dco&.county %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>Zip Code</label>
                    <p class="text-black fw-semibold"><%= dco&.dco_zipcode %></p>
                 </div>
              </div>
              <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>Location Phone</label>
                    <p class="text-black fw-semibold"><%= dco&.service_location_phone_number %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>Location Fax</label>
                    <p class="text-black fw-semibold"><%= dco&.service_location_fax_number %></p>
                 </div>
              </div>
               <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>Panel Status to New Patients</label>
                    <p class="text-black fw-semibold"><%= dco&.panel_status_to_new_patients %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>Panel Age Limits</label>
                    <p class="text-black fw-semibold"><%= dco&.panel_age_limit %></p>
                 </div>
              </div>
             <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>Include in Directory?</label>
                    <p class="text-black fw-semibold"><%= dco&.include_in_directory&.upcase rescue nil %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>Is this location an inpatient facility?</label>
                    <p class="text-black fw-semibold"><%= dco&.inpatient_facility&.upcase rescue nil %></p>
                 </div>
              </div>
              <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>Is this location a clinic?</label>
                    <p class="text-black fw-semibold"><%= dco&.is_clinic&.upcase %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>Does this location offer Telehealth service?</label>
                    <p class="text-black fw-semibold"><%= dco&.telehealth_provider&.upcase %></p>
                 </div>
              </div>
            <div class="row mb-1">
                 <div class="col-lg-6">
                    <label>Website</label>
                    <p class="text-black fw-semibold"><%= dco&.website rescue nil %></p>
                 </div>
                 <div class="col-lg-6">
                    <label>Telehealth video conferencing technology used</label>
                    <p class="text-black fw-semibold"><%= dco&.telehealth_video_conferencing_technology rescue nil %></p>
                 </div>
              </div>
              <% end %>
          <% end %>
        <% end %>
    </div>
</div>
</div>
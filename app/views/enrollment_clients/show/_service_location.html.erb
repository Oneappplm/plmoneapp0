<div class="row mb-3">
   <div class="col-lg-12 card p-3">
      <div class="w-100 d-flex justify-content-between">
         <h3 class="text-primary">Primary Service Location</h3>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="provider_service_location">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
      <div class="w-100 collapsible" id="provider_service_location">
        <% @provider.service_locations.each_with_index do |service_location, indx|%>
          <div class="mb-2 <%= "border-bottom-dash" if indx < @provider.service_locations.length - 1 %>">
            <div class="row mb-1">
                <div class="col-lg-6">
                  <label>Non-office Service Area</label>
                  <p class="text-black fw-semibold"><%= service_location&.state%></p>
                </div>
                <div class="col-lg-6">
                  <label>Apps/Intake Phone</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_location_apps %></p>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-6">
                  <label>Zip Code</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_zip_code %></p>
                </div>
                <div class="col-lg-6">
                  <label>Office Email Address</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_office_email %></p>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-6">
                  <label>Fax</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_fax %></p>
                </div>
                <div class="col-lg-6">
                  <label>Office Website</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_office_website %></p>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-6">
                  <label>Crisis Phone</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_crisis_phone %></p>
                </div>
                <div class="col-lg-6">
                  <label>Other Phone/Pager</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_location_other_phone %></p>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-6">
                  <label>Self Service Appt Scheduling Available</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_appt_scheduling == '1' ? 'YES' : 'NO' %></p>
                </div>
                <div class="col-lg-6">
                  <label>Qualified Medical Interpreter Language</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_interpreter_language %></p>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-6">
                  <label>Telehealth Only State/District</label>
                  <p class="text-black fw-semibold"><%= service_location.primary_service_telehealth_only_state %></p>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
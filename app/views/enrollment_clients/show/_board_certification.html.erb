<div class="row mb-3">
   <div class="col-lg-12 card p-3">
      <div class="w-100 d-flex justify-content-between">
         <h3 class="text-primary">Board Certifications</h3>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="provider_board_certification">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
      <div class="w-100 collapsible" id="provider_board_certification">
        <div class="row mb-1">
          <div class="col-lg-6">
            <label>Board Name</label>
            <p class="text-black fw-semibold"><%= @provider&.board_name%></p>
          </div>
          <div class="col-lg-6">
            <label>Certification Number</label>
            <p class="text-black fw-semibold"><%= @provider&.board_certificate_number %></p>
          </div>
        </div>
        <div class="row mb-1">
          <div class="col-lg-6">
            <label>Effective Date</label>
            <p class="text-black fw-semibold"><%= @provider&.board_effective_date&.strftime('%B %d, %Y') %></p>
          </div>
          <div class="col-lg-6">
            <label>Re-Certification Date</label>
            <p class="text-black fw-semibold"><%= @provider&.board_recertification_date&.strftime('%B %d, %Y') %></p>
          </div>
        </div>
        <div class="row mb-1">
          <div class="col-lg-6">
            <label>Expiration Date</label>
            <p class="text-black fw-semibold"><%= @provider&.board_expiration_date&.strftime('%B %d, %Y') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
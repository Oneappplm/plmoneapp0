<div class="row mb-3">
   <div class="col-lg-12 card p-3">
      <div class="w-100 d-flex justify-content-between">
         <h3 class="text-primary">CAQH</h3>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="provider_caqh">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
        <div class="w-100 collapsible" id="provider_caqh">
      <div class="row mb-1">
        <div class="col-lg-6">
            <label>CAQH ID</label>
            <p class="text-black fw-semibold"><%= @provider&.caqhid %></p>
        </div>
        <div class="col-lg-6">
            <label>Current Re-Attestation</label>
            <p class="text-black fw-semibold"><%= @provider&.caqh_current_reattestation_date&.strftime('%B %d, %Y') %></p>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col-lg-6">
            <label>CAQH Username</label>
            <p class="text-black fw-semibold"><%= @provider&.caqh_username %></p>
        </div>

        <div class="col-lg-6">
            <label>Re-Attestation must be completed by</label>
            <p class="text-black fw-semibold"><%= Date.parse(@provider&.caqh_reattest_completed_by)&.strftime('%B %d, %Y') rescue nil %></p>
        </div>
      </div>
      <% if current_setting.qualifacts? %>
        <div class="row mb-1">
          <div class="col-lg-6">
              <label>CAQH Password</label>
              <p class="text-black fw-semibold"><%= @provider&.caqh_password %></p>
          </div>
          <div class="col-lg-6">
              <label>CAQH Questions</label>
              <p class="text-black fw-semibold"><%= @provider&.caqh_question %></p>
          </div>
        </div>
        <div class="row mb-1">
          <div class="col-lg-6">
              <label>CAQH State</label>
              <p class="text-black fw-semibold"><%= @provider&.caqh_state_name %></p>
          </div>
          <div class="col-lg-6">
              <label>CAQH Answer</label>
              <p class="text-black fw-semibold"><%= @provider&.caqh_answer %></p>
          </div>
        </div>
      <div class="row mb-1">
          <div class="col-lg-6">
              <label>CAQH PDF Date Received</label>
              <p class="text-black fw-semibold"><%= @provider&.caqh_pdf_date_received&.strftime('%B %d, %Y') %></p>
          </div>
          <div class="col-lg-6">
              <label>CAQH Notes</label>
              <p class="text-black fw-semibold"><%= @provider&.caqh_notes %></p>
          </div>
        </div>
      <% end %>
         </div>
    </div>
  </div>
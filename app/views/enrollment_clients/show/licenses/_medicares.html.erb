<h3 class="text-primary">Medicare</h3>
<% @provider.medicares.each do |medicare|%>
<div class="row mb-1">
   <div class="col-lg-6">
      <label>Medicare PTAN Number</label>
      <p class="text-black fw-semibold"><%= medicare.ptan_number %></p>
   </div>
   <div class="col-lg-6">
      <label>Medicare Effective Date</label>
      <p class="text-black fw-semibold"><%= medicare.effective_date&.strftime('%B %d, %Y') %></p>
   </div>
</div>
<div class="row mb-1">
   <div class="col-lg-6">
      <label>Medicare Username</label>
      <p class="text-black fw-semibold"><%= medicare.medicare_username %></p>
   </div>
   <div class="col-lg-6">
      <label>Medicare Password</label>
      <p class="text-black fw-semibold"><%= medicare.password %></p>
   </div>
</div>
<div class="row mb-1">
   <div class="col-lg-6">
      <label>Medicare Security Question</label>
      <p class="text-black fw-semibold"><%= medicare.question %></p>
   </div>
   <div class="col-lg-6">
      <label>Medicare Security Answer</label>
      <p class="text-black fw-semibold"><%= medicare.answer %></p>
   </div>
</div>
<div class="row mb-1">
   <div class="col-lg-6">
      <label>Medicare Reval Date</label>
      <p class="text-black fw-semibold"><%= medicare.mcc_username %></p>
   </div>
   <div class="col-lg-6">
      <label>Medicare Notes</label>
      <p class="text-black fw-semibold"><%= medicare.notes %></p>
   </div>
</div>
<% end %>
<% if @provider.medicares.blank? %>
<div class="row mb-1">
   <div class="col-lg-12">
      <label>No Medicare record to show</label>
   </div>
</div>
<% end %>
wb = xlsx_package.workbook
s = wb.styles
header = s.add_style sz: 14, b: true, bg_color: "6EAA46", fg_color: "FFFFFF", alignment: { wrap_text: true, vertical: :center }
wb.add_worksheet(name: "Post") do |sheet|
  sheet.add_row ["Platform", "Group Name", "Provider Status",  "First Name", "Last Name", "Practitioner Type", "NPI", "State", "CAQH ID", "Current Attestation", "Re-Attestation Date"], style: header, height: 50
  @providers.each do |provider|
    caqh_state = provider&.caqh_state
    state_id = caqh_state.to_i
    state_name = State.find_by(id: state_id)&.name rescue nil
    caqh_reattest_completed_by = Date.parse(provider&.caqh_reattest_completed_by)&.strftime('%b %d, %Y') rescue nil
    sheet.add_row [
      flatforms.detect{|flatform| flatform.last == provider.group&.flatform }&.first,
      provider.group&.group_name,
      provider_statuses.detect{|provider_status| provider_status.last == provider&.status }&.first,
      provider.first_name,
      provider.last_name,
      provider.practitioner_type,
      provider.npi,
      state_name,
      provider.caqhid,
      provider.caqh_current_reattestation_date&.strftime('%b %d, %Y'),
      caqh_reattest_completed_by
    ], types: [:string, :string, :string, :string, :string, :string, :string, :string, :string, :string, :string]
  end
  sheet.column_widths 12, 18, 18, 24, 24, 18, 16, 12, 16, 16, 16
end
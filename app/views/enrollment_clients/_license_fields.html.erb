 <div class="row field licenses-field mb-2" data-id=0>
    <% if f.object.license_number.nil? %>
      <div class="col-lg-12">
        <label class="text-dark-grey">State License Number</label>
        <%= f.text_field :license_number, placeholder: 'Type here...', class: 'form-control border border-dark mb-3', required: true %>
      </div>
    <% end %>

    <% if f.object.license_effective_date.nil? %>
      <div class="col-lg-12">
        <label class="text-dark-grey">License Effective Date</label>
        <%= f.text_field :license_effective_date, placeholder: 'MM-DD-YYYY', class: 'form-control border border-dark mb-3', onfocus: "(this.type = 'date')", required: true %>
      </div>
    <% end %>

    <% if f.object.state_id.nil? %>
      <div class="col-lg-12">
        <label class="text-dark-grey">License Registration State</label>
        <%= f.select :state_id, options_for_select(states.pluck(:name, :id), f.object.state_id), { prompt: 'Select option' }, { class: 'form-select border-dark mb-3 state_dropdown', required: true } %>
      </div>
    <% end %>

    <% if f.object.license_expiration_date.nil? %>
      <div class="col-lg-12">
        <label class="text-dark-grey">License Expiration Date</label>
        <%= f.text_field :license_expiration_date, placeholder: 'MM-DD-YYYY', class: 'form-control border border-dark', onfocus: "(this.type = 'date')", required: true %>
      </div>
    <% end %>
</div>
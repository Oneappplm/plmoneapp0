 <div class="row field dea-licenses-field mb-2" data-id=0>
    <div class="col-lg-6">
      <label class="text-dark-grey">DEA Registration Number <em>(if applicable, must include alpha, dashes, periods)</em></label>
      <%= f.text_field :dea_license_number, placeholder: 'Type here...', class: 'form-control border border-dark mb-3' %>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">DEA Registration Original License Issue Date</label>
      <%= f.text_field :dea_license_effective_date, placeholder: 'MM-DD-YYYY', value: Time.zone.parse(f.object.dea_license_effective_date.to_s)&.strftime('%Y-%m-%d'), class: 'form-control border border-dark mb-3', onfocus: "(this.type = 'date')" %>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">DEA Registration State</label>
      <%= f.select :state_id, options_for_select([]), { prompt: 'State' }, {:class => 'form-select border border-dark state-select single-select',  data: { value: f.object.state_id } }  %>
    </div>
    <div class="col-lg-6 mb-3">
      <label class="text-dark-grey">DEA Registration Expiration Date</label>
      <%= f.text_field :dea_license_expiration_date, placeholder: 'MM-DD-YYYY', value: Time.zone.parse(f.object.dea_license_expiration_date.to_s)&.strftime('%Y-%m-%d'), class: 'form-control border border-dark', onfocus: "(this.type = 'date')" %>
    </div>
    <div class="col-lg-6 mb-3">
      <label class="text-dark-grey">DEA Registration Renewal(Current Effective) Date</label>
      <%= f.text_field :dea_license_renewal_effective_date, placeholder: 'MM-DD-YYYY', value: Time.zone.parse(f.object.dea_license_renewal_effective_date.to_s)&.strftime('%Y-%m-%d'), class: 'form-control border border-dark', onfocus: "(this.type = 'date')" %>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Explain if you do not have DEA Registration Number(required if no DEA Number) </label>
      <%= f.text_field :no_dea_license, placeholder: 'Type here...', class: 'form-control border border-dark mb-3' %>
    </div>

  <div class="d-flex buttons gap-2 mt-2">
    <div class="links">
    <button type="button" class="add_association  py-1 btn btn-primary" > <i class="bi bi-plus-circle-fill"></i> Add DEA License </button>
  </div>
     <% if f.object.id %>
      <button type="button" class="btn btn-danger py-1 delete-license" data-model="dea_licenses" data-id="<%= f.object.id %>" > <i class="bi bi-trash-fill"></i></button>
    <% else %>
      <button type="button" class="btn btn-danger py-1 remove-dynamic-fields" data-id=> <i class="bi bi-trash-fill"></i></button>
    <% end %>
  </div>
</div>
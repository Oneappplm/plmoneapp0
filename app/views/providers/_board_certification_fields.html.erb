 <div class="row field board-certification-field mb-2 border-dash border-1 p-2" data-id=0>
        <div class="col-lg-6 mb-3">
          <label class="text-dark-grey">Board Name</span></label>
           <%= f.select :bc_board_name, options_for_select([]), { prompt: 'Board Name' }, {:class => 'form-select border border-dark single-select board-name',  data: { value: f.object.bc_board_name } }  %>
        </div>
        <div class="col-lg-6 mb-3">
          <label class="text-dark-grey">Certification Number</span></label>
          <%= f.text_field :bc_certification_number, placeholder: 'Type here...',class: 'form-control border border-dark' %>
        </div>

        <div class="col-lg-6 mb-3">
          <label class="text-dark-grey">Effective Date </span></label>
          <%= f.text_field :bc_effective_date ,placeholder: 'MM/DD/YYYY', class: 'form-control border border-dark', value: display_mdy(f.object.bc_effective_date), onfocus: "(this.type = 'date')" %>
        </div>
        <div class="col-lg-6 mb-3">
          <label class="text-dark-grey">Re-certification Date</label>
          <%= f.text_field :bc_recertification_date ,placeholder: 'MM/DD/YYYY', class: 'form-control border border-dark', value: display_mdy(f.object.bc_recertification_date), onfocus: "(this.type = 'date')" %>
        </div>


        <div class="col-lg-6 mb-3">
          <label class="text-dark-grey">Expiration Date</label>
          <%= f.text_field :bc_expiration_date ,placeholder: 'MM/DD/YYYY', class: 'form-control border border-dark', value:display_mdy(f.object.bc_expiration_date), onfocus: "(this.type = 'date')" %>
        </div>
         <div class="col-lg-6 mb-3">
          <label class="text-dark-grey">Specialty Type</span></label>
          <%= f.text_field :bc_specialty_type, placeholder: 'Type here...',class: 'form-control border border-dark' %>
        </div>
        <div class="col-lg-12 pb-2 d-flex justify-content-end">
          <%= f.check_box :_destroy %>
          <%= f.label :_destroy, "Remove", class: 'mx-2 text-dark-grey' %>
        </div>
   </div>

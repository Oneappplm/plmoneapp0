<div class="question-field mb-2">
  <div class="row">
    <div class="col-lg-6">
      <label class="text-dark-grey">Question</label>
      <%= q.text_field :question, placeholder: 'Type here...', class: 'form-control border-dark question' %>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Answer</label>
      <%= q.text_field :answer, placeholder: 'Type here...', class: 'form-control border-dark answer' %>
    </div>
  </div>
     <div class="d-flex buttons gap-2 mt-2">
    <div class="links">
    <a type="button" data-index="<%= idx %>" class="add_questions py-1 btn btn-primary" > <i class="bi bi-plus"></i></a>
  </div>
     <% if q.object.id %>
      <a type="button" class="btn btn-danger btn-xs py-1 remove-question has-data" data-model="payer_questions" data-id="<%= q.object.id %>" > <i class="bi bi-trash-fill"></i></a>
    <% else %>
      <a type="button" class="btn btn-danger btn-xs py-1 remove-question" > <i class="bi bi-trash-fill"></i></a>
    <% end %>
  </div>
</div>
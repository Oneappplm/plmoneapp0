<div class="row field mb-2">
	<div class="col-lg-5">
    <label class="text-dark-grey">Taxonomy Code</label>
		<%= f.text_field :taxonomy_code, class: 'form-control border border-dark', placeholder: 'Taxonomy Code' %>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Specialty</label>
		<%= f.collection_select :specialty, specialties, :bcbs, :bcbs, { prompt: 'Specialty' }, { class: 'form-control border border-dark' } %>
	</div>
	<div class="col-lg-1">
      <label class="text-white">spacer</label>
      <% if f.object.id %>
        <a href="javascript:void(0);" class="btn btn-danger delete-record w-100" data-model="taxonomies" data-id="<%= f.object.id %>">
          <i class="bi bi-trash-fill"></i>
        </a>
      <% else %>
        <a href="javascript:void(0);" class="btn btn-danger remove-dynamic-fields w-100">
         <i class="bi bi-trash-fill"></i>
        </a>
      <% end %>
	</div>
</div>

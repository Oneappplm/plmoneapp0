 <div class="row field licenses-field mb-2" data-id=0>
		<div class="col-lg-6 mb-3">
      <label class="text-dark-grey">State License Number<span class="text-red">*</span>  <em>(if applicable, must include alpha, dashes, periods)</em></label>
			<%= f.text_field :license_number, placeholder: 'Type here...', class: form_control_classes(danger: f.object.license_number.blank? && @provider.persisted? ) %>
		</div>
		<div class="col-lg-6 mb-3">
      <label class="text-dark-grey">State License Issue Date <span class="text-red">*</span></label>
			<%= f.text_field :license_effective_date, placeholder: 'MM-DD-YYYY', class: form_control_classes(danger: f.object.license_effective_date.blank? && @provider.persisted? ), onfocus: "(this.type = 'date')", required: true %>
		</div>
    <div class="col-lg-6 mb-3">
      <label class="text-dark-grey">State License State <span class="text-red">*</span></label>
      <%= f.select :state_id, options_for_select([]), { prompt: 'State' }, {:class => single_search_classes({ danger: f.object.state_id.blank? && @provider.persisted? }),  data: { value: f.object.state_id } }  %>
    </div>
    <!-- <div class="col-lg-6">
      <label class="text-dark-grey">License Registration State <span class="text-red">*</span></label>
      <%= f.select :state_id, options_for_select([]), { prompt: 'State' }, {:class => 'form-select border border-dark state-select single-select',  data: { value: f.object.state_id } }  %>
    </div> -->
		<div class="col-lg-6 mb-3">
      <label class="text-dark-grey">State License Expiration Date <span class="text-red">*</span></label>
			<%= f.text_field :license_expiration_date, placeholder: 'MM-DD-YYYY', class: form_control_classes(danger: f.object.license_expiration_date.blank? && @provider.persisted? ), onfocus: "(this.type = 'date')", required: true %>
		</div>

    <div class="col-lg-6 mb-3">
      <label class="text-dark-grey">State License Renewal(Current Effective) Date <span class="text-red">*</span></label>
			<%= f.text_field :license_state_renewal_date, placeholder: 'MM-DD-YYYY', class: form_control_classes(danger: f.object.license_expiration_date.blank? && @provider.persisted? ), onfocus: "(this.type = 'date')", required: true %>
		</div>

    <div class="col-lg-6">
      <label class="text-dark-grey">Explain if you do not have State License Number(required if no State Number) </label>
      <%= f.text_field :no_state_license, placeholder: 'Type here...', class: 'form-control border border-dark mb-3' %>
    </div>

    <div class="col-lg-6">
      <label class="text-dark-grey">License Type </label>
      <%= f.text_field :license_type, placeholder: 'Type here...', class: 'form-control border border-dark mb-3' %>
    </div>

<div class="d-flex buttons gap-2 mt-2">
    <div class="links">
    <button type="button" class="add_association  py-1 btn btn-primary" > <i class="bi bi-plus-circle-fill"></i> Add State License </button>
  </div>
     <% if f.object.id %>
      <button type="button" class="btn btn-danger py-1 remove-dynamic-fields" data-model="np_licenses" data-id="<%= f.object.id %>" > <i class="bi bi-trash-fill"></i></button>
    <% else %>
      <button type="button" class="btn btn-danger py-1 remove-dynamic-fields" data-id=0> <i class="bi bi-trash-fill"></i></button>
    <% end %>
  </div>
</div>
<div class="card rounded p-2 py-3">
  <div class="row mb-3">
    <div class="col-lg-12">
      <h4>Generate Report</h4>
    </div>
  </div>
  <form>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <label class="text-dark-grey">Reporting Period</label>
        <select class="form-select border-dark">
          <option value="today">Today</option>
          <option value="weekly">Weekly</option>
          <option value="monthly">Monthly</option>
        </select>
      </div>
    </div>
    <div class="col-lg-6">
        <label class="text-dark-grey">Group</label>
        <select class="form-select border-dark"></select>
        <span>
          <input type="checkbox" name="" class="border-dark">
          <label class="text-dark-grey">All</label>
        </span>
    </div>
    <div class="col-lg-12 d-flex justify-content-end">
      <button class="btn btn-primary btn-sm">Generate Report</button>
    </div>
  </div>
  </form>
</div>
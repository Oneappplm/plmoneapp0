<div class="card rounded p-2 py-3  mb-3">
<div class="row">
  <div class="col-lg-12">
    <h4>Enrollment Payer</h4>
  </div>
  <div class="col-lg-4 mb-3">
    <select class="form-select border-dark py-1" id="payer_selector">
      <option value="">Select Option</option>
      <% enrollment_payer.each do |provider|%>
      <option value="<%= provider[1]%>"><%= provider[0]%></option>
      <% end %>
   </select>
  </div>
</div>
<div class="row g-2 mb-2">
  <div class="col-lg-4">
    <div class="card p-2 rounded-15 pale-green ps-3 pb-0" style="min-height: 112px;">
      <h5 class="text-black text-left">Application Submitted</h5>
      <div class="w-100 d-flex d-flex align-items-end">
         <h1 style="font-size: 40px;" class="text-black mt-2" id="payer_submitted">
            <%= EnrollmentProvidersDetail.submitted.count %>
        </h1>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card p-2 rounded-15 pale-green ps-3 pb-0" style="min-height: 112px;">
      <h5 class="text-black text-left">Processing</h5>
      <div class="w-100 d-flex d-flex align-items-end">
         <h1 style="font-size: 40px;" class="text-black mt-2"  id="payer_processing">
            <%= EnrollmentProvidersDetail.processing.count %>
        </h1>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card p-2 rounded-15 pale-green ps-3 pb-0" style="min-height: 112px;">
      <h5 class="text-black text-left">Approved</h5>
      <div class="w-100 d-flex d-flex align-items-end">
         <h1 style="font-size: 40px;" class="text-black mt-2" id="payer_approved">
             <%= EnrollmentProvidersDetail.approved.count %>
        </h1>
      </div>
    </div>
  </div>
</div><div class="row g-2">
  <div class="col-lg-4">
    <div class="card p-2 rounded-15 pale-green ps-3 pb-0" style="min-height: 112px;">
      <h5 class="text-black text-left">Denied</h5>
      <div class="w-100 d-flex d-flex align-items-end">
         <h1 style="font-size: 40px;" class="text-black mt-2" id="payer_denied">
           <%= EnrollmentProvidersDetail.denied.count %>
        </h1>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card p-2 rounded-15 pale-green ps-3 pb-0" style="min-height: 112px;">
      <h5 class="text-black text-left">Terminated</h5>
      <div class="w-100 d-flex d-flex align-items-end">
         <h1 style="font-size: 40px;" class="text-black mt-2"  id="payer_terminated">
            <%= EnrollmentProvidersDetail.terminated.count %>
        </h1>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card p-2 rounded-15 pale-green ps-3 pb-0" style="min-height: 112px;">
      <h5 class="text-black text-left">Not Eligible</h5>
      <div class="w-100 d-flex d-flex align-items-end">
         <h1 style="font-size: 40px;" class="text-black mt-2" id="payer_not_eligible">
            <%= EnrollmentProvidersDetail.not_eligible.count %>
        </h1>
      </div>
    </div>
  </div>
</div>
</div>
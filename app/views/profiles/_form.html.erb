<div class="container">
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control mt-1 mb-1' %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control mt-1 mb-1' %>
      <small>(leave blank if you don't want to change it)</small>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: 'form-control mt-1 mb-1' %>
    </div>

    <div class="form-group">
      <%= form.label :current_password %>
      <%= form.password_field :current_password, class: 'form-control mt-1 mb-1', required: true %>
      <small>(required to update your profile)</small>
    </div>

    <div class="actions">
      <%= form.submit 'Update Profile', class: 'btn btn-primary btn-sm mt-2' %>
    </div>
  <% end %>
</div>

<div class="content container-fluid">
  <div class="row">
    <h1>Notifications</h1>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped table-bordered table-responsive text-center">
        <thead>
          <tr>
            <th width="2%" class="bg-primary text-white "></th>
            <th scope="col" class="bg-primary text-white">Date</th>
            <th scope="col" class="bg-primary text-white">Message</th>
            </div>
          </tr>
        </thead>
        <tbody>
          <% @notifications.each do |notif| %>
            <tr>
              <td>
                <% if notif.unread? %>
                  <i class="bi bi-envelope-exclamation-fill avatar-img text-danger" style="font-size: 1.2rem;"></i>
                <% else %>
                  <i class="bi bi-envelope-open avatar-img text-primary" style="font-size: 1.2rem;"></i>
                <% end %>
              </td>
              <td>
                <%= notif.created_at.strftime("%B %d, %Y")%> at <%= notif.created_at.strftime("%I:%M %p")%>
              </td>
              <td>
                <%= link_to notif.to_notification.message, notif.to_notification.url %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container mt-5">
	<h1>Select Verification Products</h1>

	<%= form_with url: orders_path do %>
	<table class="table table-bordered">
    <thead>
      <tr>
        <th class="text-white">Select</th>
        <th class="text-white">Name</th>
        <th class="text-white">Price (USD)</th>
      </tr>
    </thead>
    <tbody>
		  <% @products.each do |p| %>
		    <tr>
		      <td><%= check_box_tag "product_ids[]", p.id %></td>
			    <td><%= p.name %></td>
			    <td>$<%= p.price %></td>
		  <% end %>
  	</tbody>
  </table>
	  <%= submit_tag "Continue", class: 'btn btn-primary mt-2' %>
	<% end %>
	
	<% if @products %>
		<div class="col-lg-12 mt-3 mb-3">
			<div class="d-flex justify-content-between bg-medium-grey rounded align-items-center py-3">
				<div class="page_info ms-3 text-black">
					<%= page_entries_info @products %>
				</div>
				<% if params[:per_page ].present? %>
					<%= will_paginate @products, :params =>  {per_page: @per_page }, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
				<% else %>
					<%= will_paginate @products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
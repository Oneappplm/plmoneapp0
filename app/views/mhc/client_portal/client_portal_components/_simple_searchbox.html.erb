<div class="card">
   <div class="card-body bg-medium-grey">
      <div class="row my-3">
         <div class="col-12">
            <div class="d-flex justify-content-center gap-2">
               <a href="<%= mhc_client_portal_index_path %>" class="btn btn-sm  btn-primary fw-bold">Simple Search</a>
               <a href="<%= mhc_client_portal_index_path(advanced_search: true) %>" class="btn  btn-sm btn-light fw-bold">Advanced Search</a>
            </div>
         </div>
      </div>
      <%= search_form_for @q, url: mhc_client_portal_index_path do |f|%>
         <!-- start row of fields -->
         <div class="row">
            <div class="col-lg-6">
               <div class="row mb-3">
                  <div class="form-group">
                     <label class="text-sm text-black">Name</label>
                        <%= f.text_field :full_name_cont, value: "#{params[:q][:full_name_cont] rescue ''}", class: "form-control py-1", placeholder: 'Firstname Lastname' %>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">First Name:</label>
                        <%= f.text_field :first_name_cont, value: "#{params[:q][:first_name_cont] rescue ''}", class: "form-control py-1" %>

                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Last Name:</label>
                        <%= f.text_field :last_name_cont, value: "#{params[:q][:last_name_cont] rescue ''}", class: "form-control py-1" %>

                  </div>
               </div>
            </div>
            <div class="col-lg-6">
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Provider Type:</label>
                     <%= f.collection_select :provider_type_provider_type_abbreviation_eq, @provider_types, :fch, :fch, {prompt: '-- All --'}, { class: "form-select py-1" } %>
                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">Specialty:</label>
                     <select class="form-select py-1" name="" id="tset_selct">
                        <option value="">-- All --</option>
                        <% specialties.each do |specialty|%>
                        <option value="<%= specialty.bcbs%>" <%= params['specialty'] == specialty.bcbs ? 'selected' : '' %>><%= specialty.bcbs %></option>
                        <% end %>
                     </select>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">From Attest Date:</label>
                        <%= f.date_field :attest_date_gteq, value: "#{params[:q][:attest_date_gteq] rescue ''}", class: "form-control py-1" %>

                  </div>
                  <div class="col-lg-6">
                     <label class="text-sm text-black" for="">To Attest Date:</label>
                     <!-- <input type="text" class="form-control py-1" placeholder=""> -->
                        <%= f.date_field :attest_date_lteq, value: "#{params[:q][:attest_date_lteq] rescue ''}", class: "form-control py-1" %>

                  </div>
               </div>
            </div>
         </div>
         <!-- end of row of fields -->
         <!-- start of row of buttons -->
         <div class="row mt-4">
            <div class="col-lg-12 d-flex">
               <div class="flex-grow-1 justify-content-center align-items-center text-center">
                  <button class="btn btn-sm btn-primary fw-bold" style="margin-left: 10%;width: 150px;">Submit</button>
               </div>
               <div class="flex-shrink-0">
                  <a href="<%= mhc_client_portal_index_path %>" class="btn btn-sm btn-danger">Clear</a>
               </div>
            </div>
         </div>
         <!-- end of row of buttons -->
      <% end %>
   </div>
</div>



<div class="card">
	<div class="card-body bg-medium-grey">
		<div class="row my-3">
	         <div class="col-12">
	            <div class="d-flex justify-content-center gap-2">
								<a href="<%= mhc_client_portal_index_path %>" class="btn btn-sm btn-light fw-bold">Simple Search</a>
               	<a href="<%= mhc_client_portal_index_path(advanced_search: true) %>" class="btn  btn-sm btn-primary fw-bold">Advanced Search</a>
	            </div>
	         </div>
		</div>
		<%= search_form_for @q, url: mhc_client_portal_index_path do |f|%>
			<% if params[:advanced_search].present? || params.dig(:q, :advanced_search).present? %>
				<%= f.hidden_field :advanced_search, value: true %>
			<% end %>
			<div class="row">
				<div class="col-lg-6">
					<div class="row mb-3">
							<div class="form-group">
								<label class="text-sm text-black">Name</label>
								<!-- <input type="text" class="form-control py-1" > -->
								<%= f.text_field :full_name_cont, value: "#{params[:q][:full_name_cont] rescue ''}", class: "form-control py-1" %>
							</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
							<label class="text-sm text-black" for="">First Name</label>
							<!-- <input type="text" class="form-control py-1" placeholder=""> -->
							<%= f.text_field :first_name_cont, value: "#{params[:q][:first_name_cont] rescue ''}", class: "form-control py-1" %>
						</div>
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">Last Name</label>
							<%= f.text_field :last_name_cont, value: "#{params[:q][:last_name_cont] rescue ''}", class: "form-control py-1" %>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">From Attest Date</label>
								<!-- <input type="text" class="form-control py-1" placeholder=""> -->
							<%= f.date_field :attest_date_gteq, value: "#{params[:q][:attest_date_gteq] rescue ''}", class: "form-control py-1" %>
						</div>
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">To Attest Date</label>
								<!-- <input type="text" class="form-control py-1" placeholder=""> -->
							<%= f.date_field :attest_date_lteq, value: "#{params[:q][:attest_date_lteq] rescue ''}", class: "form-control py-1" %>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
							<label class="text-sm text-black" for="">Provider Type</label>
							<%= f.collection_select :provider_type_provider_type_abbreviation_eq, @provider_types, :fch, :fch, {prompt: '-- All --'}, { class: "form-select py-1" } %>
						</div>
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">Specialty</label>
								<select class="form-select">
								<option value="">-- All --</option>
								<% specialties.each do |specialty|%>
									<option value="<%= specialty.bcbs%>" <%= params['specialty'] == specialty.bcbs ? 'selected' : '' %>><%= specialty.bcbs %></option>
									<% end %>
								</select>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">Cred Status</label>
								<select class="form-select">
								<% cred_statuses = ['attested', 'in-process', 'pending', 'incomplete', 'complete-application', 'no-application', 'psv', 'returned']%>
								<option value="">-- All --</option>
								<% cred_statuses.each do |stat|%>
									<% if stat != 'pending'%>
										<option value="<%= stat %>" <%= params['cred_status'] == stat ? 'selected' : ''%>><%= stat != 'psv' ? stat.titleize : stat.upcase %></option>
										<% else %>
										<option value="<%= stat %>" <%= params['cred_status'] == stat ? 'selected' : ''%>>Pending Data Entry</option>
										<% end %>
									<% end %>
								</select>
						</div>
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">Cred Cycle</label>
								<select class="form-select">
								<option value="">-- All --</option>
									<option value="Cred" <%= params['cred_or_recred'] == 'Cred' ? 'Selected' : ''%>>Cred</option>
									<option value="Recred" <%= params['cred_or_recred'] == 'Recred' ? 'Selected' : ''%>>Recred</option>
								</select>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
							<label class="text-sm text-black" for="">VRC Status</label>
							<select class="form-select">
							<% vrc_statuses = ['approved', 'denied', 'pending', 'tabled', 'terminated']%>
								<option value="">-- All --</option>
							<% vrc_statuses.each do |stat|%>
								<option value="<%= stat %>" <%= params['vrc_status'] == stat ? 'Selected' : ''%>><%= stat.titleize %></option>
							<% end %>
							</select>
						</div>
						<div class="col-lg-6">
							<label class="text-sm text-black" for="">PSV Flag</label>
							<% psv_flag_options = ['With PSV', 'Without PSV']%>
							<select class="form-select">
							<option value="">-- All --</option>
							<% psv_flag_options.each do |flg|%>
								<option value="<%= flg %>" <%= params['psv_flag'] == flg ? 'Selected' : ''%>><%= flg %></option>
							<% end %>
							</select>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="row mb-3">
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">State</label>
								<%= f.collection_select :practice_informations_state_cont, @states, :alpha_code, :name, {prompt: '-- All --'}, { class: "form-select py-1" } %>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">City</label>
							<%= f.text_field :practice_informations_city_cont, value: "#{params[:q][:practice_informations_city_cont] rescue ''}", class: "form-control py-1" %>
						</div>
						<div class="col-lg-6">
							<label class="text-sm text-black" for="">Postal/Zip Code</label>
							<%= f.text_field :practice_informations_zip_or_ext_zip_cont, value: "#{params[:q][:practice_informations_zip_or_ext_zip_cont] rescue ''}", class: "form-control py-1" %>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">NPI</label>
							<%= f.text_field :npi_cont, value: "#{params[:q][:npi_cont] rescue ''}", class: "form-control py-1" %>
						</div>
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">SSN</label>
								<!-- <input type="text" name="" class="form-control py-1"> -->
							<%= f.text_field :ssn_cont, value: "#{params[:q][:ssn_cont] rescue ''}", class: "form-control py-1" %>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-12">
							<label class="text-sm text-black" for="">Birth Date</label>
							<%= f.date_field :birth_date_eq, value: "#{params[:q][:birth_date_eq] rescue ''}", class: "form-control py-1" %>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">TIN #</label>
							<%= f.text_field :tax_id_cont, value: "#{params[:q][:tax_id_cont] rescue ''}", class: "form-control py-1" %>

						</div>
						<div class="col-lg-6">
								<label class="text-sm text-black" for="">Entity ID</label>
							<%# f.text_field :entity, value: "#{params[:q][:practice_information_zip_cont] rescue ''}", class: "form-control py-1" %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="d-flex justify-content-between">
								<label class="text-sm text-black">Medv ID</label>
							</div>
							<%= f.text_field :caqh_provider_attest_id_eq, value:  "#{params[:q][:caqh_provider_attest_id_eq] rescue ''}", style: "width: 100%;", rows: 4, class: "form-control py-1" %>
							<!-- <textarea class="h-full w-full" style="width: 100%;" rows="4"></textarea> -->
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-lg-12">
								<label class="text-sm text-black" for="">Category</label>
								<select class="form-select">
								<option value="">-- All --</option>
								<% ['PCP', 'Specialist'].each do |category|%>
									<option value="<%= category.underscore %>"%><%= category %></option>
								<% end %>
								</select>
						</div>
					</div>
				</div>
			</div>
			<!-- end of row for fields -->
			<!-- start of row for btton -->
			 <div class="row mt-3">
            <div class="col-lg-12  d-flex">
            	<div class="flex-grow-1 justify-content-center align-items-center text-center">
            		<button class="btn btn-sm btn-primary fw-bold" style="margin-left: 10%;width: 150px;">Submit</button>
            	</div>
            	<div class="flex-shrink-0">
                  <a href="<%= mhc_client_portal_index_path(advanced_search: true) %>" class="btn btn-sm btn-danger">Clear</a>
            	</div>
             </div>
           </div>
           <!-- end of row for button -->
		<!-- </form> -->
		<% end %>
	</div>
</div>


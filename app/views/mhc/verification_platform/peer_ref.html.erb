  <div class="enc-content">
        <div class="container">
            <%= render "top_nav_buttons"%>
            <div class="mt-4 d-flex align-items-end justify-content-between gap-3">
                <div class="d-flex align-items-center gap-3">
                    <h4 class="page-heading">Peer References</h4>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="practice-info-switch">
                        <label class="form-check-label" for="practice-info-switch">Not Applicable</label>
                    </div>
                </div>
                <a href="<%= verification_platform_index_path(page: 'add_new_peer_ref')%>" class="btn btn-primary py-1">
                    <i class='bx bx-plus'></i>
                    Add New Reference
                </a>
            </div>
            <div class="mt-2 page-applicable">
                <span class="page-note">
                    <i class='bx bx-error-circle font-red'></i> <span>Please list three professional references, at
                        least one from your specialty area, not including relatives, current partners or associates in
                        practice.
                        If possible, include at least one member from the Medical Staff of each facility at which you
                        have privileges. Required fields are marked with the symbol “<span
                            class="font-red">*</span>”.</span>
                </span>
                <span class="page-note">
                    <i class='bx bx-error-circle font-red'></i> <span>References must be from individuals who are
                        directly familiar with your work, either via direct clinical observation or through close
                        working relations.</span>
                </span>
            </div>
            <table class="table table-bordered practice-table mt-3 page-applicable ">
                <thead>
                    <tr>
                        <th class="text-white" scope="col">Title</th>
                        <th class="text-white">Practitioner Name</th>
                        <th class="text-white">Address</th>
                        <th class="text-white">State To</th>
                        <th class="text-white">Zip Code</th>
                        <th class="text-white">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="<%= verification_platform_index_path(page: 'peer_ref_record')%>">Lorem</a></td>
                        <td>Lorem</td>
                        <td>Lorem ipsum</td>
                        <td>11/11/2011</td>
                        <td>11/11/2011</td>
                        <td>11/11/2011</td>
                    </tr>

                </tbody>
            </table>
            <form action="" class="page-not-applicable">
                <div class="form-row mt-4">
                    <label for="">Please explain:<span class="font-red">*</span></label>
                    <textarea name="not-applicable-explain" id="" cols="30" rows="5" class="form-control"
                        required></textarea>
                </div>
                <div class="form-row mt-2 d-flex justify-content-end">
                    <button type="submit" name="save-not-app-explain" class="btn btn-primary py-1">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
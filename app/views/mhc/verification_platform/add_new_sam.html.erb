
    <div class="enc-content">
        <div class="container">
            <%= render "top_nav_buttons"%>
          
            <div class="row mt-4">
                <div class="col-xl-6 d-flex align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <a href="<%= verification_platform_index_path(page: 'sam')%>" class="link-back">
                            <i class='bx bx-left-arrow-alt'></i>
                        </a>
                        <h4 class="page-heading">Add New SAM Record</h4>
                    </div>
                </div>
            </div>
            <form action="">
                <div class="form-row mt-3">
                    <div class="d-flex align-items-center gap-3">
                        <label for="">Primary?</label>
                        <div class="form-check d-flex align-items-center gap-2">
                            <input class="form-check-input" type="radio" name="primary-radio" id="primary-radio-yes"
                                value="Yes">
                            <label class="form-check-label" for="primary-radio-yes">
                                Yes
                            </label>
                        </div>
                        <div class="form-check d-flex align-items-center gap-2">
                            <input class="form-check-input" type="radio" name="primary-radio" id="primary-radio-no"
                                value="No">
                            <label class="form-check-label" for="primary-radio-no">
                                No
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="col-xl-4">
                        <label for="">First Name:</label>
                        <input name="allied-lname" type="text" id="fname" class="form-control"
                            placeholder="Type here...">
                    </div>
                    <div class="col-xl-2">
                        <label for="">Middle Name:</label>
                        <input name="allied-lname" type="text" id="mname" class="form-control"
                            placeholder="Type here...">
                    </div>
                    <div class="col-xl-4">
                        <label for="">Last Name:</label>
                        <input name="allied-lname" type="text" id="lname" class="form-control"
                            placeholder="Type here...">
                    </div>
                    <div class="col-xl-2">
                        <label for="suffix">Suffix:</label>
                        <select name="suffix" id="suffix" class="form-select">
                            <option value="">Select option</option>
                        </select>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="col-xl-4">
                        <label for="">SSN:</label>
                        <input name="ssn" type="text" id="ssn" class="form-control" placeholder="Type here...">
                    </div>
                </div>
                <div class="form-row mt-3 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary py-1">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

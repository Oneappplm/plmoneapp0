    <div class="enc-content">
        <div class="container">
            <%= render "top_nav_buttons"%>
            <div class="page-applicable mt-4" id="NewCertificate">
                <div class="row">
                    <div class="col-xl-6 d-flex align-items-center">
                        <div class="d-flex align-items-center gap-3">
                            <a href="<%= verification_platform_index_path(page: 'board_cert')%>" class="link-back">
                                <i class='bx bx-left-arrow-alt'></i>
                            </a>
                            <h4 class="page-heading">Add New Board Certificate</h4>
                        </div>
                    </div>
                </div>
                <form action="">
                    <div class="form-row row">
                        <div class="col-xl-6">
                            <label for="specialty">Specialty:</label>
                            <select name="specialty" id="specialty" class="form-select ">
                                <option value="">Select option</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row row">
                        <div class="col-xl-6">
                            <label for="certificatestatus">Board Certificate Status:</label>
                            <select name="certificatestatus" id="certificatestatus" class="form-select ">
                                <option value="">Select option</option>
                            </select>
                        </div>
                        <div class="col-xl-6">
                            <label for="issuingboard">Issuing Board:</label>
                            <select name="issuingboard" id="issuingboard" class="form-select ">
                                <option value="">Select option</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row row mb-4">
                        <div class="col-xl-6">
                            <label for="initialdate">Initial Certification Date:</label>
                            <input type="text" id="initialdate" name="initialdate" class="form-control form-control-lg"
                                placeholder="MM/DD/YYYY" onfocus="(this.type='date')" onblur="(this.type='text')">
                            <!-- <input class="form-control form-control-lg" type="date" name="from" id="from" placeholder="From"> -->
                        </div>
                        <div class="col-xl-6">
                            <label for="expiredate">Certification Expiration Date:</label>
                            <div class="input-group gap-3 d-flex align-items-center">
                                <input type="text" id="expiredate" name="expiredate"
                                    class="form-control form-control-lg" placeholder="MM/DD/YYYY"
                                    onfocus="(this.type='date')" onblur="(this.type='text')">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="present-switch">
                                    <label class="form-check-label" for="present-switch">Does Not Expire</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card p-3 mb-3">
                        <div class="form-row row mb-2">
                            <div class="col-xl-7">
                                <label for="recertification">Recertification Date:</label>
                                <div class="input-group gap-3 d-flex align-items-center">
                                    <input type="text" id="recertification" name="recertification"
                                        class="form-control form-control-lg" placeholder="MM/DD/YYYY"
                                        onfocus="(this.type='date')" onblur="(this.type='text')">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="present-switch">
                                        <label class="form-check-label" for="present-switch">Remove</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row row justify-content-center">
                            <div class="col-xl-2">
                                <button class="btn btn-primary form-control">Add Other Date</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-row row">
                        <label for="" class="align-self-center">Have you ever been examined by this Board but failed to
                            pass the examination?</label>
                        <div class="input-group gap-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Examined" value="yesExamined"
                                    checked>
                                <label class="form-check-label" for="yesExamined">Yes</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Examined" value="noExamined">
                                <label class="form-check-label" for="noExamined">No</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row row YesExamined">
                        <label for="NotExamined" class=" ">If Yes, please explain:</label>
                        <div class="col-xl-6">
                            <input type="text" class="form-control form-control-lg" name="YesExamined" id="YesExamined"
                                placeholder="Type here..">
                        </div>
                    </div>
                    <div class="form-row row">
                        <label for="">Do you wish to be listed in the directory under this specialty?</label>
                        <div class="input-group gap-2">
                            <label for="hmo" class="align-self-center">HMO</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="HMO" value="yesHMO" checked>
                                <label class="form-check-label" for="yesHMO">Yes</label>
                            </div>
                            <div class="form-check me-2">
                                <input class="form-check-input" type="radio" name="HMO" value="noHMO">
                                <label class="form-check-label" for="noHMO">No</label>
                            </div>
                            <label for="ppo" class="align-self-center">PPO</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ppo" value="yesppo" checked>
                                <label class="form-check-label" for="yesppo">Yes</label>
                            </div>
                            <div class="form-check me-2">
                                <input class="form-check-input" type="radio" name="ppo" value="noppo">
                                <label class="form-check-label" for="noppo">No</label>
                            </div>
                            <label for="POS" class="align-self-center">POS</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="POS" value="yesPOS" checked>
                                <label class="form-check-label" for="yesPOS">Yes</label>
                            </div>
                            <div class="form-check ">
                                <input class="form-check-input" type="radio" name="POS" value="noPOS">
                                <label class="form-check-label" for="noPOS">No</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row row">
                        <label for="" class="align-self-center">Have you applied for board certification other than
                            indicated above?</label>
                        <div class="input-group gap-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="AppliedboardCertificate"
                                    value="yesAppliedboardCertificate" checked>
                                <label class="form-check-label" for="yesAppliedboardCertificate">Yes</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="AppliedboardCertificate"
                                    value="noAppliedboardCertificate">
                                <label class="form-check-label" for="noAppliedboardCertificate">No</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row row YesAppliedboardCertificate">
                        <label for="certificationname" class=" ">If Yes, Certification Name:</label>
                        <div class="col-xl-6">
                            <input type="text" class="form-control form-control-lg" name="certificationname"
                                id="certificationname" placeholder="Type here..">
                        </div>
                    </div>
                    <div class="form-row row mb-4">
                        <div class="col-xl-6">
                            <label for="dateapplied" class=" ">Date Applied:</label>
                            <input type="text" id="dateapplied" name="dateapplied" class="form-control form-control-lg"
                                placeholder="MM/DD/YYYY" onfocus="(this.type='date')" onblur="(this.type='text')">
                            <!-- <input class="form-control form-control-lg" type="date" name="from" id="from" placeholder="From"> -->
                        </div>
                    </div>
                    <div class="form-row row">
                        <div class="col-xl-4">
                            <div class="input-group gap-2">
                                <label class="align-self-center" for="">Show on Tickler?</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="tickler" value="yesTickler">
                                    <label class="form-check-label" for="yesTickler">Yes</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="tickler" value="yesTickler"
                                        checked>
                                    <label class="form-check-label" for="noTickler">No</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row row mb-3">
                        <label for="comment">Please list any comments:</label>
                        <div class="col-xl-12">
                            <input type="text" class="form-control form-control-lg" name="comments" id="comments"
                                placeholder="Type here..">
                        </div>
                    </div>
                </form>
            </div>

            <!-- Add Comment Modal -->
            <div class="modal fade" id="addCommentModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="content">
                                <div class="modal-title">
                                    <h6 class="">Add Comment</h6>
                                    <button class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                                </div>
                                <form action="">
                                    <div class="form-row mt-3">
                                        <label for="">Subject:</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="form-row">
                                        <label for="">Message:</label>
                                        <textarea name="" id="" cols="30" rows="5" class="form-control"></textarea>
                                    </div>
                                </form>
                                <div class="form-row mt-3 d-flex justify-content-center">
                                    <button class="btn btn-invite">Post Comment</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Comment Modal -->
            <div class="modal fade" id="deleteCommentModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="content">
                                <div class="modal-title">
                                    <h6 class="">Comment</h6>
                                    <button class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                                </div>
                                <form action="">
                                    <div class="form-row mt-3">
                                        <label for="">Subject:</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="form-row">
                                        <label for="">Message:</label>
                                        <textarea name="" id="" cols="30" rows="5" class="form-control"></textarea>
                                    </div>
                                </form>
                                <div class="form-row mt-3 d-flex justify-content-center">
                                    <button class="btn btn-red">Delete Comment</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="enc-content">
        <div class="container">
          <%= render "top_nav_buttons"%>
            
            <div class="add-license-content mt-4">
                <div class="row">
                    <div class="d-flex align-items-center gap-3">
                        <a href="<%= verification_platform_index_path(page: 'affiliations')%>" class="link-back">
                            <i class='bx bx-left-arrow-alt'></i>
                        </a>
                        <h4 class="page-heading">Add New Affiliation</h4>
                    </div>
                    <form action="">
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for="affiliation-list">List of Health System Affiliations:</label>
                                <select name="affiliation-list" id="affiliation-list" class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row row mt-2">
                            <div class="col-xl-6">
                                <div class="d-flex align-items-center gap-3">
                                    <label for="" class="">Have you ever applied to any entity listed above?</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="entity-listed-radio"
                                            id="entity-listed-yes" value="Yes">
                                        <label class="form-check-label" for="entity-listed-yes">
                                            Yes
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="entity-listed-radio"
                                            id="entity-listed-no" value="No">
                                        <label class="form-check-label" for="entity-listed-no">
                                            No
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row row mt-2">
                            <div class="col-xl-6">
                                <label for="">If Yes, please list dates:</label>
                                <input name=" list-date" type="text" id="list-date" class="form-control"
                                    placeholder="Type here...">
                            </div>
                        </div>
                        <div class="form-row row mt-2">
                            <div class="col-xl-6">
                                <label for="">Practitioner Identification Number:</label>
                                <input name=" prac-id-num" type="text" id="prac-id-num" class="form-control"
                                    placeholder="Type here...">
                            </div>
                        </div>
                        <div class="form-row row mt-2">
                            <div class="col-xl-6">
                                <div class="d-flex align-items-center gap-3">
                                    <label for="" class="">Is this your primary facility?</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="primary-facility-radio"
                                            id="primary-facility-yes" value="Yes">
                                        <label class="form-check-label" for="primary-facility-yes">
                                            Yes
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="primary-facility-radio"
                                            id="primary-facility-no" value="No">
                                        <label class="form-check-label" for="primary-facility-no">
                                            No
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row row mt-2">
                            <div class="col-xl-6">
                                <label for="">Please indicate how you intend to utilize this facility:</label>
                                <textarea name="intend-utilize-facility" id="intend-utilize-facility" cols="30" rows="3" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-xl-6">
                                <label for="">For inpatient admitting facilities only, estimated percentage of your patients requiring hospitalization to be admitted to this facility:</label>
                                <div class="form-control d-flex align-items-center justify-content-between">
                                    <input name=" estimated-percentage" type="text" id="estimated-percentage" class="estimated-percentage-txt" placeholder="Type here...">
                                    <span>%</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-xl-6">
                                <label for=" designated-contact">Designated Contact:</label>
                                <select name=" designated-contact" id=" designated-contact"
                                    class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                            <div class="col-xl-6">
                                <label for="designated-billing-contact">Designated Billing Contact:</label>
                                <select name="designated-billing-contact" id=" designated-billing-contact"
                                    class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row row mt-3  health-card">
                            <div class="col-xl-12">
                                <div class="card other-name-card">
                                    <div class="card-body">
                                        <h6 class="form-heading">Affiliation History</h6>
                                        <div class="form-row row">
                                            <div class="col-xl-6">
                                                <label for="department">Department:</label>
                                                <select name="department" id="department"
                                                    class="form-select">
                                                    <option value="">Select option</option>
                                                </select>
                                            </div>
                                            <div class="col-xl-6">
                                                <label for="division">Division/Section:</label>
                                                <select name="division" id="division"
                                                    class="form-select">
                                                    <option value="">Select option</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-row row">
                                            <div class="col-xl-6">
                                                <label for="position">Position:</label>
                                                <select name="position" id="position"
                                                    class="form-select">
                                                    <option value="">Select option</option>
                                                </select>
                                            </div>
                                            <div class="col-xl-6">
                                                <label for="status">Status:</label>
                                                <select name="status" id="status"
                                                    class="form-select">
                                                    <option value="">Select option</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-row row">
                                            <div class="col-xl-6">
                                                <label for="appointment-date">Appointment Date:</label>
                                                <input name="appointment-date" type="date" id="appointment-date" class="form-control">
                                            </div>
                                            <div class="col-xl-6">
                                                <label for="expiration-date">Expiration Date:</label>
                                                <input name="expiration-date" type="date" id="expiration-date" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-xl-12">
                                                <label for="">Please List any comments</label>
                                                <textarea name="intend-utilize-facility" id="intend-utilize-facility" cols="30" rows="3" class="form-control"></textarea>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-2">
                                            <div class="offset-md-5">
                                                <button class="btn btn-primary py-1">
                                                    Add New Affiliation
                                                </button>
                                            </div>
                                            <button class="btn btn-danger">
                                               Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row row mt-2">
                            <div class="col-xl-12">
                                <label for="">Please List any comments</label>
                                <textarea name="intend-utilize-facility" id="intend-utilize-facility" cols="30" rows="3" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-row mt-1 d-flex justify-content-end">
                            <button class="btn btn-training-save" type="submit">
                                Save
                            </button>
                        </div>



                    </form>

                </div>
            </div>
        </div>
      </div>
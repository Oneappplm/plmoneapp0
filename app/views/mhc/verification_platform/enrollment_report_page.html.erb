<div class="container my-5">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1 class="display-5">Application Report</h1>
    <nav>
      <%= link_to 'Credential Report', application_page_path, class: "btn btn-link" %>
      <%= link_to 'Enrollment Report', enrollment_report_page_path, class: "btn btn-link" %>
    </nav>
  </div>
  
  <!-- Info Section -->
  <div class="alert alert-info">
    <strong>These application reports are created for {{ $JANAKI }}, {{ $KOMAL }} {{ $randomLastName }}:</strong>
  </div>
  
  <!-- Applications Section -->
  <div class="accordion" id="applicationsAccordion">

    <!-- CMS Enrollment Applications -->
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingCMS">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCMS" aria-expanded="true" aria-controls="collapseCMS">
          CMS Enrollment Applications
        </button>
      </h2>
      <div id="collapseCMS" class="accordion-collapse collapse show" aria-labelledby="headingCMS" data-bs-parent="#applicationsAccordion">
        <div class="accordion-body">
          <ul class="list-unstyled">
            <li><a href="#">Medicare Enrollment Application</a> (<a href="#">Download PDF</a>)</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

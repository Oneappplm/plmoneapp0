<% if @billing_company %>
  <div class="billing-company-box">
    <h2 class="billing-company-title">Billing Company Details</h2>
    <div class="billing-info">
      <p><strong>Billing Company Name:</strong> <%= @billing_company.billing_company_name %></p>
      <p><strong>Address:</strong> <%= @billing_company.address %></p>
      <p><strong>City:</strong> <%= @billing_company.city %></p>
      <p><strong>State:</strong> <%= @billing_company.state %></p>
      <p><strong>Zip:</strong> <%= @billing_company.zip %></p>
      <p><strong>Phone Number:</strong> <%= @billing_company.phone_number %></p>
      <p><strong>Email:</strong> <%= @billing_company.email %></p>
    </div>
  </div>
<% else %>
  <div class="no-record">
    <p>Billing company details not available.</p>
  </div>
<% end %>

<style>
  /* General styles */
  .billing-company-box {
    background-color: #ffffff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    margin: 20px;
    border-left: 5px solid #007bff;
  }

  .billing-company-title {
    font-size: 26px;
    font-weight: bold;
    color: #333;
    margin-bottom: 25px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .billing-info p {
    font-size: 18px;
    line-height: 1.6;
    margin-bottom: 12px;
    color: #555;
  }

  .billing-info p strong {
    font-weight: 700;
    color: #333;
  }

  /* Style for when no record is available */
  .no-record {
    padding: 25px;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    color: #ff6347;
    background-color: #ffe5e5;
    border-radius: 8px;
    border: 2px solid #ffcccc;
    margin-top: 30px;
  }

  /* Add subtle hover effect to the details box */
  .billing-company-box:hover {
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  /* Add responsive design for mobile */
  @media (max-width: 768px) {
    .billing-company-box {
      padding: 20px;
      margin: 15px;
    }

    .billing-company-title {
      font-size: 22px;
    }

    .billing-info p {
      font-size: 16px;
    }
  }
</style>

<div class="enc-content">
    <div class="container">
        <%= render "top_nav_buttons"%>
        <div class="mt-4 d-flex align-items-end justify-content-between gap-3">
            <div class="d-flex align-items-center gap-3">
                <h4 class="page-heading">RVA Information</h4>
            </div>
        </div>
        <div class="mt-4">
            <div class="d-flex align-items-center gap-3">
                <a href="<%= mhc_verification_platform_path(page_tab: 'sam_record', provider_personal_information_sam_record_id: params[:provider_personal_information_sam_record_id])%>" class="link-back">
                    <i class='bx bx-left-arrow-alt'></i>
                </a>
                <h4 class="page-heading">RVA Information</h4>
            </div>
        </div>
        <%= form_with model: [:mhc, @provider_personal_information_sam_rva_record], html: { multipart: true } do |f| %>
            <a href="https://www.sam.gov/" target="_blank">https://www.sam.gov/</a>
            <%= f.hidden_field :provider_personal_information_sam_record_id, value: params[:provider_personal_information_sam_record_id] %>
            <%= f.hidden_field :provider_attest_id, value: params[:id] %>

            <div class="bg-light row p-2 text-black">
                <div class="col-12">
                    <div class="row">
                        <div class="col-xl-6">
                            <label class="text-dark-grey">Source Date:</label>
                            <%= f.date_field :source_date,  placeholder: 'Select a date...', class: 'form-control border border-dark' %>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-xl-6">
                            <label class="text-dark-grey">Verification Date:</label>
                            <%= f.date_field :verification_date,  placeholder: 'Select a date...', class: 'form-control border border-dark' %>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-xl-6">
                            <label class="text-dark-grey">Search Results:</label>
                            <%= f.select :search_result, options_for_select(verification_search_results), { prompt: '' }, {:class => 'form-select border border-dark',  data: { value: f.object.search_result } }  %>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-xl-6">
                            <label class="text-dark-grey">Exclusion Type:</label>
                            <%= f.text_field :exclusion_type,  placeholder: 'Type here...', class: 'form-control border border-dark' %>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-xl-6">
                            <label class="text-dark-grey">Verification Sanctions:</label>
                            <%= f.text_field :verification_sanctions,  placeholder: 'Type here...', class: 'form-control border border-dark' %>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="row">
                        <div class="col-6">
                            <label class="text-dark-grey">Comments:</label>
                            <%= f.text_area :comments,  placeholder: 'Type here...', class: 'form-control border border-dark' %>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="row">
                        <div class="col-6">
                            <label class="text-dark-grey">Supporting Documentation:</label>
                            <%= f.file_field :supporting_documentation, class: 'form-control' %>
                        </div>
                        <% if @provider_personal_information_sam_rva_record.persisted? && @provider_personal_information_sam_rva_record.supporting_documentation.present? %>
                            <%= link_to @provider_personal_information_sam_rva_record.supporting_documentation.identifier, @provider_personal_information_sam_rva_record.supporting_documentation.url, target: '_blank' %></td>
                        <% end %>
                    </div>
                </div>
                <div class="col-xl-12">
                    <%= f.submit 'Save', class: 'btn btn-primary mt-2 mb-2 rounded-0' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
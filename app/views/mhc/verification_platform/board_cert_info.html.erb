                        <div class="col-md-6">
                          <%= f.label :board_certified_flag, "Board Certification Status" %>
                          <%= f.text_field :board_certified_flag, class: "form-control", placeholder: "Enter Status" %>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-md-6">

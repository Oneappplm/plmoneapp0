                                <div class="form-check form-check-inline">
                                <%= f.radio_button :planning_to_take_board_exam_flag, false, class: "form-check-input" %>
                                <%= f.label :planning_to_take_board_exam_flag, "No", class: "form-check-label" %>
                                </div>
                                <%= f.text_field :board_exam_explanation, placeholder: "If No, please explain", class: "form-control mt-2" %>
                            </div>
                        </div>

                        <!-- Examination Details -->

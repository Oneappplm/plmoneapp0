                                            <%= f.radio_button :applied_board_certificate, 'yesAppliedboardCertificate', class: "form-check-input" %>
                                            <%= f.label :applied_board_certificate, "Yes", class: "form-check-label" %>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <%= f.radio_button :applied_board_certificate, 'noAppliedboardCertificate', class: "form-check-input" %>
                                            <%= f.label :applied_board_certificate, "No", class: "form-check-label" %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <%= f.label :certification_name, "If Yes, Certification Name:" %>
                                        <%= f.text_field :certification_name, class: "form-control" %>
                                    </div>
                                    <div class="col-md-6">
                                        <%= f.label :date_applied, "Date Applied:" %>
                                        <%= f.date_field :date_applied, class: "form-control" %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label>Show on Tickler?</label>
                            <div class="form-check-inline">
                                <%= f.radio_button :tickler, 'yesTickler', id: 'tickler_yes', class: "form-check-input" %>
                                <%= f.label :tickler, "Yes", for: 'tickler_yes', class: "form-check-label me-3" %>
                                <%= f.radio_button :tickler, 'noTickler', id: 'tickler_no', checked: true, class: "form-check-input" %>
                                <%= f.label :tickler, "No", for: 'tickler_no', class: "form-check-label" %>
                            </div>
                        </div>
                        <!-- Comments Section -->
                        <div class="card mb-4">
                            <div class="card-header text-white">
                                <h5>Comments</h5>
                            </div>
                            <div class="card-body">
                                <%= f.label :comments, "Additional Comments" %>
                                <%= f.text_area :comments, class: "form-control", placeholder: "Enter comments here" %>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <%= f.submit 'Save',  class: "btn btn-success px-5" %>
                        </div>
                    <% end %>
                    <% if @provider_specialty.persisted? %>
                        <div class="text-center">
                            <%= button_to 'Delete', mhc_provider_specialty_path(@provider_specialty), method: :delete, data: { confirm: 'Are you sure you want to delete this record?' }, class: "btn btn-danger px-5 mt-3" %>
                        </div>
                    <% end %>
                </div>
                <% if @provider_specialty.persisted? %>
                    <div class="col-xl-4 p-2 text-center">
                        <div class="row">
                            <div class="col-12 m-2">
                                <button class="btn btn-primary btn-sm" style="min-width: 100px; font-size: 12px" disabled>
                                    Verification Letter
                                </button>
                            </div>
                            <div class="col-12 m-2">
                                <button  type="button" class="btn btn-primary btn-sm" id="asdf" style="min-width: 100px; font-size: 12px" data-bs-toggle="modal" data-bs-target="#send_contact_template">
                                    Send Contact
                                </button>
                            </div>
                        </div>
                        <div class="card other-name-card">
                            <div class="card-body">
                                <h2 class="">RVA Information</h2>
                                <div class="mt-3 row">
                                    <div class="col-12 m-2">
                                        <button class="btn btn-primary btn-sm" style="min-width: 100px; font-size: 12px" disabled>
                                            Request
                                        </button>
                                    </div>
                                    <div class="col-12 m-2">
                                        <button class="btn btn-primary btn-sm" style="min-width: 100px; font-size: 12px" disabled>
                                            Verification
                                        </button>
                                    </div>
                                    <div class="col-12 m-2">
                                        <button class="btn btn-primary btn-sm" style="min-width: 100px; font-size: 12px" disabled>
                                            Audit
                                        </button>
                                    </div>
                                    <div class="col-12 m-2">
                                        <button class="btn btn-primary btn-audit btn-sm" data-bs-toggle="modal" data-bs-target="#QAModal" data-information-id="<%= @last_rva_information&.id %>" data-first-name="<%= @provider_personal_information&.first_name %>" data-last-name="<%= @provider_personal_information&.last_name %>" data-personal-information-id="<%= @provider_personal_information&.id %>" data-board-id = "<%= @provider_specialty.id%>">
                                          Quality Audit
                                        </button>
                                    </div>
                                    <div class="col-12 m-2">
                                        <button class="btn btn-primary btn-sm" style="min-width: 100px; font-size: 12px" disabled>
                                            Skip RVA
                                        </button>

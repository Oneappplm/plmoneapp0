                                          "Admissable", 
                                          "Board Certificate Status", 
                                          "Cancelled", 
                                          "Candidate", 
                                          "Certified", 
                                          "Diplomate", 
                                          "Eligible", 
                                          "Expired", 
                                          "Inactive", 
                                          "Not Certified", 
                                          "Qualified", 
                                          "Retired", 
                                          "Revoked", 
                                          "Unable to Verify"
                                        ], 
                                        { prompt: "Select Status" }, 
                                        { class: "form-control" } 
                                      %>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <%= f.label :specialty_board_name, "Issuing Board" %>
                                        <%= f.text_field :specialty_board_name, class: "form-control", placeholder: "Enter Issuing Board" %>
                                    </div>

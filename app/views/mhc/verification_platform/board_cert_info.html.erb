                    </a>
                    <h4 class="page-heading">Board Certification</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-8 row">
                    <%= form_with model: [:mhc, @provider_specialty] do |f| %>
                        <%= f.hidden_field :provider_attest_id %>
                        <!-- Specialty and Board Certification Details -->
                        <div class="card mb-4">
                            <div class="card-header text-white">
                                <h5>Specialty and Board Certification Details</h5>
                            </div>

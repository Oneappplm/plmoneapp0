        $('#provider_type').on('change',function(e) {
            if($(this).val() == 'credentialing_contact') {
                $('#to').val($('#cred_contact_email').val())
            }
            if($(this).val() == 'confidential_contact') {
                $('#to').val($('#conf_contact_email').val())
            }
            if($(this).val() == 'client_contact') {
                $('#to').val($('#client_contact_email').val())
            }
            if($(this).val() == 'intitution_contact') {
                $('#to').val($('#intitution_contact_email').val())
            }
        });
        $('#run-webcrawler-btn').click(function (e) {
          e.preventDefault();
          var firstName = $('#firstname').html().trim();
          var lastName = $('#lastname').html().trim();

          if (!firstName || !lastName) {
            $('#qaModalMessage').text('Crawling failed due to some error: First name or last name is missing.');
            return;
          }

          $(this).attr('disabled', true);

          $('#qaModalMessage').text('Running Webcrawler... Please wait...');
          $('#qaModalMessage')[0].classList.remove('d-none');
          $('.loading-overlay').show();

          var currentDate = new Date();
          var formattedDate = currentDate.toISOString().split('T')[0];
          var formattedTime = currentDate
            .toTimeString()
            .split(' ')[0]
            .replace(/:/g, '-');
          var timestamp = `${formattedDate}T${formattedTime}`;

          var randomString = Math.random().toString(36).substring(2, 10);
          var fileName = `OIG_OIG_${firstName}_${lastName}_${timestamp}_${randomString}.pdf`;

          var filePath = `/webscrape/oig/screenshot.pdf`;
          $.ajax({
            url: '/webscrapers/run_webcrawler',
            method: 'POST',
            headers: {
              'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content'),
            },
            data: {
              first_name: firstName, 
              last_name: lastName,
            },
            success: function (response) {
              $('#run-webcrawler-btn').attr('disabled', false).text('Run Webcrawler');

              var linkHtml = `<a href="${filePath}" target="_blank">${fileName}</a>`;
              $('.crawler-link-oig').html(linkHtml);

              $('#qaModalMessage').text(response.message);
              $('.loading-overlay').hide();
            },
            error: function () {
              $('#run-webcrawler-btn').attr('disabled', false).text('Run Webcrawler');
              $('#qaModalMessage').text('Error running Webcrawler. Please try again.');
            },
          });
        });
      });

    var csrfToken = $('meta[name="csrf-token"]').attr('content');

    $("#ajaxForm").submit(function(e){
        e.preventDefault();
        var action = $(this).attr("action");
        var formData = new FormData(this)
        formData.append('authenticity_token', csrfToken);
        $.ajax({
            type: "POST",
            url: action,
            crossDomain: true,
            data: formData,
            dataType: "json",
            contentType: "multipart/form-data",
            processData: false,
            contentType: false,
            headers: {
                "Accept": "application/json"
            }
        }).done(function() {
            $('#btn-modal-close').trigger('click');
            $('.loading-overlay').hide();
        }).fail(function() {
            alert('An error occurred.')
            $('.loading-overlay').hide();
        });
    });



    <div class="enc-content">
        <div class="container">
          <%= render "top_nav_buttons"%>
            
            <div class="add-license-content mt-4">
                <div class="row">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-3">
                            <!-- <a href="" class="link-back">
                                <i class='bx bx-left-arrow-alt' ></i>
                            </a> -->
                            <h4 class="page-heading">Fee Paid Record 1</h4>
                            <button type="button" class="btn btn-primary py-1" id="prac-info-btn-edit">
                                Edit
                            </button>
                            <div class="d-flex align-items-center gap-3">
                                <button type="submit" class="btn btn-save" id="prac-info-btn-save">
                                    Save Changes
                                </button>
                                <button type="button" class="btn btn-cancel" id="prac-info-btn-cancel">
                                    Cancel
                                </button>
                            </div>
                        </div>
                        <button type="button" class="btn btn-danger page-applicable" id="">
                            <i class='bx bx-trash'></i>
                            Delete Record
                        </button>
                    </div>
                    <form action="">
                        <div class="form-row row mt-3">
                            <div class="col-xl-4">
                                <label for="client">Client:</label>
                                <select name="client" id="client" class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                            <div class="col-xl-4">
                                <label for="fee-type">Fee Type:</label>
                                <select name="fee-type" id="fee-type" class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                            <div class="col-xl-4">
                                <label for="amount">Amount:</label>
                                <input name=" amount" type="text" id="amount" class="form-control"
                                    placeholder="Type here...">
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-xl-6">
                                <label for="">Date Assessed:</label>
                                <input name=" date-assessed" type="date" id="date-assessed" class="form-control">
                            </div>
                            <div class="col-xl-6">
                                <label for="">Date Paid:</label>
                                <input name=" date-paid" type="date" id="date-paid" class="form-control">
                            </div>
                        </div>
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <div class="d-flex align-items-center gap-3">
                                    <label for="" class="">Show on Tickler?</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="inter-input"
                                            id="inter-yes" value="Yes">
                                        <label class="form-check-label" for="prac-yes">
                                            Yes
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="inter-input"
                                            id="inter-no" value="No">
                                        <label class="form-check-label" for="prac-no">
                                            No
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-row row mt-2">

                            <div class="col-xl-25">
                                <label for="">Please List any comments</label>
                                <input type="text" name="" id="" placeholder="Type here..."
                                    class="form-control" required>
                            </div>

                        </div>

                        <div class="form-row mt-1 d-flex justify-content-end">
                            <button class="btn btn-training-save" type="submit">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
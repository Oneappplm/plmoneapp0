<%= form_for @enrollment_user, :url => {action: action_name} , html: { multipart: true } do |f| %>
	<% if @enrollment_user.errors.any? %>
    <div id="error_explanation" class="row mb-3">
					<div class="col-lg-12">
							<h2><%= pluralize(@enrollment_user.errors.count, "error") %> prohibited this enrollment user from being saved:</h2>

							<ul>
									<% @enrollment_user.errors.full_messages.each do |message| %>
											<li><%= message %></li>
									<% end %>
							</ul>
					</div>
    </div>
  <% end %>
		<div class="row mb-3 bg-medium-grey rounded p-2 py-3">
			<div class="col-lg-12">
				<div class="row mb-3">
					<div class="col-lg-6">
						<%= f.text_field :following_request, class: 'form-control', placeholder: 'Following Request' %>
					</div>
					<div class="col-lg-6">
						<%= f.select :user_type, options_for_select(User.enum_list('user_roles'), f.object.user_type), {}, class: 'form-select', placeholder: 'Role' %>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-lg-4">
						<%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
					</div>
					<div class="col-lg-2">
						<%= f.text_field :middle_name, class: 'form-control', placeholder: 'Middle Name' %>
					</div>
					<div class="col-lg-4">
						<%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
					</div>
					<div class="col-lg-2">
						<%= f.select :suffix, options_for_select(['Jr.', 'Sr.', 'II', 'III', 'IV', 'V'], f.object.suffix), { prompt: 'Suffix' }, { class: 'form-select' } %>
				 </div>
				</div>
				<div class="row mb-3">
					<div class="col-lg-6">
						<%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
					</div>
					<div class="col-lg-6">
						<%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-lg-6">
						<%= f.select :status, options_for_select(['Active', 'Inactive'], f.object.status), { prompt: 'Status' }, { class: 'form-select' } %>
					</div>
					<div class="col-lg-6">
						<%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 d-flex justify-content-end gap-2">
						<button type="submit" class="d-flex btn btn-primary btn-md">
							<i class="bi bi-arrow-left-short"></i>
							<span><%= action_name == 'edit_user' ? 'Update User' : 'Add New User' %></span>
						</button>
					</div>
				</div>
			</div>
		</div>
<% end %>

<div class="row my-5">
	<div class="col-lg-6">

		<%= form_with url: request.url, method: :get, html: { class: 'form_search_with_icon'} do |form| %>
		<div class="">
			<input type="text" name="user_search" value="<%= params[:user_search] %>" class="form-control">
			<i class="bi bi-search"></i>
		</div>
		<% end %>
	</div>

</div>

<div class="row">
	<div class="col-lg-12">
		<%= render "users/users_table"%>
	</div>
</div>
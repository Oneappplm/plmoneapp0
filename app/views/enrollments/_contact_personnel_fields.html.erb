<div class="field mb-3 p-3 py-3 border-dash border-1">
	<div class="row mb-2">
		<div class="col-lg-6">
			<label class="text-dark-grey">Name</label>
			<%= f.text_field :group_personnel_name, class: 'form-control border border-dark', placeholder: 'Type here...' %>
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Email Address <small>(required when sending welcome letter)</small></label>
			<%= f.text_field :group_personnel_email, class: 'form-control border border-dark', placeholder: 'Type here...' %>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">Phone Number</label>
			<%= f.text_field :group_personnel_phone_number, class: 'form-control border border-dark', placeholder: 'Type here...' %>
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Fax Number</label>
			<%= f.text_field :group_personnel_fax_number, class: 'form-control border border-dark', placeholder: 'Type here...' %>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">Position</label>
			<%= f.text_field :group_personnel_position, class: 'form-control border border-dark', placeholder: 'Type here...' %>
		</div>
	</div>
</div>
<div class="content container-fluid">
  <%= render "nav"%>
  <%= render "enrollment_groups/show/group_info"%>

  <% @enrollment_group.contact_personnels.each_with_index do |contact,idx|%>
    <%= render partial: "enrollment_groups/show/group_contact_personnel", locals: {title: "Group Contact Personnel #{ @enrollment_group.contact_personnels.count == 1 ? '' : idx+1}", contact: contact} %>
  <% end %>
  <%= render "enrollment_groups/show/other_info"%>

  <% @enrollment_group.details.each_with_index do |detail,idx|%>
    <%= render partial: "enrollment_groups/show/individual_ownership", locals: {title: "Individual Ownership #{ @enrollment_group.details.count == 1 ? '' : idx+1}", detail: detail} %>
  <% end %>

  <% @enrollment_group.qualifacts_contacts.each_with_index do |qcontact,idx|%>
    <%= render partial: "enrollment_groups/show/qualifacts_contact", locals: {title: "Qualifacts Contact List #{ @enrollment_group.qualifacts_contacts.count == 1 ? '' : idx+1}", qcontact: qcontact} %>
  <% end %>

</div>
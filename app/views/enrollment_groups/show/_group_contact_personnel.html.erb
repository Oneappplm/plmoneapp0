<div class="row mb-3">
   <div class="col-lg-12 card p-3">
      <div class="w-100 d-flex justify-content-between">
         <h3 class="text-primary"><%= title %></h3>
         <a href="javascript:void(0);" class="text-black fw-semibold collapsible-trigger" data-collapse="group_contact_<%= contact.id %>">
         <i class="bi bi-sort-up rotate-180" style="font-size: 18px;"></i>
         </a>
      </div>
        <div class="w-100 collapsible" id="group_contact_<%= contact.id %>">
            <div class="row mb-1">
              <div class="col-lg-6">
                  <label>Name</label>
                  <p class="text-black fw-semibold"><%= contact&.group_personnel_name %></p>
              </div>
              <div class="col-lg-6">
                  <label>Email Address</label>
                  <p class="text-black fw-semibold"><%= contact&.group_personnel_email %></p>
              </div>
            </div>
            <div class="row mb-1">
              <div class="col-lg-6">
                  <label>Phone Number</label>
                  <p class="text-black fw-semibold"><%= contact&.group_personnel_phone_number %></p>
              </div>
              <div class="col-lg-6">
                  <label>Fax Number</label>
                  <p class="text-black fw-semibold"><%= contact&.group_personnel_fax_number %></p>
              </div>
            </div>
            <div class="row mb-1">
              <div class="col-lg-6">
                  <label>Position</label>
                  <p class="text-black fw-semibold"><%= contact&.group_personnel_position %></p>
              </div>
            </div>
        </div>
      </div>
  </div>
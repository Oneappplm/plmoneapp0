 <style>
       /* First Row: JSON Viewer */
        .json-row {
            flex: 1;
            padding: 20px;
            background-color: #f4f4f4;
            border-bottom: 2px solid #ddd;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .json-viewer {
            width: 100%;
            height: 500px;
            padding: 15px;
            font-family: 'Courier New', monospace;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            overflow-x: auto;
            white-space: pre-wrap;
            word-wrap: break-word;
            box-sizing: border-box;
        }

        .json-row button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        .json-row button:hover {
            background-color: #0056b3;
        }

        /* Second Row: PDF Links */
        .pdf-row {
            flex: 1;
            padding: 20px;
            background-color: #f4f4f4;
            overflow-y: auto;
        }

        .pdf-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .pdf-item {
            padding: 10px;
            border: 1px solid #ddd;
            background-color: #fff;
            border-radius: 5px;
        }

        .pdf-item a {
            text-decoration: none;
            color: #007BFF;
            font-size: 16px;
            font-weight: bold;
        }

        .pdf-item a:hover {
            text-decoration: underline;
        }
    </style>



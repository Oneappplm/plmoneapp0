<div class="content container-fluid">
  <%= render "verification_platform/encompass_nav"%>
</div>
<div class="enc-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3">
                  <%= render partial: "verification_platform/encompass_sidebar"%>
                </div>
                <div class="col-xl-9">
                   <%= render "query_report_top_nav"%>
                    <form action="">
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for="affiliation">Facility/Affiliation:</label>
                                <select name="affiliation" id="affiliation" class="form-select form-select-lg py-3">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                            <div class="col-xl-6">
                                <label for="specialty">Specialty:</label>
                                <select name="specialty" id="specialty" class="form-select form-select-lg py-3">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for="gender">Gender:</label>
                                <select name="gender" id="gender" class="form-select form-select-lg py-3">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                            <div class="col-xl-6 d-flex align-items-end">
                                <div class=" form-check d-flex align-items-center gap-2">
                                    <input class="form-check-input" type="checkbox" id="inc-exp-creds"
                                        value="Include Expired Credentials">
                                    <label class="form-check-label" for="inc-exp-creds">Include Expired Credentials</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row row mt-3">
                            <label for="" class="mt-2">Initial Appointment Date:</label>
                            <div class="col-xl-6">
                                <div class="row mt-1">
                                    <div class="col-xl-6">
                                        <label for="appoint-from">From:</label>
                                        <input type="date" name="appoint-from" id="appoint-from" class="form-control form-control-lg py-3">
                                    </div>
                                    <div class="col-xl-6">
                                        <label for="appoint-to">To:</label>
                                        <input type="date" name="appoint-to" id="appoint-to" class="form-control form-control-lg py-3">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <label for="prac-type">Practitioner Type:</label>
                                <select name="prac-type" id="prac-type" class="form-select w-100 form-select-lg py-3">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for="affiliation-status">Latest Affiliation Status:</label>
                                <select name="affiliation-status" id="affiliation-status" class="form-select w-100 form-select-lg py-3">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="mt-2 d-flex align-items-center gap-3">
                            <div class=" form-check d-flex align-items-center gap-2">
                                <input class="form-check-input" type="checkbox" id="2-check" value="Additional Address">
                                <label class="form-check-label" for="2-check">Additional Address</label>
                            </div>
                            <div class=" form-check d-flex align-items-center gap-2">
                                <input class="form-check-input" type="checkbox" id="2N-check"
                                    value="Suite">
                                <label class="form-check-label" for="2N-check">Suite</label>
                            </div>
                            <div class=" form-check d-flex align-items-center gap-2">
                                <input class="form-check-input" type="checkbox" id="3-check" value="Specialty 2">
                                <label class="form-check-label" for="3-check">Specialty 2</label>
                            </div>
                            <div class=" form-check d-flex align-items-center gap-2">
                                <input class="form-check-input" type="checkbox" id="3N-check"
                                    value="Primary License #">
                                <label class="form-check-label" for="3N-check">Primary License #</label>
                            </div>
                            <div class=" form-check d-flex align-items-center gap-2">
                                <input class="form-check-input" type="checkbox" id="4-check" value="ID Number">
                                <label class="form-check-label" for="4-check">ID Number</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="button" class="btn btn-primary">
                                Display All
                            </button>
                            <button type="button" class="btn btn-primary">
                                New
                            </button>
                            <button type="button" class="btn btn-primary">
                                Query
                            </button>
                            <button type="button" class="btn btn-primary">
                                Export to Excel
                            </button>
                        </div>
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for="saved-condition">Select Saved Condition:</label>
                                <select name="saved-condition" id="saved-condition" class="form-select form-select-lg py-3">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                            <div class="col-xl-6">
                                <label for="new-condition-name">New Condition Name:</label>
                                <input type="text" name="new-condition-name" id="new-condition-name" class="form-control form-control-lg py-3" placeholder="New Condition Name">
                            </div>
                        </div>
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="button" class="btn btn-primary">
                                Save Condition
                            </button>
                            <button type="button" class="btn btn-danger">
                                Delete Condition
                            </button>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table practice-table table-bordered mt-3">
                            <thead>
                                <tr>
                                    <th class="text-white" scope="col">ID #</th>
                                    <th class="text-white">Last Name</th>
                                    <th class="text-white">First Name</th>
                                    <th class="text-white">MI</th>
                                    <th class="text-white">Type</th>
                                    <th class="text-white">Address</th>
                                    <th class="text-white">City</th>
                                    <th class="text-white">State</th>

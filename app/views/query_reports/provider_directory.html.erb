<div class="content container-fluid">
  <%= render "verification_platform/encompass_nav"%>
</div>   
<div class="enc-content">
    <div class="container-fluid ">
        <div class="row">
            <div class="col-xl-3">
                <%= render  partial: "verification_platform/encompass_sidebar"%>
            </div>
            <div class="col-xl-9">
              <%= render "query_report_top_nav"%>
                <form action="">
                    <div class="form-row row mt-3">
                        <div class="col-xl-6">
                            <label for="affiliation">Client:</label>
                            <input type="text" name="" id="" class="form-control form-control-lg py-3">
                        </div>
                    </div>
                    <div class="form-row row mt-3">
                        <div class="col-xl-6">
                            <label for="specialty">Specialty/Subspecialty:</label>
                            <select name="specialty" id="specialty" class="form-select form-select-lg py-3 w-100">
                                <option value="">Select option</option>
                            </select>
                        </div>
                        <div class="col-xl-6">
                            <label for="insurance">Insurance Plan Name:</label>
                            <select name="insurance" id="insurance" class="form-select form-select-lg py-3 w-100">
                                <option value="">Select option</option>
                            </select>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <button type="button" class="btn btn-sm btn-primary">
                            Filter
                        </button>
                    </div>
                </form>
                <div class="d-flex gap-2 mt-4">
                    <a href="provider-directory.html" class="btn btn-primary btn-sm">Print</a>
                    <a href="provider-directory-display.html" class="btn text-black bg-alt-grey btn-sm">Display</a>
                </div>
                <div class="mt-3">
                    <div class="demo-pane">
                        <h6>Print Demo</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
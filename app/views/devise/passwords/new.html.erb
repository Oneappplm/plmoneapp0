<div class="container" style="height: 100vh;">
   <div class="row d-flex justify-content-center align-items-center pt-3">
      <div class="col-lg-6 mt-5">
         <div class="card  px-5">
            <div class="card-body">
               <div class="d-flex justify-content-center gap-2 align-items-center">
                  <img src="../../logos/<%= current_logo %>" style="height: 100%;" class="mt-3">
               </div>
               <div class="d-flex justify-content-start my-3">
                  <h3>Forgot Password</h3>
               </div>
               <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
               <%= render "devise/shared/error_messages", resource: resource %>
               <div class="form-group my-2">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
               </div>
               

               <div class="d-flex flex-column gap-3 justify-content-center align-items-center my-3">
                 <!--  <%# if devise_mapping.rememberable? %>
                  <div class="">
                     <%#= f.check_box :remember_me %>
                     <%#= f.label :remember_me %>
                  </div>
                  <%# end %> -->
                  <!-- <div class="d-flex justify-content-center align-items-center text-center"> -->
                     <div>
                      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg py-3 px-5 fs-6', id: 'btn-register'  %>
                     </div>
                     <div class="mt-3">
                        <span><%= link_to "Back to login page.", new_session_path(resource_name), style: 'color: #000;', class: ' text-decoration-none' %></span>
                     </div>
                  <!-- </div> -->
               </div>
               <% end %>
               <%#= render "devise/shared/links" %>
            </div>
         </div>
      </div>
   </div>
</div>

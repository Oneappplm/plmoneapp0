<div class="container" style="height: 100vh;">
   <div class="row d-flex justify-content-center align-items-center pt-5">
      <div class="col-lg-6 mt-5">
         <div class="card">
            <div class="card-body">
               <div class="d-flex justify-content-center gap-2 align-items-center">
                  <img src="../../dist/assets/img/plm-logos/logo-blue.jpg" style="height: auto;width: 70px;">
                  <h3>Forgot your password?</h3>
               </div>
               <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
               <%= render "devise/shared/error_messages", resource: resource %>
               <div class="form-group my-2">
                  <%= f.label :email, class: 'my-1' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
               </div>
               <div class="my-2">
                  <%= f.submit "Send me reset password instructions", class: 'btn btn-primary w-100' %>
               </div>
               <% end %>
               <%- if controller_name != 'sessions' %>
                  <%= link_to "Back to log in page", new_session_path(resource_name), class: 'my-3' %><br />
                  <% end %>
               <%= render "devise/shared/links" %>
            </div>
         </div>
      </div>
   </div>
</div>

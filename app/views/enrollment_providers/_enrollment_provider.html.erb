<tr>
	<td scope="row"><%= enrollment_provider.id %></td>
	<td scope="row"><%= enrollment_provider.provider_name %></td>
	<td></td>
	<td><%= enrollment_provider.start_date&.strftime("%m/%d/%Y") %></td>
	<td><%= enrollment_provider.due_date&.strftime("%m/%d/%Y") %></td>
	<td scope="row">
			<div class="d-flex gap-2">
				<%= link_to edit_enrollment_provider_path(enrollment_provider), class: 'btn btn-xs btn-primary' do %>
					<i class="bi bi-pencil"></i>
				<% end %>
				<%= button_to enrollment_provider_path(enrollment_provider), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: 'btn btn-xs btn-danger' do %>
					<i class="bi bi-trash"></i>
				<% end %>
			</div>
	</td>
</tr>
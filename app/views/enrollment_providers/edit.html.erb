<div class="content container-fluid">
	<%= render "enrollment_tracking_components/enrollment_nav"%>
	<div class="row mb-3">
		<div class="col-lg-12 mb-3">
			<h2>
				<a href="<%= enrollment_providers_path %>" class="d-flex gap-2 text-secondary">
				<i class="bi bi-arrow-left"></i>
				<span>Edit Enrollment Provider</span>
				</a>
			</h2>
		</div>
		<div class="col-lg-12">
			<a href="<%= new_enrollment_provider_path %>" class="btn <%= enrollment_nav_active('new_enrollment') %> btn-md">New Enrollment Provider</a>
			<a href="javascript:void(0)" class="btn <%= enrollment_nav_active('new_group_enrollment')%> btn-md">Group</a>
		</div>
	</div>
	<div class="row mb-3">
				<div class="col-lg-8">
					<%= render 'form' %>
				</div>
	</div>

				</div>
			</div>
	</div>
</div>

<script>
	$('#enrollment_provider_status').on('change',function(){
		if($(this).val() != ""){
			$('.enrollment_status_hidden_fields').addClass('d-none');
			var id = "#enrollment_"+$(this).val();
			$(id).removeClass('d-none');
		}
	})

	setTimeout(function(){
		filterStatus('#enrollment_provider_status')
	},500)

	function filterStatus(element_id){
		if($(element_id).val() != ""){
			$('.enrollment_status_hidden_fields').addClass('d-none');
			var id = "#enrollment_"+$(element_id).val();
			$(id).removeClass('d-none');
		}
	}
</script>
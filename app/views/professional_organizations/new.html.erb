<%= form_with(model: @professional_organization, local: true, html: { class: "p-4 border border-2 rounded-3 shadow-sm bg-white" }) do |form| %>
  <div class="row mb-3">
    <div class="col-lg-12">
      <label class="text-dark fw-bold mb-2">Organization Name <span class="text-danger">*</span></label>
      <%= form.text_field :prof_organization_name, class: "form-control border border-secondary rounded-2 shadow-sm", placeholder: "Enter Organization Name", required: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark fw-bold mb-2">Effective Date</label>
      <%= form.date_field :prof_org_effected_date, class: "form-control border border-secondary rounded-2 shadow-sm", required: true %>
    </div>
    <div class="col-lg-6">
      <label class="text-dark fw-bold mb-2">Termination Date</label>
      <%= form.date_field :prof_org_termination_date, class: "form-control border border-secondary rounded-2 shadow-sm", required: true %>
      <div class="form-check mt-2">
        <%= form.check_box :prof_org_until_current, class: "form-check-input border-secondary shadow-sm" %>
        <label class="form-check-label fw-bold">Current</label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 d-flex justify-content-end gap-3">
      <%= form.submit "Save This Record", class: "btn btn-primary px-4 py-2 shadow-sm border-2" %>
    </div>
  </div>
<% end %>

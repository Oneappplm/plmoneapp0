<h2 class="mb-4 text-primary fw-bold">Professional Organizations</h2>

<div class="table-responsive shadow-sm rounded">
  <table class="table table-striped table-hover border">
    <thead class="bg-primary text-white">
      <tr>
        <th>Organization Name</th>
        <th>Effective Date</th>
        <th>Termination Date</th>
        <th>Current</th>
      </tr>
    </thead>
    <tbody>
      <% @professional_organizations.each do |org| %>
        <tr>
          <td><%= org.prof_organization_name %></td>
          <td><%= org.prof_org_effected_date.strftime('%d-%m-%Y') if org.prof_org_effected_date %></td>
          <td><%= org.prof_org_termination_date.strftime('%d-%m-%Y') if org.prof_org_termination_date %></td>
          <td>
            <span class="badge <%= org.prof_org_until_current ? 'bg-success' : 'bg-secondary' %>">
              <%= org.prof_org_until_current ? 'Yes' : 'No' %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

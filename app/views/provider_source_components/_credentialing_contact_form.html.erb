<form>
<div class="row mb-3">
	<div class="col-lg-8">
    <label class="text-dark-grey">Preferred Method of Contact</label>
		<select class="form-select border-dark">
			<option value="">Preferred Method of Contact</option>
			<option value="Email">Email</option>
			<option selected="selected" value="Fax">Fax</option>
			<option value="Mail">Mail</option>
		</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Preferred Method of Contact</label>
		<input type="text" class="form-control border-dark" required placeholder="First Name" name="cc-first-name">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Last Name</label>
		<input type="text" class="form-control border-dark" required placeholder="Last Name" name="cc-last-name">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 1</label>
		<input type="text" class="form-control border-dark" required placeholder="Address Line 1" name="cc-address-line1">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 2</label>
		<input type="text" class="form-control border-dark" required placeholder="Address Line 2" name="cc-address-line2">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">City *</label>
		<input type="text" class="form-control border-dark" required placeholder="City" name="cc-city">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">State *</label>

	                     <select class="form-select border-dark" name="cc-state">
	                     	<option value="">State*</option>
	                     	<% @states.each do |state|%>
	                     		<option value="<%= state.alpha_code %>" ><%= state.name %> - <%= state.alpha_code %></option>
	                     	<% end %>
	                     </select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Zip Code *</label>
		<input type="text" class="form-control border-dark" required placeholder="Zip Code *" name="cc-zipcode">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
        <label class="text-dark-grey">Telephone Number *</label>
				<input type="text" class="form-control border-dark" name="cc-telephone-number" placeholder="Telephone Number *" required>
			</div>
			<div class="col-lg-4">
        <label class="text-dark-grey">Ext</label>
				<input type="text" class="form-control border-dark" name="cc-ext" placeholder="Ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Fax Number *</label>
		<input type="text" class="form-control border-dark" name="cc-fax-number" placeholder="Fax Number *"  required>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Mobile Number</label>
		<input type="text" class="form-control border-dark" required placeholder="Mobile Number" name="cc-mobile-number">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Email Address *</label>
		<input type="text" class="form-control border-dark" required placeholder="Email Address *" name="cc-email-address">
		<span class="d-flex align-items-center">
			<input type="checkbox" name="does_not_have_email">
			<small class="ms-2 fw-bold">Does not have</small>
		</span>
	</div>
</div>

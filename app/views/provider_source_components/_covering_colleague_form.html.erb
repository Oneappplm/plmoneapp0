<form>
<div class="row mb-3">
	<div class="col-lg-4">
		<label class="text-dark-grey">First Name</label>
		<input type="text" class="form-control border-dark" required placeholder="First Name" name="cv-first-name">
	</div>
	<div class="col-lg-2">
		<label class="text-dark-grey">Middle Name</label>
		<input type="text" class="form-control border-dark"  placeholder="Middle Name" name="cv-middle-name">
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">Last Name</label>
		<input type="text" class="form-control border-dark" required placeholder="Last Name" name="cv-last-name">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Degree</label>
		<input type="text" class="form-control border-dark" placeholder="Degree" name="cv-degree">
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">NPI Number</label>
		<input type="text" class="form-control border-dark" placeholder="NPI Number" name="cv-npi-number">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
			<label class="text-dark-grey">Specialty <span class="text-danger"> *</span></label>
	    <select class="form-select border-dark" name="specialty">
	     <option value="">Specialty</option>
	     <% specialties.each do |specialty|%>
	       <option value="<%= specialty.bcbs%>" ><%= specialty.bcbs %></option>
	       <% end %>
	    </select>
	</div>
</div>
<div class="row  mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Primary State</label>
	  <select class="form-select border-dark" name="state_abbr">
	   <option value="">Primary State</option>
	   <% @states.each do |state|%>
	    <option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	   <% end %>
	  </select>
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">Primary License Number</label>	
		<input type="text" class="form-control border-dark" placeholder="Primary License Number" name="cv-primary-license-number">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Address Line 1</label>
		<input type="" class="form-control border-dark" name="cv-address-line1" placeholder="Address Line 1">
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">Address Line 2</label>
		<input type="" class="form-control border-dark" name="cv-address-line2" placeholder="Address Line 2">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">City</label>
		<input type="text" class="form-control border-dark" name="cv-city" placeholder="City">
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">Primary State</label>
	  <select class="form-select border-dark" name="state_abbr_1">
	   <option value="">Primary State</option>
	   <% @states.each do |state|%>
	    <option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	   <% end %>
	  </select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Zip Code</label>
		<input type="text" placeholder="Zip Code" name="cv-zipcode" class="form-control border-dark">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
				<label class="text-dark-grey">Telephone Number</label>
				<input type="" class="form-control border-dark" name="cv-telephone-number" placeholder="Telephone Number" >
			</div>
			<div class="col-lg-4">
				<label class="text-dark-grey">Ext</label>
				<input type="" class="form-control border-dark" name="cv-ext" placeholder="Ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">Fax Number</label>
		<input type="" class="form-control border-dark" name="cv-fax-number" placeholder="Fax Number">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Email Address</label>
		<input type="email" placeholder="Email Address" class="form-control border-dark" name="cv-email-address">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<textarea class="form-control border-dark" rows="8" placeholder="2500 max characters" name="cv-description"></textarea>
	</div>
</div>

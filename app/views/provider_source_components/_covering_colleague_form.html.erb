<form>
<div class="row mb-3">
	<div class="col-lg-4">
		<input type="text" class="form-control" required placeholder="First Name" name="">
	</div>
	<div class="col-lg-2">
		<input type="text" class="form-control"  placeholder="Middle Name" name="">
	</div>
	<div class="col-lg-6">
		<input type="text" class="form-control" required placeholder="Last Name" name="">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<input type="text" class="form-control" placeholder="Degree" name="">
	</div>
	<div class="col-lg-6">
		<input type="text" class="form-control" placeholder="NPI Number" name="">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
	    <select class="form-select" name="specialty">
	     <option value="">Specialty*</option>
	     <% @specialties.each do |specialty|%>
	       <option value="<%= specialty.bcbs%>" ><%= specialty.bcbs %></option>
	       <% end %>
	    </select>
	</div>
</div>
<div class="row  mb-3">
	<div class="col-lg-6">
	  <select class="form-select" name="state_abbr">
	   <option value="">Primary State</option>
	   <% @states.each do |state|%>
	    <option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	   <% end %>
	  </select>
	</div>
	<div class="col-lg-6">
		<input type="text" class="form-control" placeholder="Primary License Number" name="">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<input type="" class="form-control" name="" placeholder="Address Line 1">
	</div>
	<div class="col-lg-6">
		<input type="" class="form-control" name="" placeholder="Address Line 2">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<input type="text" class="form-control" name="" placeholder="City">
	</div>
	<div class="col-lg-6">
	  <select class="form-select" name="state_abbr">
	   <option value="">Primary State</option>
	   <% @states.each do |state|%>
	    <option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	   <% end %>
	  </select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<input type="text" placeholder="Zip Code" name="" class="form-control">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
				<input type="" class="form-control" name="" placeholder="Telephone Number" >
			</div>
			<div class="col-lg-4">
				<input type="" class="form-control" name="" placeholder="Ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<input type="" class="form-control" name="" placeholder="Fax Number">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<input type="email" placeholder="Email Address" class="form-control" name="">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<textarea class="form-control" rows="8" placeholder="2500 max characters"></textarea>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 mb-3 d-flex justify-content-end">
		  	<button class="btn btn-primary">Save This Record</button>
	</div>
</div>
</form>
<form>
<div class="row mb-3">
	<div class="col-lg-12">
		<div class="alert alert-info alert-light-blue">
			<i class="bi bi-info-circle" style="font-size: 20px;"></i>
			<small>
Please list all employment gaps greater than six months in chronological order.
</small>
		</div>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Start Date <span class="text-danger">*</span></label>
		<input type="date" name="gap_start_date" class="form-control border-dark" data-model="employment_gap" required>
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">End Date <span class="text-danger">*</span></label>
		<input type="date" name="gap_end_date" class="form-control border-dark" data-model="employment_gap" required>
		<span class="d-flex">
			<input type="checkbox" name="gap_until_present" data-model="employment_gap">
			<small class="fw-bold ms-2">Present</small>
		</span>
	</div>
</div>
<div class="row mb-3">
  <div class="col-lg-12">
      <label class="text-dark-grey">Gap Reason <span class="text-danger">*</span></label>
  <input type="text" required name="gap_reason" class="form-control border-dark" data-model="employment_gap">
  </div>
</div>
<div class="row mb-3">
  <div class="col-lg-12">
  <label class="text-dark-grey">Detailed Explanation <span class="text-danger">*</span></label>
  <textarea class="form-control border-dark" rows="8" placeholder="2500 max characters" name="gap_explanation" data-model="employment_gap"></textarea>
  </div>
</div>

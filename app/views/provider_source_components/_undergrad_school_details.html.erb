<div class="row">
	<div class="col-lg-6">
		<div id= "undergrad-location">
		<div class="form-group">
			<label class="form-label">Undergraduate School Location</label>
		<%= select_tag :states, options_for_select([['Select Option', nil]] + @states.map { |state| [state.name, state.name] }), required: true, class: 'form-select border-dark', placeholder: 'Undergraduate School Location', id: 'usd-school-location' %>
		</div>
		</div>
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-12">
		<label class="form-label">Undergraduate School Name*</label>
		<input type="text" class="form-control border-dark" name="usd_undergraduate_school_name">
		
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<label class="form-label">Address Line 1*</label>
		<input type="text" class="form-control border-dark" required name="usd_address_line1">
	</div>
	<div class="col-lg-6">
		<label class="form-label">Address Line 2</label>
		<input type="text" class="form-control border-dark" name="usd_address_line2">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<label class="form-label">City*</label>
		<input type="text" class="form-control border-dark" required name="usd_city">
	</div>
	<div class="col-lg-6">
		<label class="form-label">Zip Code*</label>
		<input type="text" class="form-control border-dark" required name="usd_zipcode">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
				<label class="form-label">Telephone Number</label>
				<input type="text" class="form-control border-dark" name="usd_telephone_number">
			</div>
			<div class="col-lg-4">
				<label class="form-label">Ext</label>
				<input type="text" class="form-control border-dark" name="usd_ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<label class="form-label">Fax Number</label>
		<input type="text" class="form-control border-dark" name="usd_fax_number">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-5">
		<label class="form-label">Email</label>
		<input type="email"  class="form-control border-dark" name="usd_email">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<label class="form-label">Undergraduate Major</label>
		<input type="text" class="form-control border-dark" name="usd_undergraduate_major">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<label class="form-label">Deegree Awarded*</label>
		<input type="text" class="form-control border-dark" required name="usd_degree_awarded">
	</div>
</div>

<div class="row mb-3">
			<div class="d-flex align-items-center my-3">
        <button type="button" class="btn btn-xs btn-toggle has-to-show to-change-value" data-tochange="" data-toshow="undergrad_reason_info" data-toggle="button" aria-pressed="false" autocomplete="off">
          <div class="handle"></div>
        </button>
          <small class="ms-2 fw-semibold text-dark-grey">Did you not complete your undergraduate education at this school?</small>
      </div>     
						<div class="d-none" id="undergrad_reason_info">
              <%= render "provider_source_components/undergrad_school_reason"%>
            </div>
  </div>

<div class="row mb-3">
	<div class="col-lg-6">
		<label class="form-label">Start Date</label>
		<input type="date" class="form-control border-dark" name="usd_date_start">
	</div>
	<div class="col-lg-6">
		<label class="form-label">End(Graduation) Date*</label>
		<input type="date" class="form-control border-dark" name="usd_date_graduation">
	</div>
</div>
<div class="row">
	<div class="col-lg-12 mb-3 d-flex justify-content-end">
		  	<button class="btn btn-primary">Save This Record</button>
	</div>
</div>


<script>
$(document).ready(function() {
  // Retrieve the saved value from Local Storage, if it exists
  var savedValue = localStorage.getItem('usdSchoolLocation');
  if (savedValue) {
    $('#usd-school-location').val(savedValue); // Set the dropdown value
  }

  // Store the selected value in Local Storage when the dropdown value changes
  $('#usd-school-location').on('change', function() {
    var selectedValue = $(this).val();
    localStorage.setItem('usdSchoolLocation', selectedValue);
  });
});

</script>


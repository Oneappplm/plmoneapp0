<div class="row">
	<div class="col-lg-6">
		<div class="form-group">
			<label class="form-label">Undergraduate School Location</label>
			<select class="form-select"></select>
		</div>
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-12">
		<label class="form-label">Undergraduate School Name*</label>
		<input type="text" class="form-control" name="usd-undergraduate-school-name">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<label class="form-label">Address Line 1*</label>
		<input type="text" class="form-control" name="usd-address-line1">
	</div>
	<div class="col-lg-6">
		<label class="form-label">Address Line 2</label>
		<input type="text" class="form-control" name="usd-address-line2">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<label class="form-label">City*</label>
		<input type="text" class="form-control" name="usd-city">
	</div>
	<div class="col-lg-6">
		<label class="form-label">Zip Code*</label>
		<input type="text" class="form-control" name="usd-zipcode">
	</div>
</div>

<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
				<label class="form-label">Telephone Number*</label>
				<input type="text" class="form-control" name="usd-telephone-number">
			</div>
			<div class="col-lg-4">
				<label class="form-label">Ext</label>
				<input type="text" class="form-control" name="usd-ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<label class="form-label">Fax Number</label>
		<input type="text" class="form-control" name="usd-fax-number">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-5">
		<label class="form-label">Email</label>
		<input type="email"  class="form-control" name="usd-email">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<label class="form-label">Undergraduate Major</label>
		<input type="text" class="form-control" name="usd-undergraduate-major">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<label class="form-label">Deegree Awarded*</label>
		<input type="text" class="form-control" name="usd-degree-awarded">
	</div>
</div>
<div class="row mb-3">
	<div class="d-flex justify-content-between ">
		<label class="form-label">Did you complete your undergraduate education at this school?*</label>
		<div class="d-flex me-4 gap-2">
			<span>
				<input type="radio" name="complete_undergrad">
				<span>YES</span>
			</span>
			<span>
				<input type="radio" name="complete_undergrad">
				<span>NO</span>
			</span>
		</div>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="form-label">Start Date</label>
		<input type="date" class="form-control" name="">
	</div>
	<div class="col-lg-6">
		<label class="form-label">End(Graduation) Date*</label>
		<input type="date" class="form-control" name="">
	</div>
</div>

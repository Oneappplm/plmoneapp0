<!-- JavaScript for Toggling Fields -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const yesOption = document.getElementById("ecfmg_yes");
    const noOption = document.getElementById("ecfmg_no");
    const fieldsDiv = document.getElementById("ecfmg_fields");

    // Default "No" ko select karo aur fields ko hide rakho
    noOption.checked = true;
    fieldsDiv.style.display = "none";

    function toggleFields() {
      if (yesOption.checked) {
        fieldsDiv.style.display = "block";
      } else {
        fieldsDiv.style.display = "none";
      }
    }

    yesOption.addEventListener("change", toggleFields);
    noOption.addEventListener("change", toggleFields);
  });
</script>


<form>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Carrier Location *</label>
		<select class="form-select border-dark" name="lf-carrier-location">
			<option value="">Carrier Location</option>
			<% @states.each do |state|%>
			<option value="<%= state.alpha_code %>"><%= state.name %></option>
			<% end %>
		</select>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Carrier Name *</label>
		<input type="text" class="form-control border-dark" name="lf-carrier-name" placeholder="Carrier Name">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 1 *</label>
		<input type="text" class="form-control border-dark" name="lf-address-line1" placeholder="Address Line 1*" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 2</label>
		<input type="text" class="form-control border-dark" name="lf-address-line2" placeholder="Address Line 2" >
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">City *</label>
		<input type="text" class="form-control border-dark" name="lf-city" placeholder="City *" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Zip Code *</label>
		<input type="text" class="form-control border-dark" name="lf-zipcode" placeholder="Zip Code*"  required>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
        <label class="text-dark-grey">Telephone Number</label>
				<input type="text" class="form-control border-dark" name="lf-telephone-number" placeholder="Telephone Number" required>
			</div>
			<div class="col-lg-4">
        <label class="text-dark-grey">Ext</label>
				<input type="text" class="form-control border-dark" name="lf-ext" placeholder="Ext" required>
			</div>
		</div>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Fax Number</label>
		<input type="text" class="form-control border-dark" name="lf-fax-number" placeholder="Fax Number"  required>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Email Address</label>
		<input type="text" class="form-control border-dark" name="lf-email-address" placeholder="Email Address" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Type of Policy</label>
		<select name="lf-policy-type" class="form-select border-dark">
			<option value="">Type of Policy</option>
			<option value="Claims Made">Claims Made</option>
			<option value="Occurence">Occurence</option>
		</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Type of Coverage</label>
		<select name="lf-coverage-type" class="form-select border-dark">
			<option value="">Type of Coverage</option>
			<option value="Individual">Individual</option>
			<option value="Shared">Shared</option>
		</select>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Policy Holder Name</label>
		<input type="text" class="form-control border-dark" name="lf-policy-holder-name" placeholder="Policy Holder Name">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Policy Number *</label>
		<input type="text" class="form-control border-dark" name="lf-policy-number" placeholder="Policy Number *">
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
			<div class="d-flex align-items-center my-3">
					<%= HtmlUtils.radio_toggle name: 'has_tail_coverage',
						label: 'Does this policy include tail coverage?',
						hidden_field: true
					%>
			</div>
	</div>
	<div class="col-lg-12">
			<div class="d-flex align-items-center my-3">
					<%= HtmlUtils.radio_toggle name: 'has_carrier_excluded',
						label: 'Has this carrier excluded any specific area of practice or procedures from your coverage?',
						hidden_field: true
					%>
			</div>
	</div>
</div>
<div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Amount of Coverage per Occurrence *</label>
      <input type="text" name="lf-not-insured-coverage-amount" class="form-control border-dark" placeholder="Amount of Coverage per Occurrence *">
      <span>
      <input type="checkbox" name="lf-not-insured-unlimited-coverage-amount">
      <small><strong>Unlimited Coverage</strong></small>
      </span>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Amount of Aggregate Coverage *</label>
      <input type="text" class="form-control border-dark" name="lf-not-insured-email-aggregate-coverage" placeholder="Amount of Aggregate Coverage *">
      <span>
      <input type="checkbox" name="lf-not-insured-unlimited-aggregate-coverage">
      <small><strong>Unlimited Coverage</strong></small>
      </span>
    </div>
  </div>
<div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Original Effective (Retroactive) Date *</label>
      <input type="date" name="lf-not-insured-original-effective-date" class="form-control border-dark">
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Effective Date</label>
      <input type="date" name="lf-not-insured-effective-date" class="form-control border-dark">
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Expiration Date *</label>
      <input type="date" name="lf-not-insured-original-expiration-date" class="form-control border-dark">
      <span>
      <input type="checkbox" name="lf-not-insured-not-expiry">
      <small><strong>Does Not Expire</strong></small>
      </span>
    </div>
  </div>
<div class="row">
	<div class="col-lg-12">
			<div class="d-flex align-items-center my-3">
					<%= HtmlUtils.radio_toggle name: 'has_malpractice_claim',
						label: 'Was this policy involved in a malpractice claim? *',
						hidden_field: true
					%>
			</div>
	</div>
</div>	
</form>
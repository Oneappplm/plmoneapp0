<form>
<div class="row mb-3">
	<div class="col-lg-6">
		<%= HtmlUtils::dropdown name: 'lf-carrier-location', label: 'Carrier Location *', data: { model: 'liability' } %>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Carrier Name <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" name="lf-carrier-name" placeholder="Carrier Name" data-model="liability">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 1 <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" name="lf-address-line1" placeholder="Address Line 1*" data-model="liability" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 2</label>
		<input type="text" class="form-control border-dark" name="lf-address-line2" placeholder="Address Line 2"  data-model="liability">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">City <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" name="lf-city" data-model="liability" placeholder="City *" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Zip Code <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" data-model="liability" name="lf-zipcode" placeholder="Zip Code*"  required>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
        <label class="text-dark-grey">Telephone Number</label>
				<input type="text" class="form-control border-dark" data-model="liability" name="lf-telephone-number" placeholder="Telephone Number" required>
			</div>
			<div class="col-lg-4">
        <label class="text-dark-grey">Ext</label>
				<input type="text" class="form-control border-dark" data-model="liability" name="lf-ext" placeholder="Ext" required>
			</div>
		</div>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Fax Number</label>
		<input type="text" class="form-control border-dark" data-model="liability" name="lf-fax-number" placeholder="Fax Number"  required>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Email Address</label>
		<input type="text" class="form-control border-dark" data-model="liability" name="lf-email-address" placeholder="Email Address" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Type of Policy</label>
		<select name="lf-policy-type" class="form-select border-dark" data-model="liability">
			<option value="">Type of Policy</option>
			<option value="Claims Made">Claims Made</option>
			<option value="Occurence">Occurence</option>
		</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Type of Coverage</label>
		<select name="lf-coverage-type" class="form-select border-dark" data-model="liability">
			<option value="">Type of Coverage</option>
			<option value="Individual">Individual</option>
			<option value="Shared">Shared</option>
		</select>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Policy Holder Name</label>
		<input type="text" class="form-control border-dark" name="lf-policy-holder-name" placeholder="Policy Holder Name" data-model="liability">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Policy Number <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" name="lf-policy-number" placeholder="Policy Number *" data-model="liability">
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
			<div class="col-lg-12">
					<div class="d-flex justify-content-between my-3">
						<%= HtmlUtils.radio_options name: 'has_tail_coverage', label: 'Does this policy include tail coverage?', data: { model: 'liability' } %>
					</div>
			</div>
	</div>
	<div class="col-lg-12">
			<div class="col-lg-12">
					<div class="d-flex justify-content-between my-3">
						<%= HtmlUtils.radio_options name: 'has_carrier_excluded', label: 'Has this carrier excluded any specific area of practice or procedures from your coverage?', data: { model: 'liability' } %>
					</div>
			</div>
	</div>
</div>
<div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Amount of Coverage per Occurrence <span class="text-danger">*</span></label>
      <input type="text" name="lf-not-insured-coverage-amount" class="form-control border-dark" placeholder="Amount of Coverage per Occurrence *" data-model="liability">
      <span>
      <input type="checkbox" name="lf-not-insured-unlimited-coverage-amount" data-model="liability">
      <small><strong>Unlimited Coverage</strong></small>
      </span>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Amount of Aggregate Coverage <span class="text-danger">*</span></label>
      <input type="text" class="form-control border-dark" name="lf-not-insured-email-aggregate-coverage" placeholder="Amount of Aggregate Coverage *" data-model="liability">
      <span>
      <input type="checkbox" name="lf-not-insured-unlimited-aggregate-coverage">
      <small><strong>Unlimited Coverage</strong></small>
      </span>
    </div>
  </div>
<div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Original Effective (Retroactive) Date <span class="text-danger">*</span></label>
      <input type="date" name="lf-not-insured-original-effective-date" class="form-control border-dark" data-model="liability">
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Effective Date</label>
      <input type="date" name="lf-not-insured-effective-date" class="form-control border-dark" data-model="liability">
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Expiration Date <span class="text-danger">*</span></label>
      <input type="date" name="lf-not-insured-original-expiration-date" class="form-control border-dark" data-model="liability">
      <span>
      <input type="checkbox" name="lf-not-insured-not-expiry" data-model="liability">
      <small><strong>Does Not Expire</strong></small>
      </span>
    </div>
  </div>

</form>
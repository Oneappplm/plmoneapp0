<form>
<div class="row mb-3">
	<div class="col-lg-12">
    <label class="text-dark-grey">Organization Name <span class="text-danger">*</span></label>
		<input type="text" required class="form-control border-dark" placeholder="Organization Name" name="prof_organization_name" data-model="prof_organization">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Effective Date</label>
		<input type="date" name="prof_org_effected_date" class="form-control border-dark" data-model="prof_organization" required>
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">Termination Date</label>
		<input type="date" name="prof_org_termination_date" class="form-control border-dark" data-model="prof_organization" required>
		<span class="d-flex align-items-center">
			<input type="checkbox" name="prof_org_until_current" data-model="prof_organization">
			<small class="ms-2 fw-bold">Current</small>
		</span>
	</div>
</div>
<%= link_to 'Add New Organization', new_professional_organization_path, class: "btn btn-primary" %>
<%= link_to 'View All Organizations', professional_organizations_path, class: "btn btn-secondary" %>
</form>

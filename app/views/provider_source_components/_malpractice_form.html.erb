<form>
  <h4 class="fw-semibold text-secondary mb-3">Malpractice Claim</h4>
  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Date of Occurence <span class="text-danger">*</span></label>
      <input type="date" name="mc-occurence-date" class="form-control border-dark" placeholder="Date of Occurence" data-model="malpractice">
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Date Claim was Filed <span class="text-danger">*</span></label>
      <input type="date" class="form-control border-dark" name="mc-date-claim-filed" placeholder="Date Claim was Filed" data-model="malpractice">
    </div>
  </div>
  <div class="col-lg-12 mb-3">
    <label class="text-dark-grey">Status of Claim <span class="text-danger">*</span></label>
    <input type="text" name="mc-claim-status" class="form-control border-dark" placeholder="Status of Claim" data-model="malpractice">
  </div>
  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Amount of Award or Settlement</label>
      <input type="text" class="form-control border-dark" name="mc-amount-award-settlement" placeholder="Amount of Award or Settlement" data-model="malpractice">
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Amount of Award or Settlement Attribute to you</label>
      <input type="text" name="mc-amount-award-attributed" class="form-control border-dark" placeholder="Amount of Award or Settlement Attribute to you" data-model="malpractice">
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Method of Resolution</label>
      <%= HtmlUtils::dropdown name: 'mc-method-resolution', data: { model: "malpractice" } %>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Date of Settlement, Judgment or Dismissal</label>
      <input type="date" class="form-control border-dark" name="mc-date-settlement" placeholder="Fax Number" data-model="malpractice">
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-12 mb-3">
      <label class="text-dark-grey">Description of Allegations <span class="text-danger">*</span></label>
      <textarea class="form-control border-dark" name="mc-description-allegations" rows="5" data-model="malpractice"></textarea>
    </div>
  </div>

<div class="row mb-3">
  <div class="d-flex justify-content-between ">
     <label class="text-dark-grey">Were you the primary defendant or co-defendant?<span class="text-danger">*</span></label>
     <div class="d-flex me-4 gap-2">
        <span>
        <input type="radio" value="yes" name="defendant-options" data-model="malpractice">
        <span>Primary Defendant</span>
        </span>
        <span>
        <input type="radio" value="no" name="defendant-options" data-model="malpractice">
        <span>Co-Defendant</span>
        </span>
        <span>
          <input type="radio" value="yes" name="defendant-options" data-model="malpractice">
          <span>N/A</span>
        </span>
     </div>
  </div>
</div>

  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Number of Defendants <span class="text-danger">*</span></label>
      <select name="mc-defendant-number" class="form-select border-dark" data-model="malpractice">
        <option value="">Number of Defendants</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Your involvement in the case <span class="text-danger">*</span></label>
      <select name="mc-case-involvement" class="form-select border-dark" data-model="malpractice">
        <option value="">Your involvement in the case</option>
        <option value="Attending">Attending</option>
        <option value="Defendant">Defendant</option>
      </select>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-12 mb-3">
      <label class="text-dark-grey">Your Specific Responsibility <span class="text-danger">*</span></label>
      <textarea class="form-control border-dark" name="mc-specific-responsibility" rows="5" data-model="malpractice"></textarea>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-12 mb-3">
      <label class="text-dark-grey">Description of alleged patient, including clinical details, with preceeding events <span class="text-danger">*</span></label>
      <textarea class="form-control border-dark" name="mc-description-alleged-patient" rows="5" data-model="malpractice"></textarea>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-12 mb-3">
      <label class="text-dark-grey">Subsequent events, including patient's clinical outcome <span class="text-danger">*</span></label>
      <textarea class="form-control border-dark" name="mc-patient-outcome" rows="5" data-model="malpractice"></textarea>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-12">
        <div class="d-flex justify-content-between my-3">
          <%= HtmlUtils.radio_options name: 'has_injury_to_death', label: 'Did the alleged injury result in death?', data: { model:"malpractice" } %>
        </div>
    </div>
</div>
<div class="col-lg-12">
  <div class="col-lg-12">
      <div class="d-flex justify-content-between my-3">
        <%= HtmlUtils.radio_options name: 'has_npdb_case', label: 'To the best of your knowledge, is the case included in the National Practitioner Data Bank (NPDB)?', data: { model:"malpractice" } %>
      </div>
  </div>
</div>

</form>
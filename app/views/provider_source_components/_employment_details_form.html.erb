<form>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Employment Location *</label>
		<select class="form-select border-dark" name="edc-employment-location">
	             <option value="">Employment Location *</option>
	               <% @states.each do |state|%>
	                <option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	               <% end %>
	       </select>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Practice/Employer Name *</label>
		<input type="text" name="edc-practice-employer-name" required placeholder="Practice/Employer Name"  class="form-control border-dark">
		<span class="d-flex">
			<input type="checkbox" name="no_longer_in_business">
			<small class="ms-2 fw-bold">No Longer in Business</small>
		</span>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Contact First Name</label>
		<input type="text" name="edc-first-name" class="form-control border-dark" placeholder="Contact First Name">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Contact Last Name</label>
		<input type="text" name="edc-last-name" class="form-control border-dark" placeholder="Contact Last Name">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 1 *</label>
		<input type="text" name="edc-address-line1" class="form-control border-dark" placeholder="Address Line 1 *" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 2</label>
		<input type="text" name="edc-address-line2" class="form-control border-dark" placeholder="Address Line 2">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">City *</label>
		<input type="text" name="edc-city" class="form-control border-dark" placeholder="City *" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Zip Code *</label>
		<input type="text" name="edc-zipcode" class="form-control border-dark" placeholder="Zip Code *">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
        <label class="text-dark-grey">Telephone Number *</label>
				<input type="" class="form-control border-dark" name="edc-telephone-number" placeholder="Telephone Number *" required>
			</div>
			<div class="col-lg-4">
        <label class="text-dark-grey">Ext</label>
				<input type="" class="form-control border-dark" name="edc-ext" placeholder="Ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Fax Number *</label>
		<input type="" class="form-control border-dark" name="edc-fax-number" placeholder="Fax Number *" required>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Email Address*</label>
		<input type="email" name="edc-email" class="form-control border-dark" placeholder="Email *" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Name of Malpractice Carrier During Employment</label>
		<input type="text" name="edc-mcde" class="form-control border-dark" placeholder="Name of Malpractice Carrier During Employment">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Contact Method *</label>
		<select class="form-select border-dark" required name="edc-contact-method">
			<option>Contact Method</option>
		<option value="Email">Email</option>
		<option value="Fax">Fax</option>
		<option value="Mail">Mail</option>
		</select>
		<!-- <input type="email" name="" class="form-control border-dark" placeholder="Email*" required> -->
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Position Held</label>
		<input type="text" name="edc-position-held" class="form-control border-dark" placeholder="Position Held">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Start Date *</label>
		<input type="date" name="edc-start-date" class="form-control border-dark" title="Start Date" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">End Date *</label>
		<input type="date" name="edc-end-date" class="form-control border-dark" title="End Date" required>
		<span class="d-flex">
			<input type="checkbox" name="until_present">
			<small class="fw-bold ms-2">Present</small>
		</span>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
      <div class="d-flex justify-content-between my-3">
         <label class="text-dark-grey">Do/Did you have a collaboration agreement with a licensed physician? *</label>
         <div class="d-flex me-4 gap-2">
            <span>
            <input type="radio" value="yes" name="edc-collab">
            <span>YES</span>
            </span>
            <span>
            <input type="radio" value="no" name="edc-collab">
            <span>NO</span>
            </span>
         </div>
      </div>
	</div>
	<div class="col-lg-12 d-none" id="collab_form">
		<div class="row card p-3">
			<div class="col-lg-12">
				<h4 class="fw-semibold text-secondary">Collaboration 1</h4>
			</div>
			<div class="row mb-3">
				<div class="col-lg-4">
        <label class="text-dark-grey">First Name</label>
					<input type="text" name="co-first-name" class="form-control border-dark" required placeholder="First Name">
				</div>
				<div class="col-lg-2">
        <label class="text-dark-grey">Middle Name</label>
					<input type="text" name="co-middle-name" class="form-control border-dark" placeholder="Middle">
				</div>
				<div class="col-lg-4">
          <label class="text-dark-grey">Last Name</label>
					<input type="text" name="co-last-name" class="form-control border-dark" required placeholder="Last Name">
				</div>
				<div class="col-lg-2">
         <label class="text-dark-grey">Suffix</label>
					<select class="form-select border-dark">
						<option selected="selected" value=""></option>
						<option value="II">II</option>
						<option value="III">III</option>
						<option value="IV">IV</option>
						<option value="Jr.">Jr.</option>
						<option value="Sr.">Sr.</option>
					</select>
				</div>
			</div>
			<div class="row mb-3">
        <div class="col-lg-12">
          <label class="text-dark-grey">Degree *</label>
          <input type="text" class="form-control border-dark" name="co-degree" placeholder="Degree*" required>
        </div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-6">
        <label class="text-dark-grey">Physician Primary License State</label>
				<select class="form-select border-dark" name="state_abbr">
			             <option value="">Physician Primary License State</option>
			               <% @states.each do |state|%>
			                <option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
			               <% end %>
			       </select>
				</div>
				<div class="col-lg-6">
          <label class="text-dark-grey">Physician Primary License Number</label>
					<input type="text" class="form-control border-dark" name="co-physician-pln" placeholder="Physician Primary License Number">
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-6">
          <label class="text-dark-grey">Medicare Number</label>
					<input type="text" class="form-control border-dark" name="co-medicare-number" placeholder="Medicare Number">
				</div>
				<div class="col-lg-6">
          <label class="text-dark-grey">NPI Number</label>

					<input type="text" class="form-control border-dark" name="co-npi-number" placeholder="NPI Number">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 d-flex justify-content-end px-0 my-3">
				<button class="btn btn-outline-secondary btn-sm">Add Another Collaborating Physician </button>
			</div>
		</div>
	</div>
</div>
<!-- <div class="row">
	<div class="col-lg-12 mb-3 d-flex justify-content-end">
		<button class="btn btn-primary">Save This Record</button>
	</div>
</div> -->
</form>
<script>
	$('input[name=edc-collab]').on('change',function(){
		($(this).val() == 'yes') ? $('#collab_form').removeClass('d-none') : $('#collab_form').addClass('d-none');
	});
</script>
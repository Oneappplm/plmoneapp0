<form>
<div class="row mb-3">
	<div class="col-lg-6">
		<%= HtmlUtils::dropdown name: 'edc-employment-location', label: 'Employment Location', data: { model: 'employment' } %>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Practice/Employer Name <span class="text-danger">*</span></label>
		<input type="text" name="edc-practice-employer-name" required placeholder="Practice/Employer Name"  class="form-control border-dark" data-model="employment">
		<span class="d-flex">
			<input type="checkbox" name="no_longer_in_business" data-model="employment">
			<small class="ms-2 fw-bold">No Longer in Business</small>
		</span>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Contact First Name</label>
		<input type="text" name="edc-first-name" class="form-control border-dark" placeholder="Contact First Name" data-model="employment">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Contact Last Name</label>
		<input type="text" name="edc-last-name" class="form-control border-dark" placeholder="Contact Last Name" data-model="employment">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 1 <span class="text-danger">*</span></label>
		<input type="text" name="edc-address-line1" class="form-control border-dark" placeholder="Address Line 1 *" data-model="employment" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 2</label>
		<input type="text" name="edc-address-line2" class="form-control border-dark" placeholder="Address Line 2" data-model="employment">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">City <span class="text-danger">*</span></label>
		<input type="text" name="edc-city" class="form-control border-dark" placeholder="City *" data-model="employment" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Zip Code <span class="text-danger">*</span></label>
		<input type="text" name="edc-zipcode" class="form-control border-dark" data-model="employment" placeholder="Zip Code *">
	</div>
</div>
<div class="row mb-3">
			<div class="col-lg-6">
        <label class="text-dark-grey">Telephone Number <span class="text-danger">*</span></label>
				<input type="" class="form-control border-dark" name="edc-telephone-number" placeholder="Telephone Number *" data-model="employment" required>
			</div>
			<div class="col-lg-6">
        <label class="text-dark-grey">Ext</label>
				<input type="" class="form-control border-dark" name="edc-ext" placeholder="Ext" data-model="employment">
			</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Email Address<span class="text-danger">*</span></label>
		<input type="email" name="edc-email" class="form-control border-dark" data-model="employment" placeholder="Email *" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Name of Malpractice Carrier During Employment</label>
		<input type="text" name="edc-mcde" class="form-control border-dark" placeholder="Name of Malpractice Carrier During Employment" data-model="employment">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Contact Method <span class="text-danger">*</span></label>
		  <span class="ms-2" data-bs-toggle="tooltip" data-bs-placement="right" 
				title="Select the employer's preferred method of contact for verification.">
				<i class="bi bi-info-circle text-primary fs-5"></i>
			</span>
		<select class="form-select border-dark" required name="edc-contact-method" data-model="employment">
			<option>Contact Method</option>
		<option value="Email">Email</option>
		<option value="Fax">Fax</option>
		<option value="Mail">Mail</option>
		</select>
		<!-- <input type="email" name="" class="form-control border-dark" placeholder="Email*" required> -->
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Position Held</label>
		<input type="text" name="edc-position-held" class="form-control border-dark" placeholder="Position Held" data-model="employment">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Start Date <span class="text-danger">*</span></label>
		  <span class="ms-2" data-bs-toggle="tooltip" data-bs-placement="right" 
				title="Type the date as mm/dd/yyyy or select from the calendar.">
				<i class="bi bi-info-circle text-primary fs-5"></i>
			</span>
		<input type="date" name="edc-start-date" data-model="employment" class="form-control border-dark" title="Start Date" required>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">End Date <span class="text-danger">*</span></label>
		  <span class="ms-2" data-bs-toggle="tooltip" data-bs-placement="right" 
				title="Type the date as mm/dd/yyyy or select from the calendar.">
				<i class="bi bi-info-circle text-primary fs-5"></i>
			</span>
		<input type="date" name="edc-end-date" data-model="employment" class="form-control border-dark" title="End Date" required>
		<span class="d-flex">
			<input type="checkbox" name="until_present" data-model="employment">
			<small class="fw-bold ms-2">Present</small>
		</span>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
      <div class="d-flex justify-content-between my-3">
          <label class="text-dark-grey">Do/Did you have a collaboration agreement with a licensed physician? <span class="text-danger">*</span>
						<span class="ms-2" data-bs-toggle="tooltip" data-bs-placement="right" 
							title="Collaboration means a mutually agreed upon relationship between a physician extender and a physician who is educated, trained, or has experience related to the physician extender's work.">
							<i class="bi bi-info-circle text-primary fs-5"></i>
						</span>
					</label>
         <div class="d-flex me-4 gap-2">
            <span>
            <input type="radio" value="yes" name="edc_collab" class="edc_collab_rbtn" data-model="employment">
            <span>YES</span>
            </span>
            <span>
            <input type="radio" value="no" name="edc_collab" class="edc_collab_rbtn" data-model="employment">
            <span>NO</span>
            </span>
         </div>
      </div>
	</div>
	<div class="col-lg-12 my-1">
					<div class="alert alert-info alert-light-blue">
						<i class="bi bi-info-circle" style="font-size: 20px;"></i>
						<small> Collaboration means a mutually agreed upon relationship between a physician extender and a physician who is educated, trained, or has experience related to the physician extender's work. </small>
					</div>
				</div>
	<div class="col-lg-12 d-none" id="collab_form">
		<div class="row card p-3">
			<div class="col-lg-12">
				<h4 class="fw-semibold text-secondary">Collaboration 1</h4>
			</div>
			<div class="row mb-3">
				<div class="col-lg-4">
        <label class="text-dark-grey">First Name</label>
					<input type="text" name="co-first-name" class="form-control border-dark" required placeholder="First Name" data-model="employment">
				</div>
				<div class="col-lg-2">
        <label class="text-dark-grey">Middle Name</label>
					<input type="text" name="co-middle-name" class="form-control border-dark" placeholder="Middle" data-model="employment">
				</div>
				<div class="col-lg-4">
          <label class="text-dark-grey">Last Name</label>
					<input type="text" name="co-last-name" class="form-control border-dark" required placeholder="Last Name" data-model="employment">
				</div>
				<div class="col-lg-2">
         <label class="text-dark-grey">Suffix</label>
					<select class="form-select border-dark" required name="co-suffix" data-model="employment">
						<option selected="selected" value="">Suffix</option>
						<option value="II">II</option>
						<option value="III">III</option>
						<option value="IV">IV</option>
						<option value="Jr.">Jr.</option>
						<option value="Sr.">Sr.</option>
					</select>
				</div>
			</div>
			<div class="row mb-3">
        <div class="col-lg-12">
          <label class="text-dark-grey">Degree <span class="text-danger">*</span></label>
          <input type="text" data-model="employment" class="form-control border-dark" name="co-degree" placeholder="Degree*" required>
        </div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-6">
				<%= HtmlUtils::dropdown name: 'state_abbr', label: 'Physician Primary License State',data: { model: 'employment' } %>
				</div>
				<div class="col-lg-6">
          <label class="text-dark-grey">Physician Primary License Number</label>
					<input type="text" class="form-control border-dark" name="co-physician-pln" placeholder="Physician Primary License Number" data-model="employment">
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-6">
          <label class="text-dark-grey">Medicare Number</label>
					<input type="text" class="form-control border-dark" name="co-medicare-number" placeholder="Medicare Number" data-model="employment">
				</div>
				<div class="col-lg-6">
          <label class="text-dark-grey">NPI Number</label>

					<input type="text" class="form-control border-dark" name="co-npi-number" placeholder="NPI Number" data-model="employment">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 d-flex justify-content-end px-0 my-3">
				<button class="btn btn-outline-secondary btn-sm">Add Another Collaborating Physician </button>
			</div>
		</div>
	</div>
</div>
<!-- <div class="row">
	<div class="col-lg-12 mb-3 d-flex justify-content-end">
		<button class="btn btn-primary">Save This Record</button>
	</div>
</div> -->
</form>
<script>
	$('.edc_collab_rbtn').on('change',function(){
		($(this).val() == 'yes') ? $('#collab_form').removeClass('d-none') : $('#collab_form').addClass('d-none');
	});
</script>


<div class="row mt-4">
  <div class="col-lg-12">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex gap-2">
        <%= form_with(url: upload_document_provider_sources_path, local: true, html: { multipart: true }) do |form| %>
          <div class="d-flex gap-2">
            <%= form.file_field :file, class: "d-none", id: "file-upload" %>
            <%= form.hidden_field :provider_source_id, value: provider_source.id %>
            <label for="file-upload" class="btn btn-xs btn-secondary bg-medium-grey d-flex text-black align-items-center fw-bold gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="svg-icon">
                <path fill-rule="evenodd" d="M4.5 2A1.5 1.5 0 003 3.5v13A1.5 1.5 0 004.5 18h11a1.5 1.5 0 001.5-1.5V7.621a1.5 1.5 0 00-.44-1.06l-4.12-4.122A1.5 1.5 0 0011.378 2H4.5zm4.75 11.25a.75.75 0 001.5 0v-2.546l.943 1.048a.75.75 0 101.114-1.004l-2.25-2.5a.75.75 0 00-1.114 0l-2.25 2.5a.75.75 0 101.114 1.004l.943-1.048v2.546z" clip-rule="evenodd" />
              </svg>
              <span>Upload</span>
            </label>
            <%= form.submit "Submit", class: "d-none", id: "file-submit" %>
          </div>
        <% end %>
        <%# <a href="javascript:void(0);" class="btn btn-xs btn-primary d-flex align-items-center fw-bold gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="svg-icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
          </svg>
          <span>Download</span>
        </a> %>
        <%= form_with url: download_documents_provider_sources_path, method: :post, local: true do |form| %>
          <%= hidden_field_tag 'document_ids[]', nil, id: 'document-ids' %>
          <button type="submit" class="btn btn-xs btn-primary d-flex align-items-center fw-bold gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="svg-icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
            </svg>
            <span>Download</span>
          </button>
        <% end %>
      </div>
      <%# <div class="d-flex gap-4 align-items-center">
        <div>
          <label class="text-dark-grey">Show limit</label>
          <span class="border px-3">20</span>
        </div>
        <div>
          <label class="text-dark-grey">Page 0 of 0</label>
          <span class="border px-3">0</span>
        </div>
      </div> %>
    </div>
  </div>
</div>

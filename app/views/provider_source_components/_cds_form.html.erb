<div class="row">
	<div class="col-lg-6">
		<label>CDS Registration Number</label>
		<input type="text" name="cds_registration_number" class="form-control">
	</div>
	<div class="col-lg-6">
		<label>CDS Registration Number</label>
		<select class="form-select" name="cds_registration_state">
			<% @states.each do |state|%>
				<option value="<%= state.name %>"><%= state.name %></option>
			<% end %>
		</select>
	</div>
	<div class="col-lg-6">
		<label>Issue Date</label>
		<input type="date" name="cds_issue_date" class="form-control">
	</div>
	<div class="col-lg-6">
		<label>Expiration Date *</label>
		<input type="date" name="cds_issue_date" class="form-control">
		<span class="d-flex gap-2">
			<input type="checkbox" name="cds_not_expire">
			<small>Does not expire</small>
		</span>
	</div>

	<div class="col-lg-12">
      <div class="d-flex justify-content-between my-3">
         <label class="form-label">Are you currently practicing in this state? *</label>
         <div class="d-flex me-4 gap-2">
            <span>
            <input type="radio" value="yes" name="cds_practice_state" required>
            <span>YES</span>
            </span>
            <span>
            <input type="radio" value="no" name="cds_practice_state" required>
            <span>NO</span>
            </span>
         </div>
      </div>
	</div>
	<div class="col-lg-12">
      <div class="d-flex justify-content-between my-3">
         <label class="form-label">Full Schedule?</label>
         <div class="d-flex me-4 gap-2">
            <span>
            <input type="radio" value="yes" name="cds_full_schedule">
            <span>YES</span>
            </span>
            <span>
            <input type="radio" value="no" name="cds_full_schedule">
            <span>NO</span>
            </span>
         </div>
      </div>
	</div>
</div>
<form>
<div class="row mb-3">
	<div class="col-lg-4">
    <label class="text-dark-grey">First Name <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" name="rf-first-name" required placeholder="First Name *">
	</div>
	<div class="col-lg-2">
    <label class="text-dark-grey">Middle Name</label>
		<input type="text" class="form-control border-dark" name="rf-middle-name" placeholder="Middle Name">
	</div>
	<div class="col-lg-4">
    <label class="text-dark-grey">Last Name <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" name="rf-last-name" required placeholder="Last Name *">
	</div>
	<div class="col-lg-2">
    <label class="text-dark-grey">Suffix</label>
		<select class="form-select border-dark" name="rf-suffix">
			<option selected="selected" value="">Suffix</option>
			<option value="II">II</option>
			<option value="III">III</option>
			<option value="IV">IV</option>
			<option value="Jr.">Jr.</option>
			<option value="Sr.">Sr.</option>
		</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
    <label class="text-dark-grey">Degree <span class="text-danger">*</span></label>

		<input type="text" required class="form-control border-dark" placeholder="Degree *" name="rf-degree">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<%= HtmlUtils::dropdown name: 'rf-specialty', label: 'Primary Specialty' %>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-8">
    <label class="text-dark-grey">Contact Method <span class="text-danger">*</span></label>

		<select class="form-select border-dark" name="rf-contact-method">
		<option value="">Contact Method</option>
		<option selected="selected" value="Email">Email</option>
		<option value="Fax">Fax</option>
		<option value="Mail">Mail</option>

		</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 1 <span class="text-danger">*</span></label>

		<input type="text" class="form-control border-dark" name="rf-address-line1" required placeholder="Address Line 1 *">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 2</label>

		<input type="text" class="form-control border-dark" name="rf-address-line2" placeholder="Address Line 2">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">City <span class="text-danger">*</span></label>

		<input type="text" class="form-control border-dark" name="rf-city" required placeholder="City *">
	</div>
	<div class="col-lg-6">
		<%= HtmlUtils::dropdown name: 'rf-state', label: 'State *' %>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-8">
    <label class="text-dark-grey">Zip Code <span class="text-danger">*</span></label>

		<input type="text" class="form-control border-dark" placeholder="Zip Code *" name="rf-zipcode">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
    <label class="text-dark-grey">Telephone Number <span class="text-danger">*</span></label>

				<input type="text" class="form-control border-dark" name="rf-telephone-number" placeholder="Telephone Number *" required>
			</div>
			<div class="col-lg-4">
    <label class="text-dark-grey">Ext</label>
				<input type="text" class="form-control border-dark" name="rf-ext" placeholder="Ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Fax Number <span class="text-danger">*</span></label>
		<input type="text" class="form-control border-dark" name="rf-fax" placeholder="Fax *" required>
    <span class="d-flex align-items-center">
      <input type="checkbox" name="rf-does-not-have" >
      <label class="ms-3">Does not have</label>
    </span>
	</div>
</div>
<div class="row mb-3">
  <div class="col-lg-6">
    <label class="text-dark-grey">Mobile Number</label>
    <input type="text" name="rf-mobile-number" class="form-control border-dark">
  </div>
  <div class="col-lg-6">
    <label class="text-dark-grey">Email Address <span class="text-danger">*</span></label>
    <input type="text" name="rf-email-address" class="form-control border-dark">
  </div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label class="text-dark-grey">Association Start Date <span class="text-danger">*</span></label>
		<input type="date" name="rf-association-start-date" class="form-control border-dark">
	</div>
	<div class="col-lg-6">
		<label class="text-dark-grey">Association End Date <span class="text-danger">*</span></label>
		<input type="date" name="rf-association-end-date" class="form-control border-dark">
		<span class="d-flex align-items-center">
			<input type="checkbox" name="rf-association-until-present">
			<small class="ms-2 fw-bold">Present</small>
		</span>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-8">
    <label class="text-dark-grey">Relationship</label>
		<input type="text" name="rf-relationship" class="form-control border-dark" placeholder="Relationship">
	</div>
</div>
<!-- <div class="row">
	<div class="col-lg-12 mb-3 d-flex justify-content-end">
		  	<button class="btn btn-primary">Save This Record</button>
	</div>
</div> -->
</form>
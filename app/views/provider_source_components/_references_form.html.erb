<form>
	<div class="row mb-3">
		<div class="col-lg-4">
			<label class="text-dark-grey">First Name <span class="text-danger">*</span></label>
			<input type="text" class="form-control border-dark" name="rf-first-name" required placeholder="First Name *" data-model="prof_references">
		</div>
		<div class="col-lg-2">
			<label class="text-dark-grey">Middle Name</label>
			<input type="text" class="form-control border-dark" name="rf-middle-name" placeholder="Middle Name" data-model="prof_references">
		</div>
		<div class="col-lg-4">
			<label class="text-dark-grey">Last Name <span class="text-danger">*</span></label>
			<input type="text" class="form-control border-dark" name="rf-last-name" required placeholder="Last Name *" data-model="prof_references">
		</div>
		<div class="col-lg-2">
			<label class="text-dark-grey">Suffix</label>
			<select class="form-select border-dark" name="rf-suffix" data-model="prof_references">
				<option selected="selected" value="">Suffix</option>
				<option value="II">II</option>
				<option value="III">III</option>
				<option value="IV">IV</option>
				<option value="Jr.">Jr.</option>
				<option value="Sr.">Sr.</option>
			</select>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="text-dark-grey">Degree <span class="text-danger">*</span></label>

			<input type="text" required class="form-control border-dark" placeholder="Degree *" name="rf-degree" data-model="prof_references">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-12">
			<%= HtmlUtils::dropdown name: 'rf-specialty', label: 'Primary Specialty', data: { model: 'prof_references'} %>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-8">
			<label class="text-dark-grey">Contact Method <span class="text-danger">*</span></label>

			<select class="form-select border-dark" name="rf-contact-method" data-model="prof_references">
			<option value="">Contact Method</option>
			<option selected="selected" value="Email">Email</option>
			<option value="Fax">Fax</option>
			<option value="Mail">Mail</option>

			</select>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">Address Line 1 <span class="text-danger">*</span></label>

			<input type="text" class="form-control border-dark" name="rf-address-line1" required placeholder="Address Line 1 *" data-model="prof_references">
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Address Line 2</label>

			<input type="text" class="form-control border-dark" name="rf-address-line2" placeholder="Address Line 2" data-model="prof_references">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">City <span class="text-danger">*</span></label>

			<input type="text" class="form-control border-dark" name="rf-city" required placeholder="City *" data-model="prof_references">
		</div>
		<div class="col-lg-6">
			<%= HtmlUtils::dropdown name: 'rf-state', label: 'State', data: { model: 'prof_references' } %>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-8">
			<label class="text-dark-grey">Zip Code <span class="text-danger">*</span></label>

			<input type="text" class="form-control border-dark" placeholder="Zip Code *" name="rf-zipcode" data-model="prof_references">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<div class="row">
				<div class="col-lg-8">
			<label class="text-dark-grey">Telephone Number <span class="text-danger">*</span></label>

					<input type="text" class="form-control border-dark" name="rf-telephone-number" placeholder="Telephone Number *" data-model="prof_references" required>
				</div>
				<div class="col-lg-4">
			<label class="text-dark-grey">Ext</label>
					<input type="text" class="form-control border-dark" name="rf-ext" placeholder="Ext" data-model="prof_references">
				</div>
			</div>
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Fax Number <span class="text-danger">*</span></label>
			<input type="text" class="form-control border-dark" data-model="prof_references" name="rf-fax" placeholder="Fax *" required>
			<span class="d-flex align-items-center">
				<input type="checkbox" name="rf-does-not-have" data-model="prof_references">
				<label class="ms-3">Does not have</label>
			</span>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">Mobile Number</label>
			<input type="text" name="rf-mobile-number" class="form-control border-dark" data-model="prof_references">
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Email Address <span class="text-danger">*</span></label>
			<input type="text" name="rf-email-address" class="form-control border-dark" data-model="prof_references">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">Association Start Date <span class="text-danger">*</span></label>
			<input type="date" name="rf-association-start-date" class="form-control border-dark" data-model="prof_references">
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Association End Date <span class="text-danger">*</span></label>
			<input type="date" name="rf-association-end-date" class="form-control border-dark" data-model="prof_references">
			<span class="d-flex align-items-center">
				<input type="checkbox" name="rf-association-until-present" data-model="prof_references">
				<small class="ms-2 fw-bold">Present</small>
			</span>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-8">
			<label class="text-dark-grey">Relationship</label>
			<input type="text" name="rf-relationship" class="form-control border-dark" placeholder="Relationship" data-model="prof_references">
		</div>
	</div>
	<%= link_to "Add More Reference", new_reference_path, class: "btn btn-primary" %>
	<%= link_to "Show All References", references_path, class: "btn btn-secondary" %>
	<!-- <div class="row">
		<div class="col-lg-12 mb-3 d-flex justify-content-end">
					<button class="btn btn-primary">Save This Record</button>
		</div>
	</div> -->
</form>

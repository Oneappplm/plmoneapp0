<form>
<div class="row mb-3">
	<div class="col-lg-4">
		<input type="text" class="form-control" name="rf-first-name" required placeholder="First Name*">
	</div>
	<div class="col-lg-2">
		<input type="text" class="form-control" name="rf-middle-name" required placeholder="Middle Name*">
	</div>
	<div class="col-lg-4">
		<input type="text" class="form-control" name="rf-last-name" required placeholder="Last Name*">
	</div>
	<div class="col-lg-2">
		<select class="form-select" name="rf-suffix">
			<option selected="selected" value=""></option>
			<option value="II">II</option>
			<option value="III">III</option>
			<option value="IV">IV</option>
			<option value="Jr.">Jr.</option>
			<option value="Sr.">Sr.</option>
		</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<input type="text" required class="form-control" placeholder="Degree*" name="rf-degree">	
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
	<select class="form-select" name="specialty">
	 <option value="">Primary Specialty</option>
	  <% @specialties.each do |specialty|%>
	   <option value="<%= specialty.bcbs%>"><%= specialty.bcbs %></option>
	    <% end %>
	</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-8">
		<select class="form-select">
		<option value="">Contact Method</option>
		<option selected="selected" value="Email">Email</option>
		<option value="Fax">Fax</option>
		<option value="Mail">Mail</option>

		</select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<input type="text" class="form-control" name="rf-address-line1" required placeholder="Address Line 1*">
	</div>
	<div class="col-lg-6">
		<input type="text" class="form-control" name="rf-address-line2" required placeholder="Address Line 2*">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<input type="text" class="form-control" name="rf-city" required placeholder="City*">
	</div>
	<div class="col-lg-6">
	    <select class="form-select" name="state_abbr">
	     <option value="">State*</option>
	     <% @states.each do |state|%>
	      <option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	     <% end %>
	    </select>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-8">
		<input type="text" class="form-control" placeholder="Zip Code*" name="rf-zipcode">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
				<input type="text" class="form-control" name="rf-telephone-number" placeholder="Telephone Number*" required>
			</div>
			<div class="col-lg-4">
				<input type="text" class="form-control" name="rf-ext" placeholder="Ext*" required>
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<input type="text" class="form-control" name="rf-fax" placeholder="Fax*" required>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
		<span class="d-flex align-items-center">
			<input type="checkbox" name="rf-does-not-have" >
			<label class="ms-3">Does not have</label>
		</span>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<label>Association Start Date</label>
		<input type="date" name="rf-association-start-date" class="form-control">
	</div>
	<div class="col-lg-6">
		<label>Association End Date</label>
		<input type="date" name="rf-association-end-date" class="form-control">
		<span class="d-flex align-items-center">
			<input type="checkbox" name="rf-association-until-present">
			<small class="ms-2 fw-bold">Present</small>
		</span>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-8">
		<input type="text" name="rf-relationship" class="form-control" placeholder="Relationship">
	</div>
</div>

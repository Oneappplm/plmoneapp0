<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Branch of Service <span class="text-danger">*</span></label>
		<select class="form-select border-dark" name="military_enlist_base_of_service">
			<option selected="selected" value="">Branch of Service</option>
			<option value="Air Force">Air Force</option>
			<option value="Army">Army</option>
			<option value="Coast Guard">Coast Guard</option>
			<option value="Marine Corps">Marine Corps</option>
			<option value="Navy">Navy</option>
			<option value="US Public Health Service">US Public Health Service</option>
		</select>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Military Rank at Time of Discharge/Current</label>
		<input type="text" class="form-control border-dark" name="mi-mrtd" placeholder="Military Rank at Time of Discharge/Current">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Enlist Date</label>
		<input type="date" name="military_enlist_data" placeholder="Enlist Date" class="form-control border-dark" title="Enlist Date">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Discharge Date</label>
		<input type="date" name="military_discharge_data" placeholder="Discharge Date" class="form-control border-dark"  title="Discharge Date">
		<span class="d-flex">
			<input type="checkbox" name="military_until_current">
			<small class="font-medium ms-2">Current</small>
		</span>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Name of Primary Base</label>
		<input type="" class="form-control border-dark" name="military_primary_base" placeholder="Name of Primary Base">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Division</label>
		<input type="" class="form-control border-dark" name="military_division" placeholder="Division">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-12">
	 <%= HtmlUtils::dropdown name: 'military_primary_base_location', label: 'Primary Base Location' %>
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 1</label>
		<input type="" class="form-control border-dark" name="military_address_1" placeholder="Address Line 1">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Address Line 2</label>
		<input type="" class="form-control border-dark" name="military_address_2" placeholder="Address Line 2">
	</div>
</div>
<div class="row mb-3">
  <div class="col-lg-6">
    <label class="text-dark-grey">City</label>
    <input type="" class="form-control border-dark" name="military_city" placeholder="City">
  </div>
  <div class="col-lg-6">
    <label class="text-dark-grey">Zip Code</label>
    <input type="" class="form-control border-dark" name="military_zip_code" placeholder="Zip Code">
  </div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-8">
        <label class="text-dark-grey">Telephone Number</label>
				<input type="" class="form-control border-dark" name="military_telephoe" placeholder="Telephone Number">
			</div>
			<div class="col-lg-4">
        <label class="text-dark-grey">Ext</label>
				<input type="" class="form-control border-dark" name="military_ext" placeholder="Ext">
			</div>
		</div>
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Fax Number</label>
		<input type="" class="form-control border-dark" name="military_fax" placeholder="Fax Number">
	</div>
</div>
<div class="row mb-3">
	<div class="col-lg-6">
    <label class="text-dark-grey">Status</label>
		<input type="" class="form-control border-dark" name="military_status" placeholder="Status">
	</div>
	<div class="col-lg-6">
    <label class="text-dark-grey">Appointment Date</label>
		<input type="date" class="form-control border-dark" name="military_appointed_date" placeholder="" title="Appointment Date">
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
      <div class="d-flex justify-content-between my-1">
         <label class="form-label">Were you honorably discharged?</label>
         <div class="d-flex me-4 gap-2">
            <span>
            <input type="radio" value="yes" name="honorably_discharge" class="is-discharged-rbtn" required>
            <span>YES</span>
            </span>
            <span>
            <input type="radio" value="no" name="honorably_discharge" class="is-discharged-rbtn" required>
            <span>NO</span>
            </span>
         </div>
      </div>
      </div>
      <div class="col-lg-12 d-none" id="is-discharged-field">
	  	<label class="text-dark-grey">Please explain</label>
      	<textarea class="form-control border-dark" rows="4" name="military_discharge_reason"></textarea>
      </div>
</div>
<div class="row mt-3">
	<div class="col-lg-12">
      <div class="d-flex justify-content-between my-1">
         <label class="form-label">Have you ever been court-martialed?</label>
         <div class="d-flex me-4 gap-2">
            <span>
            <input type="radio" value="yes" name="military_court_martialed" class="is-court-martialed" required>
            <span>YES</span>
            </span>
            <span>
            <input type="radio" value="no" name="military_court_martialed" class="is-court-martialed" required>
            <span>NO</span>
            </span>
         </div>
      </div>
      </div>
	  <div class="col-lg-12 d-none" id="court-martialed-field">
	  	<label class="text-dark-grey">Please explain</label>
      	<textarea class="form-control border-dark" rows="4" name="court_martialed_reason"></textarea>
      </div>
</div>
<div class="row mt-3">
	<div class="col-lg-12">
      <div class="d-flex justify-content-between my-1">
         <label class="form-label">Are you currently in the Reserves or National Guard?</label>
         <div class="d-flex me-4 gap-2">
            <span>
            <input type="radio" value="yes" name="military_reserve" class="is-military-reserve">
            <span>YES</span>
            </span>
            <span>
            <input type="radio" value="no" name="military_reserve" class="is-military-reserve">
            <span>NO</span>
            </span>
         </div>
      </div>
      </div>
	   <div class="col-lg-12 d-none" id="military-reserve-field">
	  	<label class="text-dark-grey">Military Reserve</label>
      	<select class="form-select border-dark" name="military_enlist_base_of_service">
			<option selected="selected" value="">Military Reserve</option>
			
		</select>
      </div>
</div>

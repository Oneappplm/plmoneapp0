<script>
	$('.is-discharged-rbtn').on('change',function(){
		($(this).val() == 'no') ? $('#is-discharged-field').removeClass('d-none') : $('#is-discharged-field').addClass('d-none');
	})

	$('.is-court-martialed').on('change',function(){
		($(this).val() == 'yes') ? $('#court-martialed-field').removeClass('d-none') : $('#court-martialed-field').addClass('d-none');
	})

	$('.is-military-reserve').on('change',function(){
		($(this).val() == 'yes') ? $('#military-reserve-field').removeClass('d-none') : $('#military-reserve-field').addClass('d-none');
	})
</script>
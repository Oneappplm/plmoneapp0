<div class="bg-light bg-gradient p-3">
   <div class="row mb-3">
      <div class="col-lg-6">
          <label class="text-dark-grey">Facility Location <span class="text-danger"> *</span></label>
         <%= HtmlUtils::dropdown name: 'state_abbr' %>
      </div>
      <div class="col-lg-6">
         <label class="text-dark-grey">Facility Name <span class="text-danger">*</span></label>
         <input type="text" class="form-control border-dark" name="hp-facility-name" placeholder="Facility name">
         <span class="d-flex">
         <input type="checkbox" name="hp-no_longer_in_business">
         <small class="fw-semibold ms-2 mt-2">No Longer in Business</small>
         </span>
      </div>
   </div>
   <div class="row mb-3">
      <div class="col-lg-6">
         <label class="text-dark-grey">Medical Staff Office Address Line 1 <span class="text-danger">*</span></label>
         <input type="text" class="form-control border-dark" name="hp-mso-address-line1" placeholder="Medical Staff Office Address Line 1">
      </div>
      <div class="col-lg-6">
         <label class="text-dark-grey">Medical Staff Office Address Line 2</label>
         <input type="text" class="form-control border-dark" name="hp-mso-address-line2" placeholder="Medical Staff Office Address Line 2">
      </div>
   </div>
   <div class="row mb-3">
      <div class="col-lg-6">
         <label class="text-dark-grey">City <span class="text-danger">*</span></label>
         <input type="text" class="form-control border-dark" name="hp-city" placeholder="City">
      </div>
      <div class="col-lg-6">
         <label class="text-dark-grey">Zip Code <span class="text-danger">*</span></label>
         <input type="text" class="form-control border-dark" name="hp-zipcode" placeholder="Zip Code">
      </div>
   </div>
   <div class="row mb-3">
      <div class="col-lg-3">
         <label class="text-small text-dark-grey">Medical Staff Office Telephone Number <span class="text-danger">*</span></label>
         <input type="text" class="form-control border-dark" name="hp-mso-telephone-number" placeholder="Medical Staff Office Telephone Number">
      </div>
      <div class="col-lg-3">
         <label class="text-dark-grey">Ext</label>
         <input type="text" class="form-control border-dark" name="hp-ext" placeholder="Ext">
      </div>
      <div class="col-lg-6">
         <label class="text-dark-grey">Medical Staff Office Fax Number <span class="text-danger">*</span></label>
         <input type="text" class="form-control border-dark" name="hp-mso-fax-number" placeholder="Medical Staff Office Fax Number">
      </div>
      
   </div>
   <div class="row mb-3">
      <div class="col-lg-6">
         <label class="text-dark-grey">Medical Staff/Credentialing E-mail Address</label>
         <input type="text" class="form-control border-dark" name="hp-mso-email-address" placeholder="Medical Staff/Credentialing E-mail Address">
      </div>
      <div class="col-lg-6">
         <label class="text-dark-grey">Department Name <span class="text-danger">*</label>
         <input type="text" class="form-control border-dark" name="mso-department-name" placeholder="Department Name">
      </div>
   </div>
   <div class="row mb-3">
      <div class="col-lg-6">
         <label class="text-dark-grey">Division Name</label>
         <input type="text" class="form-control border-dark" name="mso-division-name" placeholder="Division Name">
      </div>
   </div>
   <div class="card p-3">
      <h4 class="fw-semibold text-secondary mb-3">Department/Division Director</h4>
      <div class="row mb-3">
         <div class="col-lg-6">
            <label class="text-dark-grey">First Name</label>
            <input type="text" name="mso-first-name" class="form-control border-dark" placeholder="First Name">
         </div>
         <div class="col-lg-6">
            <label class="text-dark-grey">Last Name</label>
            <input type="text" name="mso-last-name" class="form-control border-dark" placeholder="Last Name">
         </div>
      </div>
   </div>
   <div class="row mb-3">
      <div class="col-lg-12">
         <div class="d-flex justify-content-between my-3">
            <%= HtmlUtils.radio_options name: 'hp-unrestricted-privileges', label: 'Do/Did you have full, unrestricted privileges?' %>
         </div>
	   </div>
      <div class="col-lg-12">
         <div class="d-flex justify-content-between my-3">
            <%= HtmlUtils.radio_options name: 'ai-previleges-temporary', label: 'Are/Were your privileges temporary?' %>
         </div>
	   </div>
   </div>
   <div class="card p-3">
      <h4 class="fw-semibold text-secondary mb-3">Privileges Status</h4>
      <div class="col-lg-12">
         <%= HtmlUtils::dropdown name: 'hfa_privilege_status', label: 'Privileges Status(Select Pending if your application is in process.)' %>
      </div>
   </div>
<!--    <div class="row my-3">
      <div class="col-lg-12 mb-3 d-flex justify-content-end">
         <button class="btn btn-primary">Save This Record</button>
      </div>
   </div> -->
</div>

<div class="bg-light bg-gradient p-3">
	<h4 class="fw-semibold text-secondary mb-3">Inpatient Coverage Plan</h4>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="form-label">Name of Admitting Physician/Practice/Clinic/Group</label>
			<input type="text" class="form-control" name="">
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<label class="form-label">
				Facility Location*
			</label>
			<select class="form-select" name="state_abbr">
	                     	<option value="">Select option</option>
	                     	<% @states.each do |state|%>
	                     		<option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	                     	<% end %>
	           </select>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="form-label">Facility Name*</label>
			<input type="text" class="form-control" name="">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="form-label">Address Line 1*</label>
			<input type="text" class="form-control" name="">
		</div>
		<div class="col-lg-6">
			<label class="form-label">Address Line 2</label>
			<input type="text" class="form-control" name="">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="form-label">City</label>
			<input type="text" class="form-control" name="">
		</div>
		<div class="col-lg-6">
			<label class="form-label">Zip Code*</label>
			<input type="text" class="form-control" name="">
		</div>
	</div>
	<div class="row mb-3">
		<label class="form-label">Please explain your admitting arrangements.</label>
		<textarea class="form-control" rows="8" placeholder="2500 max characters"></textarea>
	</div>

<div class="row">
	<div class="col-lg-12 mb-3 d-flex justify-content-end">
		  	<button class="btn btn-primary">Save This Record</button>
	</div>
</div>
	
</div>
<div class="bg-light bg-gradient p-3">
	<h4 class="fw-semibold text-secondary mb-3">Inpatient Coverage Plan</h4>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="text-dark-grey">Name of Admitting Physician/Practice/Clinic/Group</label>
			<input type="text" class="form-control border-dark" name="admitting-physician-practice-clinic-group" placeholder="Name of Admitting Physician/Practice/Clinic/Group">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="text-dark-grey">Facility Location <span class="text-danger"> *</span></label>
			<%= HtmlUtils::dropdown name: 'admit_state' %>
		</div>	
	</div>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="text-dark-grey">Facility Name<span class="text-danger">*</span></label>
			<input type="text" class="form-control border-dark" name="facility-name" placeholder="Facility Name">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">Address Line 1<span class="text-danger">*</span></label>
			<input type="text" class="form-control border-dark" name="facility-address-line1" placeholder="Address Line 1">
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Address Line 2</label>
			<input type="text" class="form-control border-dark" name="facility-address-line2" placeholder="Address Line 2">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">City</label>
			<input type="text" class="form-control border-dark" name="facility-city" placeholder="City">
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Zip Code <span class="text-danger">*</span></label>
			<input type="text" class="form-control border-dark" name="facility-zipcode" placeholder="Zip Code">
		</div>
	</div>
	<div class="row mb-3">
		<label class="text-dark-grey">Please explain your admitting arrangements.</label>
		<textarea class="form-control border-dark" rows="8" placeholder="2500 max characters" name="admitting-arrangements"></textarea>
	</div>


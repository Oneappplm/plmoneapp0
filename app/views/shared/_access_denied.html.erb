<div class="content p-0 container-fluid">
	<div class="row mb-3">
		<div class="col-lg-12 mx-auto">
      <div class="row  g-0">
        <div class="col-lg-12">
            <%= image_tag('/backgrounds/1587426_221510-P17J4E-408.svg', style: "height:50rem", class: 'w-100')%>
        </div>
        <div class="col-lg-12" style="margin-top:-120px">
          <h1 class="font-bold text-center" style="color: #1183FF;font-size: 40px;font-weight: 700;">Access Denied</h1>
          <p class="font-bold text-black text-center m-auto mb-3" style="font-size: 18px;font-weight: 600;max-width:400px">Something went wrong. The Page you are
            trying to access has restricted access.</p>
          
          <div class="d-flex gap-2" >
          <a href="mailto:support@plmhealth.net?subject=Request Access&body=Requesting access to <%= controller_name.titleize %>"
            style="height:65px;width:262px;" class="col-lg-12 text-white px-3 py-2 mx-auto text-center justify-content-center align-items-center rounded btn btn-lg btn-primary">
            <span style="font-weight: 600;font-size: 14px;line-height: 21px;letter-spacing: 1px;">Request Access</span>
          </a>
          <% if current_user %>
              <%= button_to 'Logout',
                destroy_user_session_path,
                method: :delete,
                class: 'btn-danger'
                %>
          <% end %>
          </div>
        </div>
      </div>

		</div>
	</div>
</div>
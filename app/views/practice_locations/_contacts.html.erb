<div class="form-row row">
	<div class="col-xl-6">
		<label for="">First Name</label>
		<%= f.text_field :contact_first_name, class: 'form-control', placeholder: 'Type here...', required: true, pattern: "[A-Za-z ]+", title: 'only allows letters and spaces', autocomplete: 'off' %>
	</div>
	<div class="col-xl-6">
		<label for="">Middle Name</label>
		<%= f.text_field :contact_middle_name, class: 'form-control', placeholder: 'Type here...', required: true, pattern: "[A-Za-z ]+", title: 'only allows letters and spaces', autocomplete: 'off' %>
	</div>
</div>
<div class="form-row row">
	<div class="col-xl-6">
		<label for="">Last Name</label>
		<%= f.text_field :contact_last_name, class: 'form-control', placeholder: 'Type here...', required: true, pattern: "[A-Za-z ]+", title: 'only allows letters and spaces', autocomplete: 'off' %>
	</div>
	<div class="col-xl-6">
		<label for="">Suffix</label>
		<%= f.select :contact_suffix, options_for_select(['Jr.', 'Sr.', 'II', 'III', 'IV', 'V'], f.object.contact_suffix), { prompt: 'Select Option' }, { class: 'form-select', required: true } %>
		<%#= f.text_field :contact_suffix, class: 'form-control', placeholder: 'Type here...', required: true %>
	</div>
</div>
<div class="form-row row">
	<div class="col-xl-6">
		<label for="">Title</label>
		<%= f.text_field :contact_title, class: 'form-control', placeholder: 'Type here...', required: true, pattern: "[A-Za-z ]+", title: 'only allows letters and spaces', autocomplete: 'off' %>
	</div>
</div>
<div class="form-row row">
	<div class="col-xl-6">
		<label for="">Phone Number</label>
		<%= f.text_field :contact_phone_number, class: 'form-control', placeholder: 'Type here...', required: true, pattern: '^\+?\d{10,15}$', maxlength: 15, title: "Enter a valid phone number (10-15 digits, optional '+')", autocomplete: 'off' %>
	</div>
	<div class="col-xl-6">
		<label for="">Ext</label>
		<%= f.text_field :contact_ext, class: 'form-control', placeholder: 'Type here...', required: true, pattern: '^\+?\d{6,10}$', maxlength: 10, title: "Enter a valid phone number (06-10 digits)", autocomplete: 'off' %>
	</div>
</div>
<div class="form-row row">
	<div class="col-xl-6">
		<label for="">Fax Number</label>
		<%= f.text_field :contact_fax_number, class: 'form-control', placeholder: 'Type here...', required: true, pattern: '^\+?\d{10,15}$', maxlength: 15, title: "Enter a valid phone number (10-15 digits, optional '+')", autocomplete: 'off' %>
	</div>
	<div class="col-xl-6">
		<label for="">Email</label>
		<%= f.text_field :contact_email, class: 'form-control', placeholder: 'Type here...', required: true, pattern: '\A[^@\s]+@[^@\s]+\z'  %>
	</div>
</div>
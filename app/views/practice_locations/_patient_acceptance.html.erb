<div class="form-row row">
	<div class="col-xl-6">
					<label for="">Please select your open practice status</label>
					<%= f.select :pa_practice_status, options_for_select([]), { prompt: 'Select option' }, {:class => 'form-select'}  %>
	</div>
</div>
<div class="form-row row">
	<div class="col-xl-12">
					<label for="">If patient acceptance varies by health plan, please explain</label>
					<%= f.text_area :pa_by_health_plan, class: 'form-control', rows: '3' %>
	</div>
</div>
<div class="form-row row">
	<div class="col-xl-12">
		<%= HtmlUtils.radio_options name: 'practice_location[pa_limitations]', label: 'Are there any practice limitations at this location?', to_show: 'limitation-wrp' %>
	</div>
</div>
<div class="form-row row" id="limitation-wrp">
	<div class="col-xl-6">
					<label for="">Gender Limitations</label>
					<%= f.select :pa_gender_limitations, options_for_select([]), { prompt: 'Select option' }, {:class => 'form-select'}  %>
	</div>
	<div class="col-xl-6">
		<label for="">Minimum Age</label>
		<%= f.text_field :pa_minimum_age, class: 'form-control', placeholder: 'Type here...'%>
	</div>
	<div class="col-xl-6">
			<label for="">Maximum Age</label>
			<%= f.text_field :pa_maximum_age, class: 'form-control', placeholder: 'Type here...'%>
	</div>
	<div class="col-xl-6">
		<div class="form-check">
						<%= f.check_box :pa_min_max_not_applicable, class: 'form-check-input' %>
														<label class="form-check-label" for="min-max-age">
															Min/Max Age Not Applicable
														</label>
		</div>
	</div>
	<div class="col-xl-12">
		<label for="">Please list any other limitations</label>
		<%= f.text_area :pa_other_limitations, class: 'form-control', rows: '3' %>
	</div>
</div>

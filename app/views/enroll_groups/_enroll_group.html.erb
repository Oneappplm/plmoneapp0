<tr>
	<td scope="row"><%= enroll_group.id %></td>
	<td scope="row"><%= enroll_group.group&.group_name %></td>
	<td><%= enroll_group.full_name %></td>
	<td><%= enroll_group.status %></td>
	<td scope="row">
			<div class="d-flex gap-2">
				<%= link_to edit_enroll_group_path(enroll_group), class: 'btn btn-xs btn-primary' do %>
					<i class="bi bi-pencil"></i>
				<% end %>
				<%= button_to enroll_group_path(enroll_group), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: 'btn btn-xs btn-danger' do %>
					<i class="bi bi-trash"></i>
				<% end %>
			</div>
	</td>
</tr>
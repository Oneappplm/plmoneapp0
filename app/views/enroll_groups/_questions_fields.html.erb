<div class="question-field mb-1 py-3">
  <div class="row">
    <div class="col-lg-6">
      <label class="text-dark-grey">Security Question</label>
      <%= q.text_field :secret_question, placeholder: 'Type here ', class: 'form-control border-dark' %>
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Answer</label>
      <%= q.text_field :answer, placeholder: 'Type here', class: 'form-control border-dark' %>
    </div>
  </div>
     <div class="d-flex buttons gap-2 mt-2">
    <div class="links">
    <button type="button" class="add_questions py-1 btn btn-primary" > <i class="bi bi-plus"></i></button>
  </div>
     <% if q.object.id %>
      <button type="button" class="btn btn-danger btn-xs py-1 remove-dynamic-fields" data-model="security_question" data-id="<%= q.object.id %>" > <i class="bi bi-trash-fill"></i></button>
    <% else %>
      <button type="button" class="btn btn-danger btn-xs py-1 remove-dynamic-fields" > <i class="bi bi-trash-fill"></i></button>
    <% end %>
  </div>
</div>
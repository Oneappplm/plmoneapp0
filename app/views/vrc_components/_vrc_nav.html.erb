<div class="row mb-3">
		<div class="col-lg-12 d-flex justify-content-end gap-2">
			<a href="<%= virtual_review_committee_path %>" class="btn btn-md <%= (params[:vrc].nil? && !params[:director].present?) && (!params[:selected_date].present?) ? 'btn-primary fw-semibold' : 'btn-secondary bg-alt-grey  text-black' %> border-0">Scheduler</a>
			<a href="<%= virtual_review_committee_path(vrc: 'work-tickler') %>" class="btn btn-md <%= (params[:vrc] == 'work-tickler' || params[:director].present?) || (params[:selected_date].present?) ?  'btn-primary fw-semibold' : 'btn-secondary bg-alt-grey  text-black' %> border-0">Work Tickler</a>
			<a href="<%= virtual_review_committee_path(vrc: 'documents') %>" class="btn btn-md <%= params[:vrc] == 'documents'  ? 'btn-primary fw-semibold' : 'btn-secondary bg-alt-grey  text-black' %> border-0">Documents</a>
			<a href="<%= virtual_review_committee_path(vrc: 'reports') %>" class="btn btn-md <%= params[:vrc] == 'reports'  ? 'btn-primary fw-semibold' : 'btn-secondary bg-alt-grey  text-black' %> border-0">Reports</a>
			<a href="<%= virtual_review_committee_path(vrc: 'minutes') %>" class="btn btn-md <%= params[:vrc] == 'minutes'  ? 'btn-primary fw-semibold' : 'btn-secondary bg-alt-grey  text-black' %> border-0">Minutes</a>
			<a href="<%= virtual_review_committee_path(vrc: 'issue') %>" class="btn btn-md <%= params[:vrc] == 'issue'  ? 'btn-primary fw-semibold' : 'btn-secondary bg-alt-grey  text-black' %> border-0">Issue/Result</a>
		</div>
</div>
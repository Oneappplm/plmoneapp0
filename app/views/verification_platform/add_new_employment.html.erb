
    <div class="enc-content">
        <div class="container">
            <%= render "top_nav_buttons"%>

            <div class="add-license-content mt-4">
                <div class="row">
                    <div class="d-flex align-items-center gap-3">
                        <a href="<%= verification_platform_index_path(page: 'employment')%>" class="link-back">
                            <i class='bx bx-left-arrow-alt'></i>
                        </a>
                        <h4 class="page-heading">Add New Employment</h4>
                    </div>
                    <form action="">
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for="">Practice/Employer Name:</label>
                                <input name=" empoyer-name" type="text" id="empoyer-name" class="form-control"
                                    placeholder="Type here...">
                            </div>
                            <div class="col-xl-6">
                                <label for="title">Title:</label>
                                <select name="title" id="title" class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-xl-3">
                                <label for="">Contact/Supervisor First Name:</label>
                                <input name=" fname" type="text" id="fname" class="form-control"
                                    placeholder="Type here...">
                            </div>
                            <div class="col-xl-3">
                                <label for="">Contact/Supervisor Middle Name:</label>
                                <input name=" mname" type="text" id="mname" class="form-control"
                                    placeholder="Type here...">
                            </div>
                            <div class="col-xl-3">
                                <label for="">Contact/Supervisor Last Name:</label>
                                <input name=" lname" type="text" id="lname" class="form-control"
                                    placeholder="Type here...">
                            </div>
                            <div class="col-xl-3">
                                <label for="suffix">Contact/Supervisor Suffix:</label>
                                <select name="suffix" id="suffix" class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-xl-6">
                                <label for="prac-type">Practitioner Type:</label>
                                <select name="prac-type" id="prac-type" class="form-select">
                                    <option value="">Select option</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row row mt-3  health-card">
                            <div class="col-xl-12">
                                <div class="card other-name-card">
                                    <div class="card-body">
                                        <h6 class="form-heading">Contact Info</h6>
                                        <div class="form-row row">
                                            <div class="col-xl-6">
                                                <label for=" type-practitioner">Address:</label>
                                                <input name=" address" type="text" id=" address"
                                                    class="form-control" placeholder="Type here...">
                                            </div>
                                            <div class="col-xl-6">
                                                <label for="">Department/Mail Stop:</label>
                                                <input name=" mail-stop" type="text" id=" mail-stop"
                                                    class="form-control" placeholder="Type here...">
                                            </div>
                                        </div>
                                        <div class="form-row row">
                                            <div class="col-xl-6">
                                                <label for=" type-practitioner">Additional Address:</label>
                                                <input name=" additional-address" type="text" id=" additional-address"
                                                    class="form-control" placeholder="Type here...">
                                            </div>
                                            <div class="col-xl-6">
                                                <label for="">City:</label>
                                                <input name=" city" type="text" id=" city" class="form-control"
                                                    placeholder="Type here...">
                                            </div>
                                        </div>
                                        <div class="form-row row">
                                            <div class="col-xl-6">
                                                <label for="">County:</label>
                                                <input name=" county" type="text" id=" county" class="form-control"
                                                    placeholder="Type here...">
                                            </div>
                                            <div class="col-xl-6">
                                                <label for=" state">State/Province:</label>
                                                <select name=" state" id=" state" class="form-select">
                                                    <option value="">Select option</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-row row">
                                            <div class="col-xl-6">
                                                <label for=" country">Country:</label>
                                                <select name=" country" id=" country" class="form-select">
                                                    <option value="">Select option</option>
                                                </select>
                                            </div>
                                            <div class="col-xl-6">
                                                <label for="">Zip/Postal Code:</label>
                                                <input name=" zip" type="text" id=" zip" class="form-control"
                                                    placeholder="Type here...">
                                            </div>
                                        </div>
                                        <div class="form-row row">
                                            <div class="col-xl-4">
                                                <label for=" ">Phone Number:</label>
                                                <input name=" phone-number" type="text" id=" phone-number"
                                                    class="form-control" placeholder="Type here...">
                                            </div>
                                            <div class="col-xl-4">
                                                <label for="">Fax Number:</label>
                                                <input name=" fax" type="text" id=" fax" class="form-control"
                                                    placeholder="Type here...">
                                            </div>
                                            <div class="col-xl-4">
                                                <label for=" ">Email Address:</label>
                                                <input name=" email" type="email" id=" email" class="form-control"
                                                    placeholder="Type here...">
                                            </div>
                                        </div>
                                        <div class="form-row row mt-2">
                                          <div class="col-xl-6">
                                            <div class="d-flex align-items-center gap-3">
                                                <label for="" class="">Work Status:</label>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="inter-input"
                                                        id="inter-yes" value="Yes">
                                                    <label class="form-check-label" for="prac-yes">
                                                        Full-Time Employee
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="inter-input"
                                                        id="inter-no" value="No">
                                                    <label class="form-check-label" for="prac-no">
                                                        Part-Time Employee
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="inter-input"
                                                        id="inter-no" value="No">
                                                    <label class="form-check-label" for="prac-no">
                                                        Contractual Employee
                                                    </label>
                                                </div>
                                            </div>
                                          </div>
                                          <div class="col-xl-6">
                                                <label for=" ">Population serviced:</label>
                                                <input name=" populationserviced" type="text" id=" populationserviced" class="form-control"
                                                    placeholder="Type here...">
                                          </div>
                                        </div>
                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for=" from">From:</label>
                                <input name=" from" type="date" id=" from" class="form-control"
                                    placeholder="Type here...">
                            </div>
                            <div class="col-xl-6">
                                <label for="to">To:</label>
                                <input name=" to" type="date" id=" to" class="form-control"
                                    placeholder="Type here...">
                            </div>
                        </div>
                        <div class="form-row row mt-3">
                            <div class="col-xl-6">
                                <label for=" position">Position:</label>
                                <input name=" position" type="text" id=" position" class="form-control"
                                    placeholder="Type here...">
                            </div>
                        </div>
                        <div class="form-row row mt-2">
                            <div class="col-xl-6">
                                <div class="d-flex align-items-center gap-3">
                                    <label for="" class="">Show on Tickler?</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="inter-input"
                                            id="inter-yes" value="Yes">
                                        <label class="form-check-label" for="prac-yes">
                                            Yes
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="inter-input"
                                            id="inter-no" value="No">
                                        <label class="form-check-label" for="prac-no">
                                            No
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-row row mt-2">

                            <div class="col-xl-25">
                                <label for="training-com">Please List any comments</label>
                                <input type="text" name="training-com" id="training-com" placeholder="Type here..."
                                    class="form-control" required>
                            </div>

                        </div>

                        <div class="form-row mt-1 d-flex justify-content-end">
                            <button class="btn btn-training-save btn-primary" type="submit">
                                Save
                            </button>
                        </div>



                    </form>

                </div>
            </div>
        </div>
      </div>

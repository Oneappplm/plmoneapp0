											<div>
												<%= f.label :individual_coverage_flag, "Individual Coverage Flag" %>
												<%= f.check_box :individual_coverage_flag %>
											</div>
											<div>
												<%= f.label :no_malpractice_claims_flag, "No Malpractice Claims Flag" %>
												<%= f.check_box :no_malpractice_claims_flag %>

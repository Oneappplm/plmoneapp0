															<%= f.text_field :time_with_carrier,  placeholder: 'Type here...', class: 'form-control border border-dark' %>
													</div>
                        <div class="col-xl-4">
															<label for="SelfIssued">Fax Number:</label>
															<%= f.text_field :fax_number,  placeholder: 'Type here...', class: 'form-control border border-dark' %>
													</div>
                       <div class="col-xl-4">
													<label for="SelfIssued">Website:</label>
													<%= f.text_field :website, placeholder: 'Type here...', class: 'form-control border border-dark' %>
											</div>
                    </div>
										<div class="form-row row mb-2">
                          <div class="col-xl-4">

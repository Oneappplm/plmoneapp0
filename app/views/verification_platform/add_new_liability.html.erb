																		<label for="SelfIssued">Postal Code:</label>
																		<%= f.text_field :postal_code,  placeholder: 'Type here...', class: 'form-control border border-dark' %>
																</div>
                                <div class="col-xl-4">
																		<label for="SelfIssued">Phone Number:</label>

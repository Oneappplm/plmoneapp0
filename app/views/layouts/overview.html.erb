<script>
  $(document).ready(function() {
    // Function to handle dropdown toggling
    function toggleDropdown(dropdownButton) {
      var dropdownMenu = dropdownButton.next('.dropdown-menu');
      var dropdownOffset = dropdownButton.offset().left;
      var dropdownWidth = dropdownMenu.outerWidth();
      var windowWidth = $(window).width();

      // Adjust dropdown position
      if (dropdownOffset + dropdownWidth > windowWidth) {
        dropdownMenu.addClass('dropdown-menu-left');
      } else {
        dropdownMenu.removeClass('dropdown-menu-left');
      }

      dropdownMenu.toggleClass('show');
    }

    // Account dropdown click event
    $('#accountNavbarDropdown').on('click', function(event) {
      event.preventDefault();
      toggleDropdown($(this));
    });

    // Notifications dropdown click event
    $('#navbarNotificationsDropdown').on('click', function(event) {
      event.preventDefault();
      toggleDropdown($(this));
    });

    // Document click event to close dropdowns
    $(document).on('click', function(event) {
      if (!$(event.target).closest('.navbar-dropdown-account-wrapper').length && !$(event.target).closest('#navbarNotificationsDropdown').length && !$(event.target).closest('.dropdown-menu').length) {
        $('.dropdown-menu').removeClass('show');

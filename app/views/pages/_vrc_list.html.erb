<div class="d-flex justify-content-end me-5">
    <button id="submit-button" class="btn btn-primary me-5">
        Submitted
    </button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const rows = document.querySelectorAll('tr');
    const selectedRowData = [];

    rows.forEach((row, index) => {
        row.addEventListener('click', function () {
            if (row.classList.contains('selected-row')) {
                // If the row is already selected, deselect it
                row.classList.remove('selected-row');
                const dataIndex = selectedRowData.findIndex(selected => selected.index === index);
                if (dataIndex !== -1) {
                    selectedRowData.splice(dataIndex, 1);
                }
            } else {
                // If the row is not selected, select it
                row.classList.add('selected-row');
                const id = row.querySelector('#vrc-link').getAttribute('data-val');
                selectedRowData.push({
                    index: index,
                    id: id
                });
            }
        });
    });

    const submitButton = document.getElementById('submit-button');
    submitButton.addEventListener('click', function () {
        if (selectedRowData.length > 0) {
            console.log('Selected Row Data:', selectedRowData);
            // Now, selectedRowData is an array containing the data of multiple selected rows.
            
            selectedRowData.forEach(selected => {
                rows[selected.index].classList.remove('selected-row');
            });

            // Open the modal
            const modal = new bootstrap.Modal(document.getElementById('exampleModal'));
            modal.show();
        } else {
            // If no rows are selected, show an alert
            const alert = document.getElementById("alert-notification");
            alert.style.display = "block";
        }
    });
});


</script>



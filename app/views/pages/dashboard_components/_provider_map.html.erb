<div class="row mb-3">
   <div class="col-lg-12">
      <div class="card rounded-15 p-2" style="background-color: #eaf4ff;">
         <div class="card-header border-0 pb-0">
            <h5 class="card-title" style="color:#000000;">Providers by State</h5>
         </div>
         <div class="card-body py-0">
            <div id="WidgetMap" class=""
               style="width: 100%; height: 220px;"></div>
         </div>
         <div class="card-footer border-0">
          <% @state_providers.each do |state|%>
            <div class="d-flex justify-content-between">
              <div class="d-flex align-items-center justify-content-center"><span class="circle d-block" style="background-color: <%= state.color%>; width: 10px;height: 10px;"></span><h5 class="text-black fw-semibold m-0 ms-1"><%= state.name %></h5></div>
              <h5 class="text-black fw-semibold m-0"><%= state.providers_count %></h5>
            </div>
          <% end %>
         </div>
      </div>
   </div>
</div>

<div class="content container-fluid">
	<%= render "enrollment_tracking_components/enrollment_nav"%>
	<div class="row mb-3">
		<div class="col-lg-6">
			<form class="form_search_with_icon">
			<div class="">
				<input type="" name="user_search" class="form-control">
				<i class="bi bi-search"></i>
			</div>
			</form>
		</div>
		<div class="col-lg-6 d-flex justify-content-end">
			<a href="<%= new_enrollment_path %>" class="d-flex btn btn-primary btn-md">
				<i class="bi bi-plus-lg"></i>
				<span class="mx-1">Add New Enrollment</span>
			</a>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-12 mt-2">
		 		<div class="d-flex justify-content-between align-items-center">
		 			<div><strong>Search Results: 20</strong></div>
		 			<div class="d-flex gap-4 align-items-center">
		 				<div>
		 					<label>Show limit</label>
		 					<% per_page_limits = [5,10,15,20,25,30,35,40,45,50]%>
		 					<select name="per_page" class="border ms-2 px-1 <%= dark_mode %>" onchange="document.getElementById('per_page_selector').submit();">
		 						<% per_page_limits.each do |per_page| %>
		 							<% if per_page == @per_page.to_i%>
		 								<option selected><%= per_page %></option>
		 							<% else %>
		 								<option><%= per_page %></option>
		 							<% end %>
		 						<% end %>
		 					</select>
		 				</div>
		 				<div>

		 					<label>Page 2</label>
		 					<span class="border px-3">3</span>
		 				</div>
		 				<div>
		 				</div>
		 			</div>
		 		</div>
		 	</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<table class="table">
			  <thead>
			    <tr>
			      <th scope="col" class="bg-primary text-white">ID Number</th>
			      <th scope="col" class="bg-primary text-white">Provider Name</th>
			      <th scope="col" class="bg-primary text-white">NPI</th>
			      <th scope="col" class="bg-primary text-white">Start Date</th>
			      <th scope="col" class="bg-primary text-white">Due Date</th>
			      <th scope="col" class="bg-primary text-white"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td scope="row">12313</td>
			      <td scope="row">Amber Nicole Hayles</td>
			      <td>12355661</td>
			      <td>10/22/2023</td>
			      <td>10/13/2027</td>
			      <td scope="row">
			      	<a href="javascript:void(0);" class="text-primary"><i class="bi bi-pencil"></i></a>
			      	<a href="javascript:void(0);" class="text-danger"><i class="bi bi-trash"></i></a>
			      </td>
			    </tr>
			  </tbody>
			</table>
		</div>
	</div>
</div>
<div class="col-lg-12 mb-3">
  <div class="d-flex align-items-center my-3">
    <%= HtmlUtils.radio_toggle name: 'ada_accessibility',
        label: 'Does the location meet ADA accessibility requirements?  <span style="color: red;">*</span>',
        toshow: 'ada_accessibility_fields',
        hidden_field: true
      %>
  </div>
</div>

<div class="col-lg-12 mb-3">
  <div class="d-flex align-items-center my-3">
    <%= HtmlUtils.radio_toggle name: 'services_disabled',
        label: 'Does the location offer other services for the disabled?  <span style="color: red;">*</span>',
        toshow: 'services_disabled_fields',
        hidden_field: true
      %>
  </div>
</div>

<div class="col-lg-12 mb-3">
  <div class="d-flex align-items-center my-3">
    <%= HtmlUtils.radio_toggle name: 'public_transport',
        label: 'Is this location accessible by public transportation?  <span style="color: red;">*</span>',
        toshow: 'public_transport_fields',
        hidden_field: true
      %>
  </div>
</div>

<div class="col-lg-12 mb-3">
  <div class="d-flex align-items-center my-3">
    <%= HtmlUtils.radio_toggle name: 'gender_treatment',
        label: 'Are gender-affirming treatment services offered?  <span style="color: red;">*</span>',
        toshow: 'gender_treatment_fields',
        hidden_field: true
      %>
  </div>
</div>
<div class="row mb-3">
   <div class="col-lg-12 d-flex justify-content-end">
      <%= link_to "Save & Next", provider_engage_path(component: 'services', page: 'practice_location'), class: "btn btn-primary btn-md" %>
   </div>
</div>
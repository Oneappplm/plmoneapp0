<form>
<div class="row my-3">
   <div class="col-lg-12 mb-3">
      <label class="text-dark-grey">Please select your open practice status</label>
      <div class="d-flex gap-2">
         <input type="text" name="" class="form-control" id="practice_status">
         <a href="javascript:void(0);" class="btn btn-md btn-primary add-text-readonly" style="width: 200px;" id="add_practice_status" data-takefrom="practice_status" data-putin="readonly_practice_status">Add</a>
      </div>
   </div>
   <div class="col-lg-12 mb-3">
      <div class="d-flex gap-2">
         <input type="text" name="practice_status" id="readonly_practice_status" class="form-control" readonly>
         <a href="javascript:void(0);" class="btn btn-md btn-danger remove-text-from-readonly" style="width: 200px;" id="remove_last_practice_status" data-removefrom="readonly_practice_status">Remove</a>
      </div>
   </div>
</div>
<div class="row mb-3">
   <label class="text-dark-grey">If patient acceptance varies by health plan, please explain</label>
   <textarea class="form-control" rows="8" name="practice_patient_acceptance_varies">
   </textarea>
</div>
<div class="row mb-3">
   <div class="col-lg-12 mb-3">
      <div class="d-flex align-items-center my-3">
        <%= HtmlUtils.radio_toggle name: 'practice_limitations_field',
            label: 'Are there any practice limitations at this location? *',
            toshow: 'practice_limitations_fields',
            hidden_field: true
          %>
      </div>
   </div>
</div>

<div class="mb-3 <%=toggle_hide('practice_limitations_field') %>"  id="practice_limitations_fields">
<div class="row mb-3">
   <div class="col-lg-6">
      <label class="text-dark-grey">
         Gender Limitations
         <select class="form-select border-dark" name="practice_gender_limitation">
            <option value="female_only">Female Only</option>
            <option value="male_only">Male Only</option>
            <option value="n/a">Not Applicable</option>
         </select>
      </label>
   </div>
</div>
<div class="row mb-3">
   <div class="col-lg-12">
      <label class="text-dark-grey">
      <input type="checkbox" name="practice_patient_age_not_applicable" id="age_not_applicable">
      <strong>Min/Max Age Not Applicable</strong>
      </label>
   </div>
</div>
<div class="row mb-3">
   <div class="col-lg-6">
      <label class="text-dark-grey">Minimum Age</label>
      <input type="text" name="practice_patient_min_age" class="form-control age-restrict">
   </div>
   <div class="col-lg-6">
      <label class="text-dark-grey">Maximum Age</label>
      <input type="text" name="practice_patient_max_age" class="form-control age-restrict">
   </div>
</div>
<div class="row mb-3">
   <div class="col-lg-12">
      <label class="text-dark-grey">Please list any other limitations</label>
      <textarea name="practice_patient_other_limits" class="form-control" rows="8"></textarea>
   </div>
</div>
</div>

<div class="row mb-3">
   <div class="col-lg-12 d-flex justify-content-end">
      <button class="btn btn-primary btn-md">Save & Next</button>
   </div>
</div>
</form>
<script>
   $('#age_not_applicable').on('change',function(){
    console.log($(this).prop('checked'));
    if($(this).prop('checked'))
    {
      $('.age-restrict').prop('disabled', true);
      $('.age-restrict').val('');
    }
    else
      $('.age-restrict').removeAttr('disabled');

   });
</script>
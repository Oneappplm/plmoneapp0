    <label><input type="checkbox" name="service_" value="Supports Coordination"> Supports Coordination</label>
    <label><input type="checkbox" name="service_" value="Telemedicine"> Telemedicine</label>
    <label><input type="checkbox" name="service_" value="Transportation"> Transportation</label>
    <label><input type="checkbox" name="service_" value="Wraparound Services"> Wraparound Services</label>
  </div>

  <!-- Anesthesia Question -->
  <div>
    <p>Is anesthesia administered at this location?</p>
    <label><input type="radio" name="practice_yes" value="yes"> Yes</label>
    <label><input type="radio" name="practice_no" value="no"> No</label>
  </div>

<div class="row mb-3">
   <div class="col-lg-12 mb-3">
      <%= HtmlUtils.radio_toggle name: 'practice_administered_anesthesia',
         label: 'Is anesthesia administered at this location?',
         hidden_field: true,
         toshow: 'anesthesia_fields'
      %>
   </div>
</div>

<div class="row mb-3 <%= toggle_hide('practice_administered_anesthesia') %>" id="anesthesia_fields">
   <div class="col-lg-12 mb-3">
      <label class="text-dark-grey">Class/Category</label>
      <div class="d-flex gap-2">
         <input type="text" name="" class="form-control" id="practice_anesthesia_class">
         <a href="javascript:void(0);" class="btn btn-md btn-primary add-text-readonly" style="width: 200px;" id="add_foreign_language_interprets" data-takefrom="practice_anesthesia_class" data-putin="add_practice_anesthesia_class">Add</a>
      </div>
   </div>
   <div class="col-lg-12 mb-3">
      <div class="d-flex gap-2">
         <input type="text" name="practice_staff_foreign_laguages" id="add_practice_anesthesia_class" class="form-control" readonly>
         <a href="javascript:void(0);" class="btn btn-md btn-danger remove-text-from-readonly" style="width: 200px;" id="remove_last_foreign_language_interprets" data-removefrom="add_practice_anesthesia_class">Remove</a>
      </div>
   </div>
   <div class="col-lg-6 mb-3">
    <label class="text-dark-grey">First Name* </label>
    <input type="text" name="practice_staff_first_name" class="form-control">
   </div>
   <div class="col-lg-6 mb-3">
    <label class="text-dark-grey">Middle Name</label>
    <input type="text" name="practice_staff_middle_name" class="form-control">
   </div>
   <div class="col-lg-6 mb-3">
    <label class="text-dark-grey">Last Name* </label>
    <input type="text" name="practice_staff_last_name" class="form-control">
   </div>
   <div class="col-lg-6 mb-3">
    <label class="text-dark-grey">Degree* </label>
    <input type="text" name="practice_staff_degree" class="form-control">
   </div>
</div>

<div class="row mb-3">
  <div class="col-lg-12">
    <label class="text-dark-grey">Please list any additional procedures provided at this location (including surgical procedures)</label>
    <textarea class="form-control" name="practice_additional_procedures">

    </textarea>
  </div>
</div>

<div class="row mb-3">
    <div class="col-lg-12 d-flex justify-content-end">
      <%= link_to "Save & Next", provider_engage_path(component: 'midlevel_practitioners', page: 'practice_location'), class: "btn btn-primary btn-md" %>
    </div>
</div>
</form>
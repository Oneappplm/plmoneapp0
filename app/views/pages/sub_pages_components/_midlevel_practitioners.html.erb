<form>
<div class="row my-3">
   <div class="col-lg-12">
      <div class="d-flex align-items-center">
         <span class="ms-2">Do mid-level practitioners (nurse practitioners, nurse midwives, physician assistants, registered nurse first assistant, etc.) care for patients at this location? *</span>
      </div>
   </div>
   <div class="col-lg-12 mt-2">
     <div class="d-flex gap-2">
           <label>
             <input type="radio" value="yes" name="practice_midlevel_practitioners_cares" required class="radio-toshow" data-toshow="midlevel_practitioner_fields">
             Yes
           </label>
           <label>
             <input type="radio" value="no" name="practice_midlevel_practitioners_cares" required class="radio-toshow" data-toshow="midlevel_practitioner_fields">
             No
           </label>
           <label>
             <input type="radio" value="n/a" name="practice_midlevel_practitioners_cares" required class="radio-toshow" data-toshow="midlevel_practitioner_fields">
             N/A
           </label>
        </div>
   </div>
</div>
<div id="midlevel_practitioner_fields" class="d-none">
<div class="row my-3 ">
   <div class="col-lg-4">
    <label>First Name *</label>
      <input type="text" name="practice_midlevel_first_name" required class="form-control">
    </div>
   <div class="col-lg-2">
    <label>Middle Name</label>
      <input type="text" name="practice_midlevel_middle_name" class="form-control">
    </div>
   <div class="col-lg-6">
    <label>Last Name *</label>
      <input type="text" name="practice_midlevel_last_name" required class="form-control">
    </div>
</div>

<div class="row mb-3">
   <div class="col-lg-12">
    <label>Mid-Level Practitioner Degree *</label>
      <input type="text" name="practice_midlevel_degree" required class="form-control">
    </div>
</div>

<div class="row mb-3">
   <div class="col-lg-6">
    <label>Primary License State</label>
        <select required class="form-select" name="practice_midlevel_state">
          <option value="">State *</option>
          <% @states.each do |state| %>
            <option value="<%= state.name %>"><%= state.name %></option>
          <% end %>
        </select>
    </div>
   <div class="col-lg-6">
    <label>Primary License Number</label>
      <input type="text" name="practice_midlevel_degree" class="form-control">
    </div>
</div>
</div>
<div class="row mb-3">
   <div class="col-lg-12 d-flex justify-content-end">
      <button class="btn btn-primary btn-md">Save & Next</button>
   </div>
</div>

</form>
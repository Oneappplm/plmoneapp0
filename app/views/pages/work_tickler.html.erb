
<div class="content container-fluid">
    <%= render "vrc_components/vrc_nav" %>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-container" id="cardContainer">
                    <i class="fa-solid fa-arrow-up" id="toggleButton" style="position: absolute; right: 15px; top: 7px; color: black; transition: 0.5s ease; font-size: 16px; padding-inline: 8px;"></i>
                    <div class="card-body bg-light p-5">
                        <%= form_with url: '/virtual-review-committee/records', method: 'get' do |form| %>
	                        <div class="row">
	                            <div class="col-lg-6">
	                                <div class="form-group mb-3">
	                                    <label for="">Review Level</label>
	                                    <%= form.text_field :review_level, class:"form-control"%>
	                                </div>
	                                <div class="form-group mb-3">
	                                    <label for="">Provider Type</label>
	                                    <%= form.text_field :provider_type, class:"form-control"%>
	                                </div>
	                                <div class="form-group mb-3">
	                                    <label for="">Cred Cycle Type</label>
	                                    <%= form.text_field :cred_cycle, class:"form-control"%>
	                                </div>
	                            </div>
	                            <div class="col-lg-6">
	                                <div class="row mb-3">
	                                    <label for="">Committee Date</label>
	                                    <div class="col-lg-6">
	                                        <%= form.date_field :from_committee_date, class:"form-control"%>
	                                    </div>
	                                    <div class="col-lg-6">
	                                        <%= form.date_field :to_committee_date, class:"form-control"%>
	                                    </div>
	                                </div>
	                                <div class="form-group mb-3">
	                                    <label for="">Category</label>
	                                    <input type="text" class="form-control">
	                                </div>

	                                <div class="row mb-3">
	                                    <div class="col-lg-6">
	                                        <label for="">First Name</label>
	                                        <%= form.text_field :first_name, class:"form-control"%>
	                                    </div>
	                                    <div class="col-lg-6">
	                                        <label for="">Last Name</label>
	                                        <%= form.text_field :last_name, class:"form-control"%>
	                                    </div>
	                                </div>
	                            </div>
	                            <div class="col-lg-12 text-center">
	                                <%= form.submit "Submit", class:"btn btn-primary btn-block btn-sm mt-3", style:"width: 40%;"%>
	                                 <br>
	                                 <%= link_to 'Reset', virtual_review_committee_path(vrc: 'work-tickler'), class: "btn btn-danger btn-block btn-sm mt-2", style: "width: 40%; background-color: red " %>
	                                <%# <button  type="button" class="btn btn-danger btn-block btn-sm mt-2" style="width: 40%; background-color: red">Reset</button> %>
	                            </div>
	                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
        </div>
    </div>
    <div class="row mt-3">
        <%= render 'vrc_list_work_tickler' %>
    </div>
</div>


<div class="content container-fluid ps-0">
	<%= render "provider_source_components/top_buttons"%>
	<div  class="row">
		<div class="col-lg-3">
			<%= render "provider_source_components/sub_navbar"%>
		</div>
		<div class="col-lg-9">
			<form>
			<div class="row border border-4 p-3">
				<div class="col-lg-12">
					<%= render partial: "provider_source_components/header_title", locals: {title: "Professional IDs", icon: 'bi-person-badge-fill'}%>
					<%#= render partial: "provider_source_components/progress_bar", locals: {percent: (@provider.professional_ids_progress)}%>
               <% steps = [['Registration IDs','finished', custom_provider_source_path(page: 'professional_ids'), 'registration_ids_progress'],
                     ['Licensure','active', custom_provider_source_path(page: 'licensure'), 'licensure_progress'],
                     ['Other IDs and Cerfifications','inactive', custom_provider_source_path(page: 'other_ids'), 'other_ids_certifications_progress'],
            ]%>

        <%= render partial: "provider_source_components/progress_bar", locals: { steps: steps }%>
            <%= render partial: "provider_source_components/form_wizard", locals: {steps: steps}%>
				</div>
				<div class="col-lg-12 card py-3 my-3">
					<h4 class="fw-semibold text-secondary">Licensure</h4>
					 	<div class="row mb-3">
   							<div class="col-lg-12">
								<div class="d-flex justify-content-between">
										<label class="text-dark-grey">Do/Did you have a state license to practice in your specialty? <span class="text-danger"> *</label>
									<div class="d-flex me-4 gap-2">
										<div class="gap-2">
											<input type="radio" name="state_license_specialty" class="radio-with-form" data-form='licensure_form' value="yes" checked='checked'>
											<span>YES</span>
										</div>	
										<div class="gap-2">
											<input type="radio" name="state_license_specialty" class="radio-with-form" data-form='licensure_form' value="no" >
											<span>NO</span>
										</div>
									</div>
								</div>	
						    </div>	
						</div>	
							<div class="<%= toggle_hide_current_provider_source('state_license_specialty', @provider) %>" id="licensure_form">
								<%= render partial: 'provider_source_components/licensure_form'%>
								<div class="d-flex gap-3 mt-3">
							    <%= link_to "Add New Licensure", new_provider_sources_licensure_path, class: "btn btn-primary" %>
							  	<%= link_to "Show More Licensure", provider_sources_licensures_path, class: "btn btn-secondary" %>
							  </div>
							</div>


						<!--	<%= HtmlUtils.radio_toggle name: 'state_license_specialty',
								label: 'Do/Did you have a state license to practice in your specialty? <span class="text-danger"> *</span>',
								toshow: 'licensure_form',
								hidden_field: true
							%>
					</div>
					<div class="<%= toggle_hide('state_license_specialty')%>" id="licensure_form">
					<%= render partial: "provider_source_components/licensure_form"%> -->

				</div>
			</form>
		</div>
	</div>
</div>


<div class="content container-fluid ps-0">
	<%= render "provider_source_components/top_buttons"%>
	<div  class="row">
		<div class="col-lg-3">
			<%= render "provider_source_components/sub_navbar"%>
		</div>
		<div class="col-lg-9">
			<form>
			<div class="row border border-4 p-3">
				<div class="col-lg-12">
					<%= render partial: "provider_source_components/header_title", locals: {title: "Professional IDs", icon: 'bi-person-badge-fill'}%>
					<%= render partial: "provider_source_components/progress_bar", locals: {percent: 10}%>
               <% steps = [['Registration IDs','finished', custom_provider_source_path(page: 'professional_ids')],
                     ['Licensure','active', custom_provider_source_path(page: 'licensure')],
                     ['Other IDs and Cerfifications','inactive', custom_provider_source_path(page: 'other_ids')],
            ]%>
            <%= render partial: "provider_source_components/form_wizard", locals: {steps: steps}%>
				</div>
				<div class="col-lg-12 card py-3 my-3">
					<h4 class="fw-semibold text-secondary">Licensure</h4>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle has-to-show" data-toshow="licensure_form" data-toggle="button" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Do/Did you have a state license to practice in your specialty? *</label>
					</div>
					<div id="licensure_form" class="d-none">
					<%= render partial: "provider_source_components/licensure_form"%>
				</div>
				</div>

				<div class="col-lg-12 mb-3 d-flex justify-content-end px-0">
		        <button class="btn btn-primary">Save Changes</button>
		    </div>
			</div>
			</form>
		</div>
	</div>
</div>


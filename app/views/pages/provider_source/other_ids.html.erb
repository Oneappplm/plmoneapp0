		($(this).val() == 'yes') ?	$('#medicaid_fields').removeClass('d-none') : $('#medicaid_fields').addClass('d-none');
})

$('.caqh-radio').on('change',function(){
		// console.log($(this).val());
		($(this).val() == 'yes') ?	$('#caqh_fields').removeClass('d-none') : $('#caqh_fields').addClass('d-none');
})

$('.other-cert-radio').on('change',function(){

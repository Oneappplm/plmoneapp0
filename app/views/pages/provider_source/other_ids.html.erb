<div class="content container-fluid ps-0">
	<%= render "provider_source_components/top_buttons"%>
	<div  class="row">
		<div class="col-lg-3">
			<%= render "provider_source_components/sub_navbar"%>
		</div>
		<div class="col-lg-9">
			<div class="row border border-4 p-3">
				<div class="col-lg-12">
					<%= render partial: "provider_source_components/header_title", locals: {title: "Professional IDs", icon: 'bi-person-badge-fill'}%>
					<%= render partial: "provider_source_components/progress_bar", locals: {percent: 10}%>
               <% steps = [['Registration IDs','finished', custom_provider_source_path(page: 'professional_ids')],
                     ['Licensure','finished', custom_provider_source_path(page: 'licensure')],
                     ['Other IDs and Cerfifications','active', custom_provider_source_path(page: 'other_ids')],
            ]%>
            <%= render partial: "provider_source_components/form_wizard", locals: {steps: steps}%>
				</div>
				<div class="col-lg-12 card py-3 my-3">
					<h4 class="fw-semibold text-secondary">Medicare</h4>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle to-change-value" data-tochange="has_opted_medicate" data-toggle="button" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Have you ever voluntarily opted for Medicare?</label>
				    	<input type="text" name="has_opted_medicate" value="no" class="invisible-input">

					</div>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle to-change-value has-to-show" data-tochange="participating_medicare" data-toshow="medicare_fields_test" data-toggle="button" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Are you a participating Medicare provider?</label>
				    	<input type="text" name="participating_medicare" value="no" class="invisible-input">

					</div>
					<div class="row d-none" id="medicare_fields_test">
						<div class="col-lg-6">
							<label>Medicare Number *</label>
							<input type="text" name="participating_medicare_number" required class="form-control">
						</div>
						<div class="col-lg-6">
							<label>Medicare State *</label>
							<select class="form-select" name="participating_medicare_state" required>

								<option>Medicare State *</option>
								<% @states.each do |state|%>
								<option value="<%= state.name %>"><%= state.name %></option>
								<% end %>
							</select>
						</div>
					</div>
				</div>
				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary">Medicaid</h4>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle to-change-value has-to-show" data-tochange="participating_medicaid" data-toshow="medicaid_fields" data-toggle="button" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Are you a participating Medicaid provider?</label>
				    	<input type="text" name="participating_medicaid" value="no" class="invisible-input">

					</div>
					<div class="row d-none" id="medicaid_fields">
						<div class="col-lg-6">
							<label>Medicaid State *</label>
							<select class="form-select" name="participating_medicaid_state" required>

								<option>Medicaid State *</option>
								<% @states.each do |state|%>
								<option value="<%= state.name %>"><%= state.name %></option>
								<% end %>
							</select>
						</div>
						<div class="col-lg-6">
							<label>Medicaid Number *</label>
							<input type="text" name="participating_medicaid_number" required class="form-control">
							<label>
								<input type="checkbox" name="participating_medicaid_no_number">
								<strong>I don't have a number</strong>
							</label>
						</div>
					</div>
				</div>
				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary mb-3">Other IDs</h4>
					<div class="alert alert-info alert-light-blue">
						<i class="bi bi-info-circle" style="font-size: 20px;"></i>
						<br>
						<small>Identification number assigned by TRICARE, a government agency designated to provider healthcare for military personel</small>
						<small>Identification number assigned by United States Medical Licensing Examination (Do not enter hyphen)</small>
						<small>Identification number assigned by United States Department of Labor</small>
					</div>
					<div class="row mb-2">
						<div class="col-lg-6">
							<div class="form-group">
								<input type="text" name="" placeholder="TRICARE Provider Number" class="form-control">
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<input type="text" name="" placeholder="USMLE Number" class="form-control">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<input type="text" name="" placeholder="Workers Compensation Number" class="form-control">
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary">Other Certifications</h4>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle to-change-value has-to-show" data-tochange="has_other_certifications" data-toshow="other_cert_fields" data-toggle="button" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Do you hold any other non-specialty related certifications? (e.g., ACLS, BLS, ATLS, CPR, PALS, NALS, Fluoroscopy, Radiography, etc.)</label>
					</div>
				    	<input type="text" name="has_other_certifications" value="no" class="invisible-input">

					<div class="row d-none" id="other_cert_fields">
						<div class="col-lg-12 mb-3">
							<label>Certification Type *</label>
							<input type="text" class="form-control" name="other_certification_type" required>
						</div>
						<div class="col-lg-6 mb-3">
							<label>State</label>
							<select class="form-select" name="other_certification_state" required>
								<option>State</option>
								<% @states.each do |state|%>
								<option value="<%= state.name %>"><%= state.name %></option>
								<% end %>
							</select>
						</div>
						<div class="col-lg-6 mb-3">
							<label>Certification Number</label>
							<input type="text" class="form-control" name="other_certification_number">
						</div>

						<div class="col-lg-6 mb-3">
							<label>Issue Date</label>
							<input type="text" name="other_certification_issue_date" required class="form-control" placeholder="MM/DD/YYYY" onfocus="(this.type = 'date')">
						</div>
						<div class="col-lg-6 mb-3">
							<label>Expiration Date *</label>
							<input type="text" name="other_certification_expiration_date" required class="form-control" placeholder="MM/DD/YYYY" onfocus="(this.type = 'date')">
							<label>
								<input type="checkbox" name="other_certification_not_expire">
								<strong>Does not expire</strong>
							</label>
						</div>
					</div>
				</div>


				<div class="col-lg-12 mb-3 d-flex justify-content-end px-0">
		        <button class="btn btn-primary">Save Changes</button>
		    </div>
			</div>
		</div>
	</div>
</div>


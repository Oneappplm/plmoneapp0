<div class="content container-fluid ps-0">
	<%= render "provider_source_components/top_buttons"%>
	<div  class="row">
		<div class="col-lg-3">
			<%= render "provider_source_components/sub_navbar"%>
		</div>
		<div class="col-lg-9">
			<form>
			<div class="row border border-4 p-3">
				<div class="col-lg-12">
					<%= render partial: "provider_source_components/header_title", locals: {title: "Professional IDs", icon: 'bi-person-badge-fill'}%>
					<%= render partial: "provider_source_components/progress_bar", locals: {percent: 10}%>
               <% steps = [['Registration IDs','active', custom_provider_source_path(page: 'professional_ids')],
                     ['Licensure','inactive', custom_provider_source_path(page: 'licensure')],
                     ['Other IDs and Cerfifications','inactive', custom_provider_source_path(page: 'other_ids')],
            ]%>
            <%= render partial: "provider_source_components/form_wizard", locals: {steps: steps}%>
				</div>
				<div class="col-lg-12 card py-3 my-3">
					<h4 class="fw-semibold text-secondary">NPI ID</h4>
					<div class="form-group">
						<label>NPI Number</label>
						<input type="text" name="npi_number" class="form-control">
					</div>
				</div>
				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary">DEA</h4>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle has-to-show has-to-hide" data-toggle="button" data-toshow="dea_form"  data-tohide="dea_tarea" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Do/Did you have a DEA Registration Number *</label>
					</div>
					<div id="dea_form" class="d-none">
						<%= render partial: 'provider_source_components/dea_form'%>
					</div>
					<div id="dea_tarea">
						<textarea name="dea_no" class="form-control" rows="8"></textarea>
					</div>
				</div>
				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary mb-3">CDS</h4>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle has-to-show has-to-hide" data-toggle="button" data-toshow="cds_form"  data-tohide="cds_tarea" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Do/Did you have a CDS Registration Number? *</label>
					</div>
				</div>
				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary mb-3">Other IDs</h4>
					<div class="alert alert-info alert-light-blue">
						<i class="bi bi-info-circle" style="font-size: 20px;"></i>
						<br>
						<small>Identification number assigned by TRICARE, a government agency designated to provider healthcare for military personel</small>
						<small>Identification number assigned by United States Medical Licensing Examination (Do not enter hyphen)</small>
						<small>Identification number assigned by United States Department of Labor</small>
					</div>
					<div class="row mb-2">
						<div class="col-lg-6">
							<div class="form-group">
								<input type="text" name="tricare-provider-number" placeholder="TRICARE Provider Number" class="form-control">
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<input type="text" name="usmle-number" placeholder="USMLE Number" class="form-control">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<input type="text" name="workers-compensation-number" placeholder="Workers Compensation Number" class="form-control">
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary">Registration</h4>
					<div class="d-flex align-items-center my-3">
				      <button type="button" class="btn btn-xs btn-toggle has-to-show" data-toshow="prof_ids_form" data-toggle="button" aria-pressed="false" autocomplete="off">
				        <div class="handle"></div>
				      </button>
				    	<label class="ms-2">Do/Did you have a registration number related to your practicing specialty? *</label>
					</div>
				</div>
				<div id="prof_ids_form" class="d-none">
					<%= render partial: 'provider_source_components/prof_registration_form'%>
				</div>
				<div class="col-lg-12 mb-3 d-flex justify-content-end px-0">
		        	<button class="btn btn-primary">Save Changes</button>
		    	</div>
		    </form>
			</div>
		</div>
	</div>
</div>


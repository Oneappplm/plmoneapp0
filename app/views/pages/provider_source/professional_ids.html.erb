				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary">Registration</h4>
					<div class="d-flex align-items-center my-3">
							<%= HtmlUtils.radio_toggle name: 'has_registration_number',
								label: 'Do/Did you have a registration number related to your practicing specialty? *',
								toshow: 'prof_ids_form'
							%>

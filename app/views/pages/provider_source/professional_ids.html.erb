		<div class="col-lg-9">
			<div class="row border border-4 p-3">
				<div class="col-lg-12">
					<%= render partial: "provider_source_components/header_title", locals: {title: "Professional IDs", icon: 'bi-person-badge-fill'}%>
					<%= render partial: "provider_source_components/progress_bar", locals: {percent: (@provider.professional_ids_progress)}%>
               <% steps = [['Registration IDs','active', custom_provider_source_path(page: 'professional_ids')],
                     ['Licensure','inactive', custom_provider_source_path(page: 'licensure')],
                     ['Other IDs and Cerfifications','inactive', custom_provider_source_path(page: 'other_ids')],
            ]%>
            <%= render partial: "provider_source_components/form_wizard", locals: {steps: steps}%>
				</div>
				<div class="col-lg-12 card py-3 my-3">
					<h4 class="fw-semibold text-secondary">NPI ID</h4>
					<div class="form-group">
						<label class="text-dark-grey">NPI Number</label>
						<input type="text" name="npi_number" class="form-control border-dark">
					</div>
				</div>
				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary">DEA</h4>
					<div class="d-flex align-items-center my-3">
									<%= HtmlUtils.radio_toggle name: 'has_dea_registration_number',
									label: 'Do/Did you have a DEA Registration Number *',
									toshow: 'dea_form'
								%>
									<input type="hidden" id="has_dea_registration_number" name="has_dea_registration_number" value="<%= @provider.fetch('has_dea_registration_number').nil? ? 'no' : @provider.fetch('has_dea_registration_number') %>">
					</div>
					<div id="dea_form" class="d-none">
						<%= render partial: 'provider_source_components/dea_form'%>
					</div>
				</div>
				<div class="col-lg-12 card py-3 mb-3">
					<h4 class="fw-semibold text-secondary mb-3">CDS</h4>
					<div class="d-flex align-items-center my-3">
							<%= HtmlUtils.radio_toggle name: 'has_cds_registration_number',
								label: 'Do/Did you have a CDS Registration Number? *',
								toshow: 'cds_form'
							%>
							<input type="hidden" id="has_cds_registration_number" name="has_cds_registration_number" value="<%= @provider.fetch('has_cds_registration_number').nil? ? 'no' : @provider.fetch('has_cds_registration_number') %>">
					</div>

				   <div class="<%= @provider.is_answer_yes?('has_cds_registration_number') ? '' : 'd-none'%>" id="cds_form">
						<%= render partial: 'provider_source_components/cds_form'%>
					</div>

					<div id="cds_tarea">
						<div class="row">
							<div class="col-lg-12">
								<label class="text-dark-grey">Please explain why you do not have a CDS Registration Number.</label>
								<textarea name="ps-cds-registration-number" class="form-control border-dark" rows="8"></textarea>
							</div>
						</div>
					</div>
				</div>

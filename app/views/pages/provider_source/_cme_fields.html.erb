<div class="col-lg-12 card py-3 mt-1 mb-3">
  <h4 class="fw-semibold text-secondary">CME/CEU Credit</h4>
  <div class="row mb-3">
    <div class="col-lg-6">
      <label class="text-dark-grey">Name of Course/Training<span class="text-danger">*</span></label>
      <input type="text" name="training" required class="form-control border-dark multi-field" placeholder="Type here..." value="<%= cme.training%>" data-model="cme" data-id="<%= cme.id %>">
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Month Attended<span class="text-danger">*</span></label>
      <select class="form-select border-dark multi-field" name="month_attended" data-model="cme" data-id="<%= cme.id %>">
        <option value="">Select option</option>
        <% month_options.each do |month| %>
          <option value="<%= month[0]%>" <%= cme.month_attended == month[0] ? 'selected=true' : '' %>><%= month[0]%></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <label class="text-dark-grey">Year Attended<span class="text-danger">*</span></label>
      <input type="text" name="year_attended" required class="form-control border-dark multi-field" placeholder="Type here..." value="<%= cme.year_attended%>" data-model="cme" data-id="<%= cme.id %>">
    </div>
    <div class="col-lg-6">
      <label class="text-dark-grey">Hours<span class="text-danger">*</span></label>
      <input type="text" name="hours" required class="form-control border-dark multi-field" placeholder="Type here..." value="<%= cme.hours%>" data-model="cme" data-id="<%= cme.id %>">
    </div>
  </div>
</div>
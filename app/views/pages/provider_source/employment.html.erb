<div class="content container-fluid ps-0">
	<%= render "provider_source_components/top_buttons"%>
	<div class="row">
		<div class="col-lg-3">
			<%= render "provider_source_components/sub_navbar"%>
		</div>
		<div class="col-lg-9">
			<div class="row border border-4 p-3">
				<!-- start of form header -->
				<div class="col-lg-12 mb">
					<div class="d-flex gap-2">
				 		<span class="bg-medium-grey circle d-flex justify-content-center align-items-center" style="width: 40px;height: 40px;">
				 			<!-- <i class="bi "></i> -->
				 			<i class="bi bi-arrow-counterclockwise text-white" style="font-size: 25px;"></i>
				 		</span>
				 		<div class="d-flex flex-column">
				 			<label class="text-dark-grey">Employment</label>
				 			<small>Please fill out 	all required fields</small>
				 		</div>
					</div>
				</div>
				<%#= render partial: "provider_source_components/progress_bar", locals: {percent: (@provider.work_history_progress)}%>
				<% steps = [['Military History','finished', custom_provider_source_path(page: 'work_history'), 'work_history_military_progress'],
							['Employment','active', custom_provider_source_path(page: 'employment'), 'work_history_employment_progress'],
							['Employment Gap','inactive', custom_provider_source_path(page: 'employment_gap'), 'work_history_employment_gap_progress'],
							['Professional References','inactive', custom_provider_source_path(page: 'prof_references'), 'professional_references_progress'],
							['Professional Organization','inactive', custom_provider_source_path(page: 'prof_organization'), 'professional_organization_progress'],
				]%>

        
        <%= render partial: "provider_source_components/progress_bar", locals: { steps: steps }%>
				<%= render partial: "provider_source_components/form_wizard", locals: {steps: steps}%>
				<div class="col-lg-12 my-3">
					<div class="alert alert-info alert-light-blue">
						<i class="bi bi-info-circle" style="font-size: 20px;"></i>
						<small>Minimum of five year of healthcare relevant work history is required. If you have practiced fewer than five years, please provide full relevant work history from the time of initial licensure. </small>
					</div>
				</div>
				<div class="row">
				<div class="col-lg-12">
								<div class="d-flex justify-content-between">
										<label class="text-dark-grey">Do you have a work history since completion of your education/training <span class="text-danger"> *</span></label>
									<div class="d-flex me-4 gap-2">
										<div class="gap-2">
											<input type="radio" name="has_work_history" class="radio-with-form" data-form='work_history' value="yes" checked='checked'>
											<span>YES</span>
										</div>	
										<div class="gap-2">
											<input type="radio" name="has_work_history" class="radio-with-form" data-form='work_history' value="no" >
											<span>NO</span>
										</div>
									</div>
								</div>
						    </div>
						
							<div class="<%= toggle_hide_current_provider_source('has_work_history', @provider) %>" id="work_history">
								<%= render "provider_source_components/employment_details_form" %>
							</div>
						</div>		
			</div>	
			</div>
		</div>
	</div>
</div>


<% if params[:add_new].present? or params[:remove_record]%>
<script>
  setTimeout(removeAddNewInURL, 3000);
  function removeAddNewInURL() {
    // this is added to remove the add_new parameter in URL to prevent creating
    // new association when page is reloaded
    history.pushState(null, null, '/provider-source?page=employment');
  }
</script>
<% end %>
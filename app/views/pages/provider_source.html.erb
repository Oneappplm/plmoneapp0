<div class="content container-fluid ps-0">
	<%= render "provider_source_components/top_buttons"%>
	<div class="row">
		<div class="col-lg-3">
			<%= render "provider_source_components/sub_navbar"%>
		</div>
		<div class="col-lg-9">
			<div class="row border border-4 p-3">
				<!-- start of form header -->
				<div class="col-lg-12">
					<div class="d-flex gap-2">
				 		<span class="bg-medium-grey circle d-flex justify-content-center align-items-center" style="width: 40px;height: 40px;">
				 			<i class="bi bi-person-plus-fill text-white" style="font-size: 25px;"></i>
				 		</span>
				 		<div class="d-flex flex-column">
				 			<label>General Information	</label>
				 			<small>Please fill out 	all required fields</small>
				 		</div>
					</div>
				</div>
				<!-- end of form header -->
				<!-- start of progress bar -->
				<div class="col-lg-12 my-3">
					<div class="d-flex justify-content-between align-items-center gap-3">
						<div class="flex-grow-1">
							<div class="d-flex align-items-center">
								<div class="d-block progress-bar">
									<!-- percentage can be placd here as an inline css but if there's another way it's better. -->
									<div class="bg-primary" style="width: 70%;"></div>
								</div>
							</div>
						</div>
						<span><small>70%</small></span>
					</div>
				</div>
				<!-- end of progress bar -->
				<!-- start of steps -->
				<!-- <div class="col-lg-12">
					steps here
				</div> -->
				<!-- end of steps -->
				<!-- start of form fields -->
				<div class="col-lg-12 my-3">
					<form>
						<div class="row">
							<div class="col-lg-6">
								<div class="row">
									<div class="col-lg-7">
										<input type="text" name="" placeholder="First Name *" class="form-control">
									</div>
									<div class="col-lg-5">
										 <input type="text" name="" placeholder="Middle Name" class="form-control">
									</div>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="row">
									<div class="col-lg-7">
										<input type="text" name="" placeholder="Last Name *" class="form-control">
									</div>
									<div class="col-lg-5">
										<select class="form-select" placeholder="Suffix">
											<option>Suffix</option>
											<option>Jr.</option>
											<option>Sr.</option>
											<option>III.</option>
											<option>IV.</option>
										</select>
									</div>
								</div>
							</div>
						</div>

						<div class="row my-3">
							<div class="col-lg-6">
								<input type="text" name="" placeholder="Degree Titles *" class="form-control">
							</div>
							<div class="col-lg-6"></div>
						</div>

						<div class="row my-3">
							<div class="col-lg-12">
								<select class="" id="multi-select" placeholder="State(s) or Practice *" multiple>
									<option>California</option>
									<option>Florida</option>
									<option>Texas</option>
								</select>
							</div>
						</div>

						<div class="row my-3">
							<div class="col-lg-12">
								<select class="form-select" placeholder="Primary Practitioner Type *">
									<option>Primary Practitioner Type *</option>
									<option></option>
									<option></option>
								</select>
							</div>
						</div>

						<div class="row my-3">
							<div class="col-lg-12">
								<input type="text" name="" class="form-control" placeholder="Other Names">
							</div>
						</div>

						<!--  start of divider -->
						<div class="row my-3">
							<div class="col-lg-12">
								<div class="d-flex align-items-center divider gap-3 ">
									<span class="line flex-grow-1 bg-medium-grey"></span>
									<div class="bg-medium-grey rounded px-3 py-2">
										<h6 class="my-0 text-secondary">PRIMARY RESIDENCE</h6>
									</div>
									<span class="line flex-grow-1 bg-medium-grey"></span>
								</div>
							</div>
						</div>
						<!-- end of divider -->

						<!-- start of search -->
						<div class="row my-3">
							<div class="input-group mb-3">
							  <input type="text" class="form-control" placeholder="Address Search">
							  <button class="btn btn-primary" type="button" id="inputGroupFileAddon03">
							  	<i class="bi bi-search mr-2"></i>
							  	<span class="fw-bold">SEARCH</span>
							  </button>
							  <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon03">
							  	<i class="bi bi-geo mr-2"></i>
							  	<span class="fw-bold">AUTOLOCATE</span>
							  </button>
							</div>
						</div>
						<!-- end of search -->

						<div class="row my-3">
							<div class="col-lg-12">
								<div class="alert alert-warning">
									<i class="bi bi-exclamation-triangle text-danger" style="font-size: 20px"></i>
									<label class="ml-3">Please enter your primary residence address here and not your Practice Location.</label>
								</div>
							</div>
						</div>

						<!--  -->
						<div class="row my-3">
							<div class="col-lg-6">
								<input type="text" class="form-control" placeholder="Country" name="">
							</div>
							<div class="col-lg-6"></div>
						</div>

						<div class="row my-3">
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="Adress Line 1 *">
							</div>
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="Adress Line 2">
							</div>
						</div>

						<div class="row my-3">
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="City">
							</div>
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="County">
							</div>
						</div>

						<div class="row my-3">
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="State">
							</div>
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="Zip Code">
							</div>
						</div>


						<div class="row my-3">
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="Telephone *">
							</div>
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="Fax Number">
							</div>
						</div>

						<div class="row my-3">
							<div class="col-lg-12">
								<div class="form-check">
									  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
									  <label class="form-check-label" for="flexCheckDefault">
									    Unlisted Number
									  </label>
								</div>
							</div>
						</div>

						<div class="row my-3">
							<div class="col-lg-6">
								<input type="text" class="form-control" name="" placeholder="Mobile Number">
							</div>
							<div class="col-lg-6">
								<div class="row">
									<div class="col-lg-6">
										<input type="text" name="" class="form-control" placeholder="Page Number">
									</div>
									<div class="col-lg-6">
										<input type="text" name="" class="form-control" placeholder="Ext">
									</div>
								</div>
							</div>
						</div>

						<!--  -->

					</form>
				</div>
				<!-- end of form fields -->
			</div>

		</div>
	</div>

</div>

<% content_for :js do %>
	<script>

		VirtualSelect.init({
		  ele: '#multi-select'
		  // options: myOptions
		});

	</script>
<% end %>
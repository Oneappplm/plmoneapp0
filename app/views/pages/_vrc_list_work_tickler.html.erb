<% content_for :js do %>
  <script>
    $(document).ready(function() {
      var directorsSelect = $('#directors');
      var selectedDirectorInput = $('#selectedDirector');
      var directorForm = $('#directorForm');

      // Function to set the selected value in the hidden input field and local storage
      function setSelectedValue() {
        var selectedValue = directorsSelect.val(); // Get the selected value from the dropdown
        selectedDirectorInput.val(selectedValue); // Set the selected value in the hidden input field

        // Store the selected value in local storage
        localStorage.setItem('selectedDirector', selectedValue);
      }

      // Fetch updated dropdown options via AJAX
      function fetchDirectorOptions() {
        $.ajax({
          url: '/virtual-review-committee/director_options', // Replace with your controller action
          method: 'GET',
          success: function(data) {
            // Replace the dropdown options with the updated ones
            directorsSelect.html(data);

            // Set the selected value in the hidden input field and local storage
            setSelectedValue();
          }
        });
      }

      // Call the function initially to populate dropdown options
      fetchDirectorOptions();

      // Handle change event of the dropdown
      directorsSelect.change(function() {
        // Set the selected value in the hidden input field and local storage when dropdown selection changes
        setSelectedValue();
        // Submit the form
        directorForm.submit();
      });

      // Set the selected value on page load from local storage
      var storedDirector = localStorage.getItem('selectedDirector');
      if (storedDirector) {
        directorsSelect.val(storedDirector);
        setSelectedValue();
      }
    });
  </script>
<% end %>



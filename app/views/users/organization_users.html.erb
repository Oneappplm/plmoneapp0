<div class="content container-fluid">
	<form>
	<div class="row mb-3">
		<div class="col-lg-6">
			<select class="form-select" name="client_profile">
				<option value="Medservant LLC">Medservant LLC</option>
			</select>
		</div>
	</div>
	<div class="row mb-3 bg-medium-grey rounded p-2 py-3">
		<div class="col-lg-12">
			<div class="row mb-3">
				<div class="col-lg-6">
					<select class="form-select" name="user_request">
						<option>Select from the following requests</option>
					</select>
				</div>
				<div class="col-lg-6">
					<select class="form-select" name="user_role">
						<option value="">Role</option>
						<option value="client_admin">Client Admin</option>
						<option value="client_staff">Client Staff</option>
						<option value="docsynch">DocSynch</option>
						<option value="medserver_admin">Medversant Admin</option>
						<option value="ncqagroup">NcqaGroup</option>
						<option value="npdgroup">NpdbGroup</option>
						<option value="superuser">SuperUser</option>
					</select>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-4">
					<input type="text" name="user_first_name" class="form-control" placeholder="First Name">
				</div>
				<div class="col-lg-2">
					<input type="text" name="user_middle_name" class="form-control" placeholder="Middle Name">
				</div>
				<div class="col-lg-4">
					<input type="text" name="user_last_name" class="form-control" placeholder="Last Name">
				</div>
				<div class="col-lg-2">
					<select class="form-select" placeholder="Suffix" name="client_suffix">
						<option>Suffix</option>
						<option>Jr.</option>
						<option>Sr.</option>
						<option>III.</option>
						<option>IV.</option>
					</select>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-6">
					<input type="text" name="user_username" class="form-control" placeholder="Username">
				</div>
				<div class="col-lg-6">
					<input type="password" name="user_password" class="form-control" placeholder="Password">
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-6">
					<select class="form-select" name="user_status">
						<option value="">Status</option>
						<option value="active">Active</option>
						<option value="inactive">Inactive</option>
					</select>
				</div>
				<div class="col-lg-6">
					<input type="password" name="user_password" class="form-control" placeholder="Confirm Password">
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12 d-flex justify-content-end gap-2">
					<button class="d-flex btn btn-primary btn-md">
						<i class="bi bi-arrow-left-short"></i>
						<span>Add New User</span>
					</button>
				</div>
			</div>
		</div>
	</div>
	</form>

	<div class="row my-5">
		<div class="col-lg-6">
			<form class="form_search_with_icon">
			<div class="">
				<input type="" name="user_search" class="form-control">
				<i class="bi bi-search"></i>
			</div>
			</form>
		</div>
		<div class="col-lg-12 mt-2">
		 		<div class="d-flex justify-content-between align-items-center">
		 			<div><strong>Search Results: 20</strong></div>

		 			<div class="d-flex gap-4 align-items-center">
		 				<div>
		 					<label>Show limit</label>
		 					<% per_page_limits = [5,10,15,20,25,30,35,40,45,50]%>
		 					<select name="per_page" class="border ms-2 px-1 <%= dark_mode %>" onchange="document.getElementById('per_page_selector').submit();">
		 						<% per_page_limits.each do |per_page| %>
		 							<% if per_page == @per_page.to_i%>
		 								<option selected><%= per_page %></option>
		 							<% else %>
		 								<option><%= per_page %></option>
		 							<% end %>
		 						<% end %>
		 					</select>
		 				</div>
		 				<div>

		 					<label>Page 2</label>
		 					<span class="border px-3">3</span>
		 				</div>
		 				<div>
		 				</div>
		 			</div>
		 		</div>
		 	</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<%= render "users_table"%>
		</div>
	</div>
</div>
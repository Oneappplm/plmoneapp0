<div class="modal fade" id="unlockAccountModal_<%= user.id %>" tabindex="-1" aria-labelledby="unlockAccountModalLabel_<%= user.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="unlockAccountModalLabel_<%= user.id %>">Confirm Unlock Account</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to unlock this account? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to 'Confirm', unlock_user_path(user), method: :patch, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

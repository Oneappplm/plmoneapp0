<div class="container" style="height: 100vh;">
  <div class="row d-flex justify-content-center align-items-center pt-2">
    <div class="col-lg-5 my-3">
      <div class="card  px-5">
        <div class="card-body">
          <div class="d-flex justify-content-center gap-2 align-items-center">
            <img src="<%= current_logo %>" style="height: 100%;" class="mt-3">
          </div>
          <div class="d-flex justify-content-start my-3">
            <h3>Set security question</h3>
          </div>

          <%= form_for(current_user, url: security_question_path, method: :patch) do |f| %>
            <div class="form-group my-3">
              <%= f.select :security_question, options_for_select([["Select security question", ""]] + User::SECURITY_QUESTIONS), { autofocus: true }, { class: 'form-select' } %>
            </div>
            <div class="form-group my-3">
              <%= f.text_field :security_answer, autofocus: true, class: 'form-control', placeholder: 'Security Answer' %>
            </div>

            <div class="actions d-flex flex-column gap-3 justify-content-center align-items-center my-3 mb-4">
              <%= f.submit "Save Security Question", class: 'btn btn-primary btn-lg p-3 fs-6' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

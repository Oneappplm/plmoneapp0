<div class="col-lg-12 mt-5">
  <% if results.present? %>
    <form id="license-download-form">
      <div class="d-flex justify-content-end mt-3 mb-3">
        <select id="bulk-download-format" class="form-select form-select-sm w-auto me-2">
          <option value="">Download Selected</option>
          <option value="pdf">PDF</option>
          <option value="csv">CSV</option>
        </select>
        <button type="submit" class="btn btn-primary btn-sm">Download</button>
      </div>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="text-white">
              <input type="checkbox" id="select-all-checkbox" />
            </th>
            <th class="text-white">License Number</th>
            <th class="text-white">Effective Date</th>
            <th class="text-white">Expiration Date</th>
            <th class="text-white">Renewal Date</th>
            <th class="text-white">License Type</th>
            <th class="text-white">No State License</th>
            <th class="text-white">State ID</th>
          </tr>
        </thead>
        <tbody>
          <% results.each do |license| %>
            <tr>
              <td>
                <input type="checkbox" class="license-checkbox" value="<%= license.license_number %>">
              </td>
              <td><%= license.license_number %></td>
              <td><%= license.license_effective_date&.strftime("%b %d, %Y") || "NA" %></td>
              <td><%= license.license_expiration_date&.strftime("%b %d, %Y") || "NA" %></td>
              <td><%= license.license_state_renewal_date || "NA" %></td>
              <td><%= license.license_type || "NA" %></td>
              <td><%= license.no_state_license || "NA" %></td>
              <td><%= license.state_id || "NA" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </form>
  <% else %>
    <p class="fs-5 text-center bg-warning py-2 fw-bold">No data found.</p>
  <% end %>
</div>

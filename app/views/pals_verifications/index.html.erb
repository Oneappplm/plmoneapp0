<div class="content container-fluid">
	<div class="row mb-3">
		<div class="col-lg-12">
			<h2>
				Pals Verification
			</h2>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label for="">Search by License Number</label>
			<%= form_with url: request.url, method: :get, html: { class: 'form_search_with_icon'} do |form| %>
			<div class="">
				<input type="text" name="license_number" value="<%= params[:license_number] %>" class="form-control">
				<i class="bi bi-search"></i>
			</div>
			<% end %>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-12">
			<table class="table table table-striped table-bordered table-responsive">
					<thead>
								<tr>
												<th scope="col" class="bg-primary text-white">Full Name</th>
												<th scope="col" class="bg-primary text-white">License Number</th>
												<th scope="col" class="bg-primary text-white">Board/Commission</th>
												<th scope="col" class="bg-primary text-white">License Type</th>
												<th scope="col" class="bg-primary text-white">Status</th>
												<th scope="col" class="bg-primary text-white">Address</th>
								</tr>
				</thead>
				<tbody>
					<% @pals.each do |pal| %>
						<tr>
							<td><%= "#{pal['FullName']}" %></td>
							<td><%= pal['LicenseNumber'] %></td>
							<td><%= pal['ProfessionType'] %></td>
							<td><%= pal['LicenceType'] %></td>
							<td><%= pal['Status'] %></td>
							<td><%= "#{pal['City']}, #{pal['State']} #{pal['zipcode']}" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
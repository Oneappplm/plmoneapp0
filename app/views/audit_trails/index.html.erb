<div class="content container-fluid">
  <div class="row mb-4">
    <div class="col-lg-12">
      <h1>Activity History</h1>
    </div>
  </div>

  <!-- Bootstrap tabs navigation -->
  <ul class="nav nav-tabs mb-3" id="activityTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link <%= params[:tab].blank? || params[:tab] == 'user' ? 'active' : '' %>" id="user-tab" href="<%= audit_trails_path(tab: 'user') %>" role="tab">
        User Activity
      </a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link <%= params[:tab] == 'admin' ? 'active' : '' %>" id="admin-tab" href="<%= audit_trails_path(tab: 'admin') %>" role="tab">
        Admin Security Logs
      </a>
    </li>
  </ul>

  <div class="tab-content" id="activityTabsContent">
    <!-- User Activity Tab Content -->
    <div class="tab-pane fade <%= params[:tab].blank? || params[:tab] == 'user' ? 'show active' : '' %>" id="user-content" role="tabpanel">
      <% if params[:tab].blank? || params[:tab] == 'user' %>
        <div class="row mb-2">
          <div class="col-lg-12">
            <code>
              NOTE: User, Provider & EnrollmentProvidersDetail are supported for displaying the SOURCE of the changes.
            </code>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <table class="table table-striped table-bordered table-responsive">
              <thead>
                <tr>
                  <th class="bg-primary text-white" width="25%">Source Info</th>
                  <th class="bg-primary text-white" width="70%">Changes</th>
                  <th class="bg-primary text-white">Date Created</th>
                </tr>
              </thead>
              <tbody>
                <% @audit_trails.order("created_at desc").each do |audit_trail| %>
                  <% next if audit_trail.empty_changes? %>
                  <tr>
                    <td>
                      <strong>Source: </strong> <%= audit_trail.display_source %> <br>
                      <strong>Source Type: </strong> <%= audit_trail.auditable_type %> <br>
                      <strong>Action Taken: </strong> <%= audit_trail.action %> <br>
                      <strong>Action By: </strong> <%= audit_trail.user&.full_name %> <br>
                    </td>
                    <td>
                      <% audit_trail.display_changes.each_with_index do |changes, index| %>
                        <p style="margin: 0; text-wrap: wrap !important;"><%= index + 1 %>.) <%= changes.html_safe %></p>
                      <% end %>
                    </td>
                    <td><%= audit_trail.created_at.strftime("%m/%d/%Y") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade <%= params[:tab] == 'admin' ? 'show active' : '' %>" id="admin-content" role="tabpanel">
      <% if params[:tab] == 'admin' %>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="bg-primary text-white">Time</th>
              <th class="bg-primary text-white">Activity</th>
              <th class="bg-primary text-white">Severity</th>
              <th class="bg-primary text-white">IP Address</th>
              <th class="bg-primary text-white">Details</th>
            </tr>
          </thead>
          <tbody>
            <% if @security_logs.present? %>
              <% @security_logs.each do |log| %>
                <tr>
                  <td><%= log.created_at.strftime("%m/%d/%Y %I:%M %p") %></td>
                  <td><%= log.activity %></td>
                  <td>
                    <% case log.severity %>
                    <% when 'low' %>
                      <span class="badge bg-info">Low</span>
                    <% when 'medium' %>
                      <span class="badge bg-warning">Medium</span>
                    <% when 'high' %>
                      <span class="badge bg-danger">High</span>
                    <% when 'critical' %>
                      <span class="badge bg-dark">Critical</span>
                    <% end %>
                  </td>
                  <td><%= log.ip_address %></td>
                  <td><%= log.details %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="text-center">No security logs found</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

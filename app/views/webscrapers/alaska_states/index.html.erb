<div class="content container-fluid">
	<div class="row mb-3">
		<%= render partial: 'webscrapers/links' %>
		<div class="col-lg-12">
			<h2>
				State of Alaska
			</h2>
			<p>Source: <code>https://www.commerce.alaska.gov/cbp/main/Search/Professional</code></p>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<%= form_with url: request.url, method: :get, html: { class: 'form_search_with_icon'} do |form| %>
			<div class="">
				<input type="text" name="search" value="<%= params[:search] %>" class="form-control">
				<i class="bi bi-search"></i>
			</div>
			<% end %>
		</div>
		<% if @alaska_states.count <= 0 %>
		<div class="col-lg-6 d-flex justify-content-end">
			<a href="<%= crawl_webscrapers_alaska_states_path %>" class="d-flex btn btn-primary btn-md">
				<span>Crawl</span>
			</a>
		</div>
		<% else %>
			<div class="col-lg-6 d-flex justify-content-end">
			<a href="<%= clear_webscrapers_alaska_states_path %>" class="d-flex btn btn-danger btn-md">
				<span>Clear Records</span>
			</a>
		</div>
		<% end %>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-12">
			<table class="table">
					<thead>
								<tr>
												<th scope="col" class="bg-primary text-white">Program</th>
												<th scope="col" class="bg-primary text-white">License Number</th>
												<th scope="col" class="bg-primary text-white">DBA</th>
												<th scope="col" class="bg-primary text-white">Owners</th>
												<th scope="col" class="bg-primary text-white">Status</th>
												<th scope="col" class="bg-primary text-white">License Expiration</th>
								</tr>
				</thead>
				<tbody>
					<%= render partial: 'alaska_state', collection: @alaska_states, as: :item %>
				</tbody>
			</table>

			<% if @alaska_states %>
			<div class="col-lg-12">
							<div class="d-flex justify-content-between bg-medium-grey rounded align-items-center py-3">
							<div class="page_info ms-3 text-black">
															<%= page_entries_info @alaska_states %>
							</div>
							<% if params[:per_page ].present? %>
											<%= will_paginate @alaska_states, :params =>  {per_page: @per_page }, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
							<% else %>
											<%= will_paginate @alaska_states, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
							<% end %>
							</div>
			</div>
			<% end %>

		</div>
	</div>
</div>
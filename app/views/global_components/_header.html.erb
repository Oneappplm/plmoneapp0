                    </div>
                    <div class="flex-grow-1 ms-3">
                      <div class="email-container">
                        <h5 class="mb-0"><%= current_user&.full_name %></h5>
                        <p class="card-text text-body email"><%= current_user&.email %></p>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="dropdown-divider"></div>
                <%= link_to 'Profile & Account', edit_user_path(current_user), class: 'dropdown-item' %>
                <% if current_user.super_administrator? %>
                  <a class="dropdown-item" href="/settings">Settings</a>
                <% end %>
                <div class="dropdown-divider"></div>
                <%= button_to(
                  "Log Out",
                  destroy_user_session_path,
                  method: :delete,
                  class: 'dropdown-item'
                ) %>
              </div>
            </div>
            <!-- End Account -->
          </li>
        </ul>
        <!-- End Navbar -->
      </div>
    </div>
  </div>
</header>

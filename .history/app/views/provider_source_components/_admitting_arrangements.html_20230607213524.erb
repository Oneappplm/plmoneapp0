<div class="bg-light bg-gradient p-3">
	<h4 class="fw-semibold text-secondary mb-3">Inpatient Coverage Plan</h4>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="text-dark-grey">Name of Admitting Physician/Practice/Clinic/Group</label>
			<input type="text" class="form-control border-dark" name="admitting-physician-practice-clinic-group">
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<label class="text-dark-grey">
				Facility Location *
			</label>
			<select class="form-select border-dark" name="admit_state">
	                     	<option value="">Select option</option>
	                     	<% @states.each do |state|%>
	                     		<option value="<%= state.alpha_code %>"><%= state.name %> - <%= state.alpha_code %></option>
	                     	<% end %>
	           </select>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-12">
			<label class="text-dark-grey">Facility Name*</label>
			<input type="text" class="form-control border-dark" name="facility-name">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">Address Line 1*</label>
			<input type="text" class="form-control border-dark" name="facility-address-line1">
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Address Line 2</label>
			<input type="text" class="form-control border-dark" name="facility-address-line2">
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-lg-6">
			<label class="text-dark-grey">City</label>
			<input type="text" class="form-control border-dark" name="facility-city">
		</div>
		<div class="col-lg-6">
			<label class="text-dark-grey">Zip Code *</label>
			<input type="text" class="form-control border-dark" name="facility-zipcode">
		</div>
	</div>
	<div class="row mb-3">
		<label class="text-dark-grey">Please explain your admitting arrangements.</label>
		<textarea class="form-control border-dark" rows="8" placeholder="2500 max characters" name="admitting-arrangements"></textarea>
	</div>

